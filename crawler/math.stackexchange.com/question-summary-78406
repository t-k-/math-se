\Leftrightarrow x^2 y + xyz + x^2 z + x y^2 + xyz + y^2 z + xyz + xz^2 + y z^2 \geq 9xyz
\Leftrightarrow x^2y-2xyz + yz^2 + x^2z-2xyz + yz^2 + xz^2-2xyz + xy^2 \geq 0
\Leftrightarrow y(x-z)^2 + z(x-y)^2 + x(y-z)^2 \geq 0
