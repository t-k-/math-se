\color{blue}{\mbox{(a)}}
x
p(x) = 1 + c_1 x
y(x) = \frac{c_1}{2}x^2 + x + c_2
\color{blue}{\mbox{(a)}}
 \color{blue}{\mbox{(a)}\quad xp^2 - 2yp + x + 2y=0} 
 (p^2 + 1)x + 2(1-p)y = 0 \qquad \Longrightarrow \qquad y = \frac{p^2+1}{2(p-1)}x 
 \frac{d y}{d x} = p = \frac{d}{dx}\left\{\frac{p^2+1}{2(p-1)}\right\}x + \frac{p^2+1}{2(p-1)}, 
 p - \frac{p^2+1}{2(p-1)} = \frac{p^2 - 2 p - 1}{2(p-1)^2}p'(x) x. 
 \frac{p'(x)}{p-1} = \frac{1}{x}, 
 y(x) = \frac{c_1}{2}x^2 + x + \frac{1}{c_1}. 
 \color{blue}{\mbox{(b)}\quad x^2p^2 + yp(2x+ y) + y^2 =0} 
p
 (x p + y)^2 + p y^2 = 0. 
 |x p + y| = (-p)^{1/2} |y|, 
 x p =  \left( (-p)^{1/2} - 1 \right)y. 
y = F(p) x
 \frac{p'}{p\left((-p)^{1/2} - 1\right)} = \frac{2}{x}. 
c_2
c_1 > 0
 \frac{1 - (-p)^{1/2}}{(-p)^{1/2}} = c_1 x 
 p = - \frac{1}{(1+c_1 x)^2}, 
 y(x) = \frac{1}{c_1(1+c_1 x)} + c_2. 
 y(x) = \frac{1}{c_1(1+c_1 x)}, 
 -\frac{1}{c_1} < x.  
\color{blue}{\mbox{(b)}}
y = u
v = xy
P
 \frac{d v}{d x} = x p + y 
 P = \frac{d v}{d u} = \frac{d v}{d x} \frac{d x}{d u} = \frac{x p + y}{p} 
 p = \frac{y}{x - P}. 
 x^2 + (x - P)(2x + y) + (x - P)^2 = 0 
 v = u P + P^2 
\color{blue}{\mbox{(c)}\quad (x^2+y^2)(1+p)^2-2(x+y)(1+p)(x+yp)+(x+yp)^2=0}
x + y = u
x^2 + y^2 = v
\color{blue}{\mbox{(b)}}
 P = \frac{d v}{d u} = \frac{d v}{d x}\frac{d x}{d u} = \frac{2 x + 2py}{1 + p}, 
 p = \frac{P - 2 x}{2 y - P}. 
 (x - y)^2 (P^2 + 4 v - 4 P u) = 0. 
\color{blue}{\mbox{(b)}}
v = xy
v' = x + py
P = \frac{d v}{d u} = \frac{x + y p}{p}
 (x + p y)^2 + p y^2 = 0. 
 \frac{v'^2}{p^2} + \frac{y^2}{p} = 0. 
 \frac{d v}{d u} = \frac{v'}{p} = \frac{d v}{d x}\frac{d x}{d y} \quad \Longrightarrow \quad u = y. 
 v = u P + P^2 
\color{blue}{\mbox{(c)}}
v = x^2 + y^2
v' = 2 x + 2 p y
 v - (x + y)\frac{v'}{1+p} + \frac{v'^2}{4 (1+p)^2} = 0 
 P = \frac{d v}{d u} = \frac{d v}{d x} \frac{d x}{d u} = \frac{2(x + y p)}{1 + p}  
 \frac{d u}{d x} = 1 + p \quad \Longrightarrow \quad u = x + y 
 4 v = 4 P u - P^2. 
