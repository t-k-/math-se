X = l_{2}
x \in X
x = \{\frac{1}{2^{i}} \}^{\infty}_{i=1}
M = \left\{ \{ \xi_{i} \} \in X : \sum_{i=1}^{\infty} \frac{1}{2^{i/2}}\xi_{i} = 0 \right\}
y \in M
\parallel x-y\parallel
M
h
h_i = \frac{1}{\sqrt{2}^i}
M = \{ y| \langle y, h \rangle = 0 \}
y \mapsto  \langle y, h \rangle
M
M
M^\bot = \text{sp} \{h \}
x
x = \lambda_M h + x_M
x_M \in M
y \in M
\|x-y\|^2 = \|\lambda h + x_M-y\|^2 = |\lambda_M|^2 \|h\|^2 + \|x_M-y\|^2
\hat{y} = x_M
\|x-\hat{y}\|^2 =|\lambda_M|^2 \|h\|^2
\|x-\hat{y}\| \leq \|x-y\|
y \in M
\hat{y} = x_M
x_M
\lambda_M
\langle x, h \rangle = \langle \lambda_M h + x_M, h \rangle = \lambda_M \|h\|^2
\hat{y} = x_M = x-\lambda_M h = x- \frac{\langle x, h \rangle}{\|h\|^2}h
\|h\|^2 = \sum_{i=1}^\infty h_i^2 = \sum_{i=1}^\infty \frac{1}{2^i} = 1
\langle x, h \rangle = \sum_{i=1}^\infty x_i h_i = \sum_{i=1}^\infty \frac{1}{2 i} \frac{1}{\sqrt{2}^i}
x \mapsto -\ln (1-x)
|x|<1
-\ln(1-x) = \sum_{i=1}^\infty \frac{x^i}{i}
\langle x, h \rangle = -\frac{1}{2} \ln (1-\frac{1}{\sqrt{2}})
\hat{y} = x+\frac{1}{2} \ln (1-\frac{1}{\sqrt{2}}) h
\langle x, h \rangle = \sum_{i=1}^\infty x_i h_i = \sum_{i=1}^\infty \frac{1}{2^i} \frac{1}{\sqrt{2}^i} = \sum_{i=1}^\infty  \frac{1}{(2\sqrt{2})^i} = \frac{1}{2\sqrt{2}-1}
\hat{y} = x- \frac{1}{2\sqrt{2}-1}h
