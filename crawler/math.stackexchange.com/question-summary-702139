\newcommand{\lcm}{\operatorname{lcm}}
(x,y) \in \Bbb{N}^2
 \begin{cases}         \lcm(x,y)=12\gcd(x,y) \\         x+y=105 \end{cases} 
\gcd(x,y)=d
\lcm(x,y)=m
d\mid x
d\mid y
d\mid(x+y)
d\mid 105
d \in \{1,3,5,7,15,21,35,45,105\}
12\mid m
 x = 2^{a_2}3^{a_3}5^{a_5} \cdots \qquad \qquad y = 2^{b_2}3^{b_3}5^{b_5} \cdots 
gcd(x,y) = 2^{\min(a_2,b_2)}3^{\min(a_3,b_3)}\cdots
lcm(x,y) = 2^{\max(a_2,b_2)}3^{\max(a_3,b_3)}\cdots
 \max(a_2,b_2) - \min(a_2,b_2) = 2 \qquad \qquad \max(a_3,b_3) - \min(a_3,b_3) = 1 
x = 12y
3x = 4y
x + y = {105}
 x + y = 105 \implies 3x + 3y = 315 \implies 7y = 315 \implies y = 45 
x = 60
