\begin{align}e_j\cdot v &= e_j\cdot\left(e_i-\frac{e_i\cdot u}{u\cdot u}e_i\right)\\ &= e_j\cdot e_i-\frac{e_i\cdot u}{u\cdot u}(e_j\cdot u)\\ &= -\frac{c_i}{u\cdot u}(e_j\cdot u)\\ &= \frac{c_ic_j}{u\cdot u}\\ &\ne0,\end{align}
\begin{align}v\cdot u &= \left(e_i-\frac{e_i\cdot u}{u\cdot u}u\right)\cdot u\\ &= e_i\cdot u-\frac{e_i\cdot u}{u\cdot u}(u\cdot u)\\ &= e_i\cdot u- e_i\cdot u\\ &= 0\\ &=\vec0\cdot u,\end{align}
