a<b
m := \frac{1}{2}(b-a)
a
b
U_a := \{ x \in \mathbb{R} : a-m < x < a+m\}
U_b := \{ x \in \mathbb{R} : b-m < x < b+m\}
U_a \cap U_b = \emptyset
U_a := \{ x \in \mathbb{R} : a-m/2 < x < a+m/2 \} \, , 
U_b := \{ x \in \mathbb{R} : b-m/2 < x < b+m/2 \} \, , 
\overline{U_a} \cap \overline{U_b} = \emptyset.
