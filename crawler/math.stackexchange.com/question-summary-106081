\eqalign{ \int \underbrace{\vphantom{(}e^{Bx}}_u \underbrace{\sin (Ax)\, dx}_{dv} &= \underbrace{-A^{-1}\cos(Ax)}_v \underbrace{e^{Bx}\vphantom{(}}_u -\int \underbrace{-A^{-1}\vphantom{(}}_v \underbrace{B\cos(Ax)e^{Bx}\,dx}_{du}\cr &= -A^{-1}\cos(Ax)e^{Bx}+A^{-1}B\Bigl[ \int \underbrace{e^{Bx}\vphantom{(}}_s  \underbrace{ \cos(Ax)\,dx}_{dw}\Bigr]  \cr            &= -A^{-1}\cos(Ax)   e^{Bx} +A^{-1}B\Bigl[  \underbrace{  A^{-1}\sin(Ax)}_w \underbrace{e^{Bx}\vphantom{(}}_s   - \int  \underbrace{A^{-1} \sin(Ax)}_w\underbrace{Be^{Bx}\vphantom{(}}_{ds}   \Bigr]  \cr  &= -A^{-1}\cos(Ax)e^{Bx}+A^{-2}B   \sin(Ax)e^{Bx}   -  A^{-2}B^2\int \sin(Ax)e^{Bx}  .     \cr  } 
\eqalign{\int \sin (nx)e^{inx}\, dx &= -n^{-1}\cos(nx)e^{inx}+n^{-2}(in)  \sin(nx)e^{inx}   -  n^{-2}(in)^2\int \sin(nx)e^{inx}      \cr &= {-e^{inx}  ( \cos(nx)- i    \sin(nx)) \over n } -i^2 \int \sin(nx)e^{inx}   \cr &= {-e^{inx}  e^{-inx} \over n } -i^2 \int \sin(nx)e^{inx}   \cr &= {-1 \over n } + \int \sin(nx)e^{inx}.    }  
