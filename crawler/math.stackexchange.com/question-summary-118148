 \max_{[0,1]}f(x)\le\frac{ab}{a+b}\tag{1} 
 \begin{align} \int_0^1|f''(x)|\,\mathrm{d}x &\ge\left|\int_0^1f''(x)\,\mathrm{d}x\right|\\[6pt] &=|f'(1)-f'(0)|\\[6pt] &=a+b\tag{2} \end{align} 
 \begin{align} \int_0^1\left|\frac{f''(x)}{f(x)}\right|\,\mathrm{d}x &\ge\frac{1}{\max\limits_{[0,1]}f(x)}\int_0^1|f''(x)|\,\mathrm{d}x\\ &\ge\frac{(a+b)^2}{ab}\\ &=\frac{(1+b/a)^2}{b/a}\\ &\ge4\tag{3} \end{align} 
