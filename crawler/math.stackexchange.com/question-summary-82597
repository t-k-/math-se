0\le { \sin^2x\over(1+x)^2}\le {1\over(1+x)^2}.
 \int_0^\infty {1\over(1+x)^2}\,dx 
 \eqalign{  \int  {1\over(1+x)^2}\, dx\buildrel{u=1+x}\over{ =}\int {1\over u^2} \, du={-1 \over 1+x}+C. } 
\eqalign{ \int_0^\infty  {1\over(1+x)^2}\, dx& =\lim_{b\rightarrow\infty}\int_0^b {1\over(1+x)^2}\, dx\cr  &=\lim_{b\rightarrow\infty} {-1 \over 1+x}\Bigl|_0^b\cr &=0-(-1)\cr &=1. } 
