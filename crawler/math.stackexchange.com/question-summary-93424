h
\begin{cases}  h=\sqrt{(x_1-a_1)^2+(y_1-b_1)^2} \\  h=\sqrt{(x_2-a_2)^2+(y_2-b_2)^2} \\  \sqrt {(b_2-b_1)^2+(a_2-a_1)^2}=\sqrt{(y_2-y_1)^2+(x_2-x_1)^2} \\  \frac{y_2-y_1}{x_2-x_1}=\frac{b_2-b_1}{a_2-a_1} \end{cases}
