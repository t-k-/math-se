 \begin{align} x_{n+1}-y_{n+1} &=\frac12\left(x_n+y_n\right)-\frac{2x_ny_n}{x_n+y_n}\\ &=\frac12\frac{(x_n-y_n)^2}{x_n+y_n}\tag{1} \end{align} 
 0\le x_{n+1}-y_{n+1}\le\frac12|x_n-y_n|\tag{2} 
 |x_n-y_n|\le\frac1{2^{n-1}}|x_1-y_1|\tag{3} 
 y_n\le y_{n+1}\le x_{n+1}\le x_n\tag{4} 
 \lim_{n\to\infty}x_n=\lim_{n\to\infty}y_n\tag{5} 
 x_{n+1}y_{n+1}=\frac12(x_n+y_n)\frac{2x_ny_n}{x_n+y_n}=x_ny_n\tag{6} 
 \lim_{n\to\infty}x_n=\lim_{n\to\infty}y_n=\sqrt{x_1y_1}\tag{7} 
