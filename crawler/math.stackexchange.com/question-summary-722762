 (a_i-a_j)(b_i-b_j)\ge0 \implies a_ib_i+a_jb_j\ge a_ib_j+a_jb_i. 
 \sum_{i=1}^n a_i\cdot\sum_{j=1}^n b_j =\sum_{i,j}a_ib_j=\frac12 \sum_{i,j}a_ib_j+a_jb_i \le\frac12 \sum_{i,j} a_ib_i+a_jb_j =n\sum_{i=1}^n a_ib_i. 
\bar a=\frac{1}{n}\sum_{i=1}^n a_i
\bar b=\frac{1}{n}\sum_{i=1}^n b_i
A=(a_1,\ldots,a_n)
B=(b_1,\ldots,b_n)
 \text{cov}[A,B]= \frac{1}{n}\sum_{i=1}^n(a_i-\bar a)(b_i-\bar b) =\left(\frac{1}{n}\sum_{i=1}^n a_ib_i\right)-\bar a \bar b \ge0 
a'_i=a_i+\alpha
b'_i=b_i+\beta
\text{cov}[A+\alpha,B+\beta]=\text{cov}[A,B]
\alpha=-a_n
\beta=-b_n
a'_1\ge \cdots\ge a'_n=0
