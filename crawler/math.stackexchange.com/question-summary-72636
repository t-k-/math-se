1^2 + 3^2+ 5^2 + \cdots + (2n-1)^2 = \frac{1}{3}n(2n-1)(2n+1)
P(n):\ 1^2 + 3^2 + 5^2 + \cdots + (2n-1)^2 = \frac{1}{3}n(2n-1)(2n+1)
n=n_1 = 1
n=n_0 = 1
P(1) = \frac{1}{3}{3} = (1)^2.
n=k
P(k+1)
P(k): 1^2 + 3^2 + 5^2 + \cdots + (2k-1)^2 = \frac{1}{3}k(2k-1)(2k+1).
P(k+1) = 1^1+3^2+5^2+\cdots+(2k+1)^2 = \frac{1}{3}(k+1)(2k+1)(2k+3)\tag{A}.
\begin{align*} 1^2 + 3^2 + 5^2 + \cdots + (2k+1)^2 &= 1^2+3^2+5^2+\cdots + (2k+1)^2\\ &= 1^2 + 3^2 + 5^2 + \cdots + (2k-1)^2 + (2k+1)^2\\ &= \frac{1}{3}k(2k-1)(2k+1) + (2k+1)^2\\ &=\frac{k(2k-1)(2k+1)+3(2k+1)^2}{3}\\ &=\frac{(2k+1)}{3}\left[k(2k-1) + 3(2k+1)\right]\\ &=\frac{(2k+1)}{3}\left[2k^2 - k + 6k + 3\right]\\ &=\frac{1}{3}(2k+1)(2k^2 +5k + 3)\\ &=\frac{1}{3}(2k+1)(k+1)\left(k+\frac{3}{2}\right) \tag{B} \end{align*}
=(1/3)(2k^2+5K+3) (2K+1) \tag{C}
n = k+1.
n >= 1
2k^2+5k+3=(k+1)(2k+3)
 \begin{align*} 1^2 + 3^2 + 5^2 + \cdots + (2k+1)^2 &= 1^2+3^2+5^2+\cdots + (2k+1)^2\\ &= 1^2 + 3^2 + 5^2 + \cdots + (2k-1)^2 + (2k+1)^2\\ &= \frac{1}{3}k(2k-1)(2k+1) + (2k+1)^2\\ &=\frac{k(2k-1)(2k+1)+3(2k+1)^2}{3}\\ &=\frac{(2k+1)}{3}\left[k(2k-1) + 3(2k+1)\right]\\ &=\frac{(2k+1)}{3}\left[2k^2 - k + 6k + 3\right]\\ &=\frac{1}{3}(2k+1)(2k^2 +5k + 3)\\ &=\frac{1}{3}(2k+1) \hspace{3pt}\left[(k+1)(2k+3)\right] \\ &= \frac{1}{3} (k+1)(2(k+1)-1)(2(k+1)+1) \end{align*} 
n=k+1
