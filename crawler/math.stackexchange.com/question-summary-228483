\;u_1a -v_1b + c = u_1' 
\;u_1b -v_1a + d = v_1' 
\;u_2a -v_2b + c = u_2'  
\;u_2b -v_2a + d = v_2' 
\,u_1,\, v_1,\, u_1', \,v_1',\, u_2, \,v_2, \,u_2',\, v_2'\,
a, b, c, d.
u_1a -v_1b + c = u_1' 
u_1b -v_1a + d = v_1' 
u_2a -v_2b + c = u_2'  
u_2b -v_2a + d = v_2' 
(u_1 -u_2)a - (v_1 - v_2)b = (u_1^\prime - u_2^\prime)
(u_1 -u_2)b - (v_1-v_2)a = (v_1^\prime - v_2^\prime)
^\prime (v_2 -v_1)a + (u_1-u_2)b = (v_1^\prime - v_2^\prime)
