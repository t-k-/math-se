 y-J=m(x-N),\qquad m=\frac{I-J}{M-N}\tag{1}. 
 (x-L)^{2}+(y-H)^{2}=d^{2}.\tag{2} 
 \left\{  \begin{array}{c} y-J=m(x-N) \\  (x-L)^{2}+(y-H)^{2}=d^{2}, \end{array}\tag{3} \right.  
 \left\{  \begin{array}{c} x=\frac{y-J+mN}{m} \\  \left(\frac{y-J+mN}{m}-L\right)^{2}+(y-H)^{2}=d^{2}.\tag{4} \end{array} \right.  
 y=\frac{1}{ m^{2}+1 }\left( -mN+Lm+J+m^{2}H\pm \sqrt{\Delta}\right), \tag{5} 
\begin{eqnarray*} \Delta &=&A+B, \\ \text{with  } A &=&-m^{4}N^{2}+m^{4}d^{2}-m^{4}L^{2}-m^{2}J^{2}-m^{2}H^{2}+d^{2}m^{2}-2m^{3}NH, \\ B &=&2Lm^{3}H+2Jm^{2}H+2m^{4}NL-2m^{3}JL+2m^{3}JN.\tag{6} \end{eqnarray*}
