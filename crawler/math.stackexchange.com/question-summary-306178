 \begin{align} \frac{\left(1+\frac1n\right)^{n+1}}{\left(1+\frac1{n+1}\right)^{n+2}} &=\left(\frac{n+1}{n}\right)^{n+1}\left(\frac{n+1}{n+2}\right)^{n+2}\\ &=\frac{n}{n+1}\left(\frac{(n+1)^2}{n(n+2)}\right)^{n+2}\\ &=\frac{n}{n+1}\left(1+\frac1{n(n+2)}\right)^{n+2}\\ &\ge\frac{n}{n+1}\left(1+\frac{n+2}{n(n+2)}\right)\\ &=1 \end{align} 
 \left(1+\frac1{n+1}\right)^{n+2}\le\left(1+\frac1n\right)^{n+1} 
 \begin{align} \frac{\left(1+\frac1{n+1}\right)^{n+1}}{\left(1+\frac1n\right)^n} &=\left(\frac{n+2}{n+1}\right)^{n+1}\left(\frac{n}{n+1}\right)^n\\ &=\frac{n+1}{n}\left(\frac{n(n+2)}{(n+1)^2}\right)^{n+1}\\ &=\frac{n+1}{n}\left(1-\frac1{(n+1)^2}\right)^{n+1}\\ &\ge\frac{n+1}{n}\left(1-\frac{n+1}{(n+1)^2}\right)\\ &=1 \end{align} 
