0 < x < 1
\operatorname{erf}\left(\frac{(1+x)\sqrt{\ln{(1+x)}}}{\sqrt{(1+x)^2 - 1}}\right) - \operatorname{erf}\left(\frac{\sqrt{\ln{(1+x)}}}{\sqrt{(1+x)^2 - 1}}\right) \geq \frac{x}{4}
\geq \frac{x}{c}
c
x_0 > 
y\in[0,2x_0]
f_{x_0}
  f_{x_0}\colon y > 0 \mapsto \operatorname{erf}\left(\frac{(1+y)\sqrt{\ln(1+x_0)}}{\sqrt{(1+x_0)^2-1}}\right) 
\begin{equation} f_{x_0}\!(x_0)-f_{x_0}\!(0) \geq \frac{x_0}{4} \tag{1} \end{equation}
\begin{equation} f_{x_0}\!(y)-f_{x_0}\!(0) \geq \frac{y}{4} \end{equation}
\begin{equation} \frac{f_{x_0}\!(y)-f_{x_0}\!(0)}{y} \geq \frac{1}{4} \tag{2} \end{equation}
