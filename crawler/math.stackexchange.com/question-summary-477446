(tD_t + \lambda)u = g
\lambda
u(t,z) = \int_{[0,1]} s^{\lambda - 1} g(st,z) ds. 
 \begin{align} \left(t \frac{\partial}{\partial t} + \lambda\right) u(t, z) &= g(t, z) \\ \frac{\partial u}{\partial t}(t, z) + \frac{\lambda}{t} u(t, z) &= \frac{1}{t} g(t, z). \end{align} 
 \exp \int_1^{t} \frac{\lambda}{\tau} \operatorname{d}\! \tau = t^\lambda 
 \begin{align} t^\lambda \frac{\partial u}{\partial t}(t, z) + \lambda t^{\lambda - 1} u(t, z) &= t^{\lambda - 1} g(t, z) \\ \frac{\partial}{\partial t} t^\lambda u(t, z) &= t^{\lambda - 1} g(t, z) \\ u(t, z) &= \frac{1}{t^\lambda} \int_C^t \tau^{\lambda - 1} g(\tau, z) \operatorname{d}\! \tau. \end{align} 
\lambda
\tau = s t
C = 0
 \begin{align} u(t, z) &= \frac{1}{t^\lambda} \int_0^t (s t)^{\lambda - 1} g(s t, z) \operatorname{d} (s t) \\ &= \frac{1}{t^\lambda} \int_0^t (s t)^{\lambda - 1} g(s t, z) \operatorname{d} (s t) \\ &= \frac{1}{t^\lambda} \int_{0 / t}^{t / t} t^\lambda s^{\lambda - 1} g(s t, z) \operatorname{d}\! s \\ &= \int_0^1 s^{\lambda - 1} g(s t, z) \operatorname{d}\! s. \end{align} 
