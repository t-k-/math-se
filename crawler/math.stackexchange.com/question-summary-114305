\begin{align*} \lim_{x\to c}\frac{(\frac{f}{g})(x) - (\frac{f}{g})(c)}{x-c} &= \lim_{x\to c}\frac{\frac{f(x)}{g(x)} - \frac{f(c)}{g(c)}}{x-c}\\ &= \lim_{x\to c}\frac{\quad\frac{f(x)g(c) - f(c)g(x)}{g(x)g(c)}\quad}{x-c}\\ &= \lim_{x\to c}\frac{f(x)g(c)-f(c)g(x)}{(x-c)g(x)g(c)}\\ &= \lim_{x\to c}\frac{f(x)g(c) - f(c)g(c) + f(c)g(c) - f(c)g(x)}{(x-c)g(x)g(c)}\\ &= \lim_{x\to c}\left(\left(\frac{f(x)-f(c)}{x-c}\right)\frac{g(c)}{g(x)g(c)} - \frac{f(c)}{g(x)g(c)}\left(\frac{g(x)-g(c)}{x-c}\right)\right)\\ &= \left(\lim_{x\to c}\frac{f(x)-f(c)}{x-c}\right)\left(\lim_{x\to c}\frac{1}{g(x)}\right)\\&\qquad\quad - \left(\lim_{x\to c}\frac{f(c)}{g(x)g(c)}\right)\left(\lim_{x\to c}\frac{g(x)-g(c)}{x-c}\right)\\ &= f'(c)\left(\frac{1}{g(c)}\right) - \left(\frac{f(c)}{[g(c)]^2}\right)g'(c)\\ &= \frac{f'(c)g(c) - f(c)g'(c)}{[g(c)]^2}. \end{align*}
