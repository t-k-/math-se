Y_t = e^{-2t} (Y_0 + 4 \int_0^t e^{2s}d B_s )
 dY_t = -2 Y_t dt + 4dB_t 
Z_t = Y_0 + 4 \int_0^t \mathrm{e}^{2s} \mathrm{d}B_s
\mathrm{d}Z_t = 4 \mathrm{e}^{2 t} \mathrm{d} B_t
Z_0 = Y_0
Y_t = \mathrm{e}^{-2 t} Z_t
    \mathrm{d}Y_t = \left( \mathrm{e}^{-2t} \right)^\prime Z_t \, \mathrm{d}t + \mathrm{e}^{-2 t} \mathrm{d} Z_t = \left(-2 \underbrace{\mathrm{e}^{-2t} Z_t}_{Y_t} \right) \mathrm{d}t + 4 \mathrm{d} B_t 
\mathrm{d}S_t = \mu \, S_t\,\mathrm{d}t + \sigma \, S_t\,\mathrm{d}W_t
\mathrm{d}S_t = \mu \, S_t\,\mathrm{d}t + \sigma \, \mathrm{d}W_t
\mu =-2
\sigma=4
