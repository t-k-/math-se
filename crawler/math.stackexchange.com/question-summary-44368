\begin{align*} A&= \left(\begin{array}{cc}1&c\\0&d\end{array}\right)\\ A^2 &= \left(\begin{array}{cc}1&c\\0&d\end{array}\right)\left(\begin{array}{cc}1&c\\0&d\end{array}\right) = \left(\begin{array}{cc}1 & c+cd\\0&d^2\end{array}\right).\\ A^3 &= \left(\begin{array}{cc} 1&c+cd\\ 0 &d^2\end{array}\right) \left(\begin{array}{cc} 1 & c\\ 0 & d\end{array}\right) = \left(\begin{array}{cc} 1 & c+cd+cd^2\\ 0 & d^3 \end{array}\right).\\ A^4 &= \left(\begin{array}{cc} 1&c+cd+cd^2\\ 0 & d^3 \end{array}\right)\left(\begin{array}{cc} 1 & c\\0 & d\end{array}\right) = \left(\begin{array}{cc} 1 & c + cd + cd^2 + cd^3\\ 0 & d^4 \end{array}\right). \end{align*}
