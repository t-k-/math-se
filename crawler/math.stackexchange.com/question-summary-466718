\dfrac{\partial}{\partial r} r \dfrac{\partial \phi}{\partial r} + r \dfrac{\partial^2 \phi}{\partial z^2} = 0.
(\Delta_r \phi)(r,z) = \phi(r+1,z)-\phi(r,z),
(\nabla_r \phi)(r,z) = \phi(r,z) - \phi(r-1,z),
(\Delta_z \phi)(r,z) = \phi(r,z+1)-\phi(r,z),
(\nabla_z \phi)(r,z) = \phi(r,z) - \phi(r,z-1).
(\Delta_r \nabla_r \phi)(r,z) = \Delta_r [u(r,z)-u(r-1,z)] = u(r+1,z) - 2u(r,z) + u(r-1,z)
(\Delta_z \nabla_z \phi)(r,z) = u(r,z+1) - 2u(r,z) + u(r,z-1)
2 \pi ( m+ \frac{1}{2}) \Delta_r \phi (m,n) - 2 \pi (m - \frac{1}{2}) \Delta_r \phi(m,n) + 2 \pi m(\Delta_z \nabla_z \phi)(m,n)=0.
\pi
(m + \frac{1}{2}) \Delta_r \phi(m,n) + \frac{1}{2} \Delta_r \phi(m,n) - m \nabla_r \phi(m,n) + m (\Delta_z \nabla_z \phi)(m,n)=0,
h=k=1
\left(r \frac{\partial^2}{\partial r^2} +\frac{\partial}{\partial r} +r \frac{\partial^2}{\partial z^2}\right)\phi(r,z) = 0.
\begin{eqnarray*} \frac{\partial^2\phi(r,z)}{\partial r^2}     &\rightarrow& \phi(m+1,n)-2\phi(m,n)+\phi(m-1,n) \\ \frac{\partial\phi(r,z)}{\partial r}     &\rightarrow& \frac{1}{2}(\phi(m+1,n)-\phi(m,n))+\frac{1}{2}(\phi(m,n)-\phi(m-1,n)) \\     &=& \frac{1}{2}(\phi(m+1,n)-\phi(m-1,n)) \\ \frac{\partial^2\phi(r,z)}{\partial z^2}     &\rightarrow& \phi(m,n+1)-2\phi(m,n)+\phi(m,n-1).  \end{eqnarray*}
