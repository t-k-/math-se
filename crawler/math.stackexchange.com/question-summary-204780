max(X,Y)
min(X,Y)
 \begin{array}{} \mathrm{P}(\max(X,Y)=2)=\frac34\qquad\text{and}\qquad\mathrm{P}(\max(X,Y)=1)=\frac14\\ \mathrm{P}(\min(X,Y)=2)=\frac14\qquad\text{and}\qquad\mathrm{P}(\min(X,Y)=1)=\frac34\\ \end{array} 
 \mathrm{E}(\max(X,Y))=\frac74\qquad\text{and}\qquad\mathrm{E}(\min(X,Y))=\frac54 
 \begin{align} \mathrm{P}(\max(X,Y)\min(X,Y)=4)=\mathrm{P}(\min(X,Y)=2)&=\frac14\\ \mathrm{P}(\max(X,Y)\min(X,Y)=2)\hphantom{\ =\mathrm{P}(\min(X,Y)=2)}&=\frac12\\ \mathrm{P}(\max(X,Y)\min(X,Y)=1)=\mathrm{P}(\max(X,Y)=1)&=\frac14\\ \end{align} 
 \mathrm{E}(\max(X,Y)\min(X,Y))=\frac94 
 \begin{align} &\mathrm{Cov}(\max(X,Y),\min(X,Y))\\ &=\mathrm{E}(\max(X,Y)\min(X,Y))-\mathrm{E}(\max(X,Y))\mathrm{E}(\min(X,Y))\\ &=\frac1{16} \end{align} 
W=\min\{X,Y\}
Z=\max\{X,Y\}
\mathrm{E}[WZ]-\mathrm{E}[W]\mathrm{E}[Z]
W=1
X=Y=2
\mathrm{Pr}(W=1)=\frac34
\mathrm{Pr}(W=2)=\frac14
\mathrm{E}[W]=\frac34\cdot1+\frac14\cdot2=\frac54\;.
