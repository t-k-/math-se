\begin{eqnarray} a_k&=&\frac{(1+2/\sqrt3)\sqrt3^k+(1-2/\sqrt3)(-\sqrt3)^k}2\\ &=&\frac{\sqrt3^k+(-\sqrt3)^k}2+\sqrt3^{k-1}+(-\sqrt3)^{k-1}\;.\\ \end{eqnarray} 
