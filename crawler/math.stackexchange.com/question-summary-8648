\langle \sum_{j=1}^n \langle v,u_j \rangle u_j, \sum_{k=1}^n \langle w,u_k \rangle u_k \rangle =\sum_{j=1}^n \langle v,u_j \rangle \sum_{k=1}^n \langle u_j, \langle w, u_k \rangle u_k \rangle
R={u_1, u_2,..., u_n}
\langle v,u_j\rangle
\langle w,u_k\rangle
\alpha_j = \langle v,u_j\rangle
\beta_k = \langle w,u_k\rangle
\left\langle \sum_{j=1}^n\langle v,u_j\rangle u_j, \sum_{k=1}^{n}\langle w,u_k\rangle u_k\right\rangle = \left\langle \sum_{j=1}^n \alpha_ju_j,\sum_{k=1}^n\beta_k u_k\right\rangle.
