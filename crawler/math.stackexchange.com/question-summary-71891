 \begin{align} 10^{5} &=  100000\\ 10^{4} &=  10000\\ 10^{3} &=  1000\\ 10^{2} &=  100\\ 10^{1} &=  10\\ 10^{0} &=  1\\ 10^{-1} &= .1 = 1/10\\ 10^{-2} &= .01 = 1/100\\ 10^{-3} &= .001 = 1/1000\\ 10^{-4} &= .0001 = 1/10000\\ 10^{-5} &= .00001 = 1/100000 \end{align} 
