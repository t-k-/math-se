 \begin{align} \cos(\pi/4-y) &= \frac{1}{\sqrt{2}}\cos(y)+\frac{1}{\sqrt{2}}\sin(y)\\ &=\frac{1}{\sqrt{2}}+\frac{1}{\sqrt{2}}(\sin(y)+\cos(y)-1)\\ &=\frac{1}{\sqrt{2}}+x\tag{1} \end{align} 
 2\sqrt{2}x+2x^2=\sin(2y)\tag{2} 
 (1-x^2)^{-\frac{1}{2}}=\sum_{k=0}^\infty\binom{2k}{k}\frac{x^{2k}}{4^k}\tag{3} 
 \sin^{-1}(x)=\sum_{k=0}^\infty\frac{1}{2k+1}\binom{2k}{k}\frac{x^{2k+1}}{4^k}\tag{4} 
 \begin{align} \cos^{-1}\left(\frac{1}{\sqrt{2}}+x\right) &=\frac{\pi}{4}-y\\ &=\frac{\pi}{4}-\frac{1}{2}\sin^{-1}(2\sqrt{2}x+2x^2)\\ &=\frac{\pi}{4}-\frac{1}{2}\sum_{k=0}^\infty\frac{1}{2k+1}\binom{2k}{k}\frac{(2\sqrt{2}x+2x^2)^{2k+1}}{4^k}\\ &=\frac{\pi}{4}-\sum_{k=0}^\infty\frac{1}{2k+1}\binom{2k}{k}(\sqrt{2}x+x^2)^{2k+1}\tag{5} \end{align} 
