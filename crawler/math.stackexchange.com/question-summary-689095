\begin{align} 	\vartheta_2(q) &= q^{1/4}\sum_{n\in\mathbb{Z}} q^{n(n+1)} &	\vartheta_3(q) &= \sum_{n\in\mathbb{Z}} q^{n^2} &	\vartheta_4(q) &= \sum_{n\in\mathbb{Z}} (-q)^{n^2} \end{align}
\vartheta_3^2
\vartheta_4^2
q\mapsto q^2
\begin{align} 	k(q) &= \frac{\vartheta_2^2(q)}{\vartheta_3^2(q)} &	k'(q) &= \frac{\vartheta_4^2(q)}{\vartheta_3^2(q)} &	K\left(k(q)\right) &= \frac{\pi}{2}\vartheta_3^2(q) \end{align}
\begin{align} 	k(-q) &= \pm\mathrm{i}\frac{k(q)}{k'(q)} &	k'(-q) &= \frac{1}{k'(q)} \\	k(q) &= \pm\frac{2\sqrt{k(q^2)}}{1+k(q^2)} &	k'(q) &= \frac{1-k(q^2)}{1+k(q^2)} \\\therefore\quad 	k(-q) &= \pm\mathrm{i}\frac{2\sqrt{k(q^2)}}{1-k(q^2)} &	k'(-q) &= \frac{1+k(q^2)}{1-k(q^2)} \end{align}
\begin{align} 	K\left(k(-q)\right) &= 	k'(q)\,K\left(k(q)\right) \\	K\left(k(q)\right) &= 	\left(1+k(q^2)\right) K\left(k(q^2)\right) \\\therefore\quad 	K\left(k(-q)\right) &= 	\left(1-k(q^2)\right) K\left(k(q^2)\right) \end{align}
