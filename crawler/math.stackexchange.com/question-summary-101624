\sum\limits_{n=1}^\infty {1\over 2^n}=1
S_n=\sum\limits_{m=1}^n{1\over2^m}.
 S_n={1\over 2}+{1\over 2^2}+\cdots+{1\over 2^n}. 
 {1\over 2} S_n = {1\over 2^2}+{1\over 2^3}+\cdots+{1\over 2^{n+1}} 
 {1\over 2} S_n+{1\over2} =\underbrace{{1\over 2}+ {1\over 2^2}+{1\over 2^3}+\cdots+ +{1\over 2^n}}_{S_n}+{1\over 2^{n+1}} 
 {1\over 2} S_n+{1\over2} =S_n+{1\over 2^{n+1}}. 
 {1\over2}-{1\over 2^{n+1}}={1\over2}S_n 
 S_n=1-{1\over 2^n}. 
