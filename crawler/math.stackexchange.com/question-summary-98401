\begin{align*} \left| N \cup \bigcup_{g\in G}H^g\right| &= \left| N \cup \bigcup_{n\in N}H^n\right|\\ &= |N| + |N|(|H|-1)\\ &= |N| + |N||H|-|N|\\ &= |N||H|\\ &=|G|, \end{align*}
