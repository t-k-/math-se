\begin{align} 4^2 &= 16 = 1 \\ 4^4 &= (4^2)^2 = 1^2 \\ 4^8 &= (4^4)^2 = 1^2 \\ &... \\ 4^{512} &= 1 \\ \end{align}
4^{1007}
\begin{align} 4^{1007}    &= 4^{512} + 4^{256} + 4^{128} + 4^{64} + 4^{32} + 4^8 + 4^4 + 4^2 + 4  \\   &= 1 + 1 + 1 + 1 + 1 + 1 + 1 + 1 + 1 \mod 5 \\   &= 9 \\   &= 4 \mod 5   \end{align}
4^{1008}
\begin{align} 4^{1008}   &= 4^{512} + 4^{256} + 4^{128} + 4^{64} + 4^{32} + 4^{16} \\   &= 1 + 1 + 1 + 1 + 1 + 1 \\   &= 6 \\   &= 1 \mod 5 \\ \end{align}
