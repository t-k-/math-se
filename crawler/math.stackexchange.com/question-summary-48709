 \begin{eqnarray} M_0 = 0, &\hspace{10mm} &\Delta M_t = M_t - M_{t-1} = X_t - E(X_t|\mathcal F_{t-1}) \\ A_0 = 0, &\hspace{10mm} &\Delta A_t = A_t - A_{t-1} = E(X_t|\mathcal F_{t-1}) - X_{t-1} \end{eqnarray} 
