\begin{align*} \frac{d}{dx}\left(\frac{2x}{1+x^2}\right) &= \frac{(1+x^2)(2x)' - 2x(1+x^2)'}{(1+x^2)^2}\\ &= \frac{2(1+x^2) - 2x(2x)}{(1+x^2)^2}\\ &= \frac{2 + 2x^2 - 4x^2}{(1+x^2)^2}\\ &= \frac{2(1-x^2)}{(1+x^2)^2}. \end{align*}
