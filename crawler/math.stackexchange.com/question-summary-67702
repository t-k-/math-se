 \begin{align} \frac{\mathrm{d}}{\mathrm{d}x}\frac{1}{2}\sin^{-1}\left(\frac{2x}{1+x^2}\right) &=\frac{1}{2}\frac{1}{\sqrt{1-\left(\frac{2x}{1+x^2}\right)^2}}\frac{\mathrm{d}}{\mathrm{d}x}\frac{2x}{1+x^2}\\ &=\frac{1}{2}\frac{1+x^2}{|1-x^2|}\frac{2(1+x^2)-2x(2x)}{(1+x^2)^2}\\ &=\frac{1}{2}\frac{1+x^2}{|1-x^2|}\frac{2(1-x^2)}{(1+x^2)^2}\\ &=\frac{\operatorname{sgn}(1-x^2)}{1+x^2}\tag{1} \end{align} 
