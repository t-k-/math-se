t,s
\epsilon > 0
|t - s| < \epsilon
||t| -|s|| < \epsilon
||t| -|s|| \leq |t - s|
t
s
|s| - |t| \leq |t - s|
 \big||t|-|s|\big| = \begin{cases} |t| - |s| & \mbox{if } |s| \le |t|\\ |s| - |t| & \mbox{if } |t| < |s| \end{cases} 
 \big||t|-|s|\big| = |t| - |s| \le |t - s| \quad \mbox{if}\quad |s| \le |t| 
 \big||t|-|s|\big| = |s| - |t| \le |s - t| = |t - s| \quad \mbox{if}\quad |t| \le |s| 
