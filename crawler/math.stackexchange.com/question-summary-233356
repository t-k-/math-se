\textbf A=\textbf A_{n\times n}=\begin{pmatrix}a_{1,1}&\dots&a_{1\times n}\\\vdots&\ddots&\vdots\\a_{n\times1}&\dots&a_{n\times n}\end{pmatrix},\qquad\textbf B=\textbf B_{n\times n}=\begin{pmatrix}b_{1,1}&\dots&b_{1\times n}\\\vdots&\ddots&\vdots\\b_{n\times1}&\dots&b_{n\times n}\end{pmatrix}
\textbf A +\textbf B=\begin{pmatrix}a_{1,1}+b_{1,1}&\dots&a_{1\times n}+b_{1\times n}\\\vdots&\ddots&\vdots\\a_{n\times1}+b_{n\times1}&\dots&a_{n\times n}+b_{n\times n}\end{pmatrix}
\textbf A -\textbf B=\begin{pmatrix}a_{1,1}-b_{1,1}&\dots&a_{1\times n}-b_{1\times n}\\\vdots&\ddots&\vdots\\a_{n\times1}-b_{n\times1}&\dots&a_{n\times n}-b_{n\times n}\end{pmatrix}
\textbf A \circ\textbf B=\begin{pmatrix}a_{1,1}\times b_{1,1}&\dots&a_{1\times n}\times b_{1\times n}\\\vdots&\ddots&\vdots\\a_{n\times1}\times b_{n\times1}&\dots&a_{n\times n}\times b_{n\times n}\end{pmatrix}
