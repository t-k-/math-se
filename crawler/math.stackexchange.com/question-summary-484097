 r = 4 \mathbf i + 5 \mathbf j + 6 \mathbf k + t (\mathbf i + 2 \mathbf j + 2 \mathbf k) 
 r = -3 \mathbf i + 3 \mathbf j - 8 \mathbf k + t (3 \mathbf i + 2 \mathbf j + 6 \mathbf k) 
 4 + 2t = -3 + 3t
 5 + 2t = 3 + 2t
 6 + 2t = -8 + 6t
