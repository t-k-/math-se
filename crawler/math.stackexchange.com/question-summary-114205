\eqalign{ E[E[X|Y]]&= \sum_y E[X|Y=y]\cdot P[Y=y]\cr  &=      E[X|Y=0]\cdot P[Y=0]+ E[X|Y=1]\cdot P[Y=1]                      \cr  &={10\over11}\cdot {11\over18}+{4\over7}\cdot{7\over18}={14\over18}; } 
E[Y]=E[E[Y|X]]
