A,B
\text{Minkowski}(A,B) = \text{ CH } \{x: x = a - b \text{ for } a \in A, b \in B\}
a,b
A=\text{conv}(\{a_1,\dotsc,a_n\})
B=\text{conv}(\{b_1,\dotsc,b_m\})
A
B
A
B
A+B
\text{conv}(A+B) = \text{conv}(A)+\text{conv}(B)
\subseteq
A\subseteq\text{conv}(A)
B\subseteq\text{conv}(B)
A+B\subseteq\text{conv}(A)+\text{conv}(B)
\text{conv}(A)+\text{conv}(B)
\text{conv}(A+B)\subseteq\text{conv}(A)+\text{conv}(B)
\supseteq
x\in\text{conv}(A)+\text{conv}(B)
\lambda_i > 0
\mu_j > 0
\sum_{i=1}^n \lambda_1 = 1
\sum_{j=1}^m \mu_j = 1
a_i\in A
b_j\in B
a_i+b_j\in A+B
\sum_{i=1}^n \sum_{j=1}^m \lambda_i \mu_j = \big(\sum_{i=1}^n \lambda_i\big) \big(\sum_{j=1}^m \mu_j\big) = 1\cdot1 = 1
x\in\text{conv}(A+B)
 x = \sum_{i=1}^n \lambda_i a_i + \sum_{j=1}^m \mu_j b_j 
 x = \sum_{i=1}^n \lambda_i \Big(\sum_{j=1}^m \mu_j\Big) a_i + \sum_{j=1}^m \mu_j \Big(\sum_{i=1}^n \lambda_i\Big) b_j = \sum_{i=1}^n \sum_{j=1}^m \lambda_i \mu_j (a_i+b_j) 
