 \begin{align} \sqrt{a} + \sqrt{b} + \sqrt{c} &\ge ab + bc + ca \\ \dfrac{a}{\sqrt{a}} + \dfrac{b}{\sqrt{b}} + \dfrac{c}{\sqrt{c}} &\ge ab + bc + ca \\ \dfrac{a \sqrt{bc} + b \sqrt{ac} + c \sqrt{ab}}{\sqrt{abc}} &\ge ab + bc + ca \end{align} 
