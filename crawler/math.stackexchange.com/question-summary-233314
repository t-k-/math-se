E[Y^2 | X=x] = \int_0^{2x} \dfrac{y^2}{2x}\ dy = \dfrac{4x^2}{3}
E[Y^2] = E[E[Y^2|X]] = E[4 X^2/3] = (4/3) E[X^2] = 2/3
\sigma_Y^2 = E[Y^2] - E[Y]^2 = 2/9
E[XY] = E[X E[Y|X]] = E[X^2] = 1/2
\text{Cov}(X,Y) = E[XY] - E[X] E[Y] = 1/18
\rho = \dfrac{\text{Cov}(X,Y)}{\sigma_X \sigma_Y} = \dfrac{1}{2}
