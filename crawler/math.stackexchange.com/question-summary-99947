\ds{x_{0}\equiv{M \over 2},\quad      x_{n+1}\equiv\half\,\pars{x_{n} + {M \over x_{n}}}.\qquad M \geq 0.}
\ds{y_{n} = {x_{n} \over \root{M}}\quad\imp\quad y_{n + 1} = \half\pars{y_{n} + {1 \over y_{n}}}\,,\quad y_{0} = {\root{M} \over 2}}
 y_{n + 1} = {\pars{y_{0} + 1}^{2^{n + 1}} + \pars{y_{0} - 1}^{2^{n + 1}} \over \pars{y_{0} + 1}^{2^{n + 1}} - \pars{y_{0} - 1}^{2^{n + 1}}} 
