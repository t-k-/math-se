x>0,y>0,z>0
x+y+z=1
(1+x)(1+y)(1+z)\ge 8(1-x)(1-y)(1-z)
(1+x)(1+y)(1+z)\ge 8(1-x)(1-y)(1-z) \\ \implies  (1+x)(1+y)(1+z)\ge 8(y+z)(x+z)(x+y)
(1+x)(1+y)(1+z) \ge 8(1-x)(1-y)(1-z) \Leftrightarrow 
(2x+y+z)(x+2y+z)(x+y+2z) \ge 8(y+z)(x+z)(x+y)
a=x+y, b=x+z, c=y+z
(a+b)(a+c)(b+c) \ge 8abc \,,
a+b \ge 2 \sqrt{ab}
a+c \ge 2 \sqrt{ac}
b+c \ge 2 \sqrt{bc}
2\sqrt{(1-y)(1-z)}\le 1-y+1-z=1+x \,.
2\sqrt{(1-x)(1-z)}\le 1+y \,.
2\sqrt{(1-x)(1-y)}\le 1+z \,.
t=(x+y)(y+z)(x+z)\le\left(\dfrac{2(x+y+z)}{3}\right)^3=\dfrac{8}{27}
(1-x)(1-y)\ge 0
(1+x)(1+y)\ge2(x+y)
