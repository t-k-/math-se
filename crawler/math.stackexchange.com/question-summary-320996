 k^2(|z|^2-z\bar{z}_1-\bar{z}z_1+|z_1|^2)=l^2(|z|^2-z\bar{z}_2-\bar{z}z_2+|z_2|^2). 
 (k^2-l^2)|z|^2-z(k^2\bar{z}_1-l^2\bar{z}_2)-\bar{z}(k^2z_1-l^2z_2)+k^2|z_1|^2-l^2|z_2|^2=0 
 |z|^2-z\frac{k^2\bar{z}_1-l^2\bar{z}_2}{k^2-l^2}-\bar{z}\frac{k^2z_1-l^2z_2}{k^2-l^2}=-\frac{k^2|z_1|^2-l^2|z_2|^2}{k^2-l^2}. 
 |z-\frac{k^2z_1-l^2z_2}{k^2-l^2}|^2=\left|\frac{k^2z_1-l^2z_2}{k^2-l^2}\right|^2-\frac{k^2|z_1|^2-l^2|z_2|^2}{k^2-l^2} 
 |z-\frac{k^2z_1-l^2z_2}{k^2-l^2}|=\frac{kl|z_1-z_2|}{|k^2-l^2|}. 
