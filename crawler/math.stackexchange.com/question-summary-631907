 \begin{align}      \int_{0}^{\infty}(ik)^{-\alpha}e^{-ikx}dk      & = \int_{0}^{\infty}(i(-ik))^{-\alpha}e^{-i(-ik)x}dk  \\     & = \int_{0}^{\infty}k^{-\alpha}e^{-kx}dk \\     & = \int_{0}^{\infty}(kx)^{-\alpha}e^{-kx}d(kx) x^{-1+\alpha} \\     & = \int_{0}^{\infty}u^{-\alpha}e^{-u}du\; x^{-1+\alpha} = \Gamma(1-\alpha)x^{-1+\alpha}. \end{align} 
