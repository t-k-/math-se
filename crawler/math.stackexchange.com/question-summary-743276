\begin{cases} I_{1}-I_{2}-I_{G}=0\\ I_{3}+I_{G}-I_{4}=0\\ I_{2}+I_{4}-I=0\\ R_{1}I_{1}+R_{G}I_{G}-R_{3}I_{3}=0\\ R_{2}I_{2}-R_{4}I_{4}-R_{G}I_{G}=0\\ E=R_{3}I_{3}+R_{4}I_{4} \end{cases}
