 \begin{align} x_n&=a_n-b_n\\    &=\frac{a_n^2-b_n^2}{a_n+b_n}\\    &=\frac{a_{n-1}b_{n-1}-\frac{1}{4}(a_{n-1}+b_{n-1})^2}{a_n+b_n}\\    &=\frac{-\frac{1}{4}(a_{n-1}-b_{n-1})^2}{a_n+b_n}\\    &\le0 \end{align} 
 \begin{align} |b_n^2-a_n^2|&=\left|\frac{1}{4}(a_{n-1}+b_{n-1})^2-a_{n-1}b_{n-1}\right|\\            &=\frac{1}{4}|b_{n-1}-a_{n-1}|^2\tag{1} \end{align} 
 \begin{align} \left|\frac{b_n^2-a_n^2}{b_{n-1}^2-a_{n-1}^2}\right| &=\frac{1}{4}\left|\frac{(b_{n-1}-a_{n-1})^2}{b_{n-1}^2-a_{n-1}^2}\right|\\ &=\frac{1}{4}\left|\frac{b_{n-1}-a_{n-1}}{b_{n-1}+a_{n-1}}\right|\\ &\le\frac{1}{4}\tag{2} \end{align} 
