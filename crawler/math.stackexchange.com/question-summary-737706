(\hat{\theta} − θ) = [\hat{\theta} − E(\hat{\theta})] + [E(\hat{\theta}) − θ] = [\hat{\theta} − E(\hat{\theta})] + B(\hat{\theta})
(\hat{\theta}) = E[(\hat{\theta} − θ)^2] = V(\hat{\theta}) + (B(\hat{\theta}))^2
(\hat{\theta}) = E[(\hat{\theta} − θ)^2] = E[([(\hat{\theta}-E(\hat{\theta})]+[E(\hat{\theta})-{\theta}])^2] = E[([\hat{\theta} - E(\hat{\theta})] + B(\hat{\theta}))^2] = E[[\hat{\theta} - E(\hat{\theta})]^2+2B(\hat{\theta})[\hat{\theta}-E(\hat{\theta})]+B(\hat{\theta})^2] = E[[\hat{\theta} - E(\hat{\theta})]^2+2(E(\hat{\theta}) - \theta)E[\hat{\theta}-E(\hat{\theta})]+E[(E(\hat{\theta}) - \theta)^2] 
 \begin{align} (\hat\theta-\theta)^2&=(\hat\theta-{\rm E}[\hat\theta]+{\rm E}[\hat\theta]-\theta)^2\\ &=(\hat\theta-{\rm E}[\hat\theta])^2+({\rm E}[\hat\theta]-\theta)^2+2(\hat\theta-{\rm E}[\hat\theta])({\rm E}[\hat\theta]-\theta) \end{align} 
 {\rm E}[(\hat\theta-\theta)^2]=\mathrm{V}(\hat\theta)+\mathrm{B}(\hat\theta)^2 
 {\rm E}[2(\hat\theta-{\rm E}[\hat\theta])({\rm E}[\hat\theta]-\theta)]=0. 
