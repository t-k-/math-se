\begin{array}{c|ccc} & A & B & C\\ \hline A & p_1 & q_1 & r_1\\ B & p_2 & q_2 & r_2\\ C & p_3 & q_3 & r_3\\ \end{array}
_{n+1} = p_1A_n + p_2B_n+p_3C_n
_{n+1} = q_1A_n + q_2B_n+q_3C_n
_{n+1} = r_1A_n + r_2B_n+r_3C_n
\rightarrow \infty
_0 = B_0 = C_0
\eqalign{A&=p_1A+p_2B+p_3C\cr B&=q_1A+q_2B+q_3C\cr C&=r_1A+r_2B+r_3C\cr}
