n-1
x_1^2 + \dots + x_i^2 + \dots + x_n^2 = 1,
a_1x_1^2 + \dots + a_ix_i^2 + \dots + a_nx_n^2 \leq a_2,
1=a_1 < a_2 < \dots < a_n
n
\int_0^{\ell_2} dx_2 \int_0^{\ell_3(x_2)} dx_3 \dots \int_0^{\ell_n(x_2,\dots,x_{n-1})} \frac{dx_n}{\sqrt{(1-x_2^2-\dots - x_n^2)}},
\ell_2 = 1
\ell_3(x_2) = \sqrt{\frac{(a_2-a_1) - (a_2-a_1)x_2^2}{a_3-a_1}}
\ell_4(x_2, x_3) = \sqrt{\frac{(a_2-a_1) - (a_2-a_1)x_2^2 - (a_3-a_1)x_3^2}{a_4-a_1}}
\ell_i(x_2, \dots, x_{i-1}) = \sqrt{\frac{1}{a_i-a_1}\left((a_2-a_1) - \sum_{j=2}^{i-1}(a_j-a_1)x_j^2\right)}
\sin^{-1}\left(\sqrt{\frac{(a_2-a_1) - \sum_{j=2}^{n-1}(a_j-a_1)x_j^2}{(a_n-a_1)(1-\sum_{j=2}^{n-1}x_j^2)}}\right)
n
