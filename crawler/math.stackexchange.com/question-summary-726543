\mathfrak{m,n,p}
\mathfrak{m^{n+p}=m^n\cdot m^p}
M^{N_1\cup N_2}
M^{N_1}\times M^{N_2}
M=\mathfrak{m}
N_1=\mathfrak{n}
N_2=\mathfrak{p}
N_1\cap N_2=\emptyset
f\colon N_1\cup N_2\to M
f|_{N_i}\colon N_i\to M
M^{N_1\cup N_2}\to M^{N_1}\times M^{N_2}
f\mapsto (f|_{N_1},f|_{N_2})
(f,g)\in M^{N_1}\times M^{N_2}
N_1\cap N_2=\emptyset
h\colon N_1\cup N_2\to M
 h(x)=\begin{cases} f(x) &&\text{if }x\in N_1,\\ g(x) &&\text{if }x\in N_2. \end{cases} 
(f,g)\mapsto h
M^{N_1\cup N_2}\simeq M^{N_1}\times M^{N_2}
