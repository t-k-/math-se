a+b+c+d = 2
\dfrac{a^2}{(a^2+1)^2}+\dfrac{b^2}{(b^2+1)^2}+\dfrac{c^2}{(c^2+1)^2}+\dfrac{d^2}{(d^2+1)^2}\le \dfrac{16}{25}
a,b,c,d \ge 0
0 \le a \le b \le c \le d
a+b+c+d=2
(48a-4)(a^2+1)^2-125a^2 = (2a-1)^2(12a^3+11a^2+32a - 4) \ge 0
a \ge \frac{1}{8}
32a-4 \ge 0
12a^3+11a^2
\dfrac{a^2}{(a^2+1)^2} \le \dfrac{48a-4}{125}
b,c,d
\sum\limits_{a,b,c,d} \dfrac{a^2}{(a^2+1)^2} \le \sum\limits_{a,b,c,d} \dfrac{48a-4}{125}=\dfrac{80}{125}=\dfrac{16}{25}
a < \frac{1}{8}
(540x + 108)(x^2+1)^2 - 2197x^2 = (3x-2)^2(60x^3+92x^2+216x+27) \ge 0
x \ge 0
\sum\limits_{x \in \{b,c,d\}} \dfrac{x^2}{(x^2+1)^2} \le \sum\limits_{x \in \{b,c,d\}} \dfrac{540x+108}{2197}=\dfrac{108}{169}-\dfrac{540a}{2197}
\dfrac{a^2}{(a^2+1)^2} < a^2 < \dfrac{a}{8} < \dfrac{540a}{2197}
\sum\limits_{a,b,c,d} \dfrac{a^2}{(a^2+1)^2} \le \dfrac{108}{169} < \dfrac{16}{25}
a=b=c=d=\dfrac{1}{2}
y,z,t
 \frac{x^2}{(1+x^2)^2} + \frac{y^2}{(1+y^2)^2} + \frac{z^2}{(1+z^2)^2} + \frac{t^2}{(1+t^2)^2} + \lambda(x+y+z+t-2) 
 0 = -\frac{2x(x^2-1)}{(1+x^2)^3} + \lambda, 
 \frac{x(x^2-1)}{(1+x^2)^3} = \frac{y(y^2-1)}{(1+y^2)^3} = \frac{z(z^2-1)}{(1+z^2)^3} = \frac{t(t^2-1)}{(1+t^2)^3} 
x\neq y
x,y < 1
x,y,z,t\in \{u,v\}
 \frac{1^2}{(1+1^2)^2} + \frac{1^2}{(1+1^2)^2}+0+0 =\frac 12;\\ \frac{(1/2)^2}{(1+(1/2)^2)^2} + \frac{(1/2)^2}{(1+(1/2)^2)^2}+ \frac{(1/2)^2}{(1+(1/2)^2)^2} + \frac{(1/2)^2}{(1+(1/2)^2)^2} = \frac {16}{25}. 
