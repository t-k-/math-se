K = \{ v_1, ... , v_n, w_1, ... , w_k \} \ ; \ L=\{ v_1, ... , v_n, u_1, ... , u_l \} \ ; \\ K\cup L = \{ v_1, ... , v_n, w_1, ... , w_k,u_1,...,u_l \}
w = a_1v_1 + ... + a_nv_n + a'_1w_1 +...+ a'_kw_k\\ u=a_1v_1 + ... + a_nv_n + a'_1u_1 +...+ a'_lu_l\\ w + u= a_1v_1 + ... + a_nv_n + a'_1w_1 +...+ a'_kw_k + b_1v_1 + ... + b_nv_n + b'_1u_1 +...+ b'_lu_l = (a_1+b_1)v_1 + ... + (a_n+b_n)v_n + a'_1w_1 +...+ a'_kw_k+ b'_1u_1 +...+ b'_lu_l
\text{span}\{K \cup L\}= c_1v_1 +...+c_nv_n +c'_1w_1 +...+c'_kw_k +c''_1u_1+...+c''_1u_l
\text{span}\{K \cup L\} = w + u
