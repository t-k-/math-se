d(a_m+b_m,a_n+b_n)=\|(a_m+b_m)-(a_n+b_n)\|\leq\|a_m-a_n\|+\|b_m-b_n\|
\begin{align*} d(a_m+b_m,a_n+b_n) &\leq d(a_m+b_m,a_n+b_m) + d(a_n+b_m,a_n+b_n) \\ &= d(a_m,a_n) + d(b_m,b_n) \end{align*}
