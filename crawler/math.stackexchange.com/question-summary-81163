 \begin{align} \int_a^bg(x)\delta(f(x))\;\mathrm{d}x &=\int_{f(a)}^{f(b)}g(f^{-1}(x))\delta(x)\;\mathrm{d}f^{-1}(x)\\ &=\int_{f(a)}^{f(b)}g(f^{-1}(x))\delta(x)\;\frac{\mathrm{d}x}{f'(f^{-1}(x))}\\ &=\frac{g(f^{-1}(0))}{f'(f^{-1}(0))}\\ &=\frac{g(c)}{f'(c)} \end{align} 
