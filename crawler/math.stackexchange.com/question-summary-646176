\vec{x}_a - \vec{p} \parallel \vec{x}_b - \vec{p} \parallel \vec{x} - \vec{p}
\begin{cases} \vec{a}_1\cdot(\vec{x_a} - \vec{p}) &= \alpha_1 - \vec{a}_1 \cdot \vec{p}\\ \vec{a}_2\cdot(\vec{x_a} - \vec{p}) &= \alpha_2 - \vec{a}_2 \cdot \vec{p} \end{cases} \implies  \left[ (\alpha_1 - \vec{a}_1 \cdot \vec{p})\vec{a}_2 -  (\alpha_2 - \vec{a}_2 \cdot \vec{p})\vec{a}_1 \right] (\vec{x}_a - \vec{p}) = 0 
\begin{cases} \vec{b}_1\cdot(\vec{x_b} - \vec{p}) &= \beta_1 - \vec{b}_1 \cdot \vec{p}\\ \vec{b}_2\cdot(\vec{x_b} - \vec{p}) &= \beta_2 - \vec{b}_2 \cdot \vec{p} \end{cases} \implies  \left[ (\beta_1 - \vec{b}_1 \cdot \vec{p})\vec{b}_2 -  (\beta_2 - \vec{b}_2 \cdot \vec{p})\vec{b}_1 \right] (\vec{x}_b - \vec{p}) = 0 
\begin{cases} \vec{A}\cdot(\vec{x} - \vec{p}) &= 0\\ \vec{B}\cdot(\vec{x} - \vec{p}) &= 0\\ \end{cases}
\begin{align} \vec{A} &= (\alpha_1 - \vec{a}_1 \cdot \vec{p})\vec{a}_2 -  (\alpha_2 - \vec{a}_2 \cdot \vec{p})\vec{a}_1 = (-6,15,12)\\ \vec{B} &= (\beta_1 - \vec{b}_1 \cdot \vec{p})\vec{b}_2 -  (\beta_2 - \vec{b}_2 \cdot \vec{p})\vec{b}_1 = (-2,30,4) \end{align}
\begin{cases}  -6(x-7) + 15(y-1) + 12(z-1) &= 0\\ -2(x-7) + 30(y-1) + 4(z-1)  &= 0 \end{cases} \quad\iff\quad \begin{cases} 2x - 5y - 4z &= 5\\ x - 15y - 2z &= -10 \end{cases}
