\begin{align*} \sum\limits_{k=1}^n a_{k,n+1-k} &= \sum\limits_{k=1}^n \left(a_{k,1} + n(d_1-d) + ((n+1)d-d_1)k-dk^2\right)\\ &= \sum\limits_{k=1}^n a_{k,1} + \sum\limits_{k=1}^n n(d-d_1) + \sum\limits_{k=1}^n ((n+1)d-d_1)k - \sum\limits_{k=1}^n dk^2\\ &= \sum\limits_{k=1}^n a_{k,1} + n^2(d-d_1) + ((n+1)d-d_1)\sum\limits_{k=1}^n k - d\sum\limits_{k=1}^n k^2. \end{align*}
\sum\limits_{k=1}^n k = \dfrac12n(n+1)
\sum\limits_{k=1}^n k^2 = \dfrac16n(n+1)(2n+1)
\begin{align*} \sum\limits_{k=1}^n a_{k,n+1-k} &= \sum\limits_{k=1}^n a_{k,1} + n^2(d-d_1) + \frac12((n+1)d-d_1)n(n+1) - \frac16dn(n+1)(2n+1)\\ &= \sum\limits_{k=1}^n a_{k,1} + d\left(n^2 + \frac12n(n+1)^2 - \frac16n(n+1)(2n+1)\right) - d_1\left(n^2 + \frac12n(n+1)\right)\\ &= \sum\limits_{k=1}^n a_{k,1} + \frac{d}6\left(6n^2 + 3n(n+1)^2 - n(n+1)(2n+1)\right) - \frac{d_1}2(3n^2+n)\\ &= \sum\limits_{k=1}^n a_{k,1} + \frac{d}6\left(6n^2 + (3n^3+6n^2+3n) - (2n^3+3n^2+n)\right)-\frac{d_1}2(3n^2+n)\\ &= \sum\limits_{k=1}^n a_{k,1} + \frac{d}6(n^3+9n^2+2n)-\frac{d_1}2(3n^2+n)\\ &= \sum\limits_{k=1}^n a_{k,1} + \frac{d}6 n^3 + \frac{3d-3d_1}{2}n^2 + \frac{2d-3d_1}{6}n. \end{align*}
