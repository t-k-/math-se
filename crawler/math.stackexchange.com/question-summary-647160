\vec{n}\cdot \vec{x}  = d_1 
\vec{n}\cdot \vec{x}=d_2
\displaystyle\frac{\left|d_1-d_2\right|}{\left\|\vec{n}\right\|}
\vec{n}
x_k
k=1,2
x_k = \alpha_k n + p_k
p_k \bot n
x_k
\langle x_k, n\rangle = d_k
\alpha_k = {d_k \over \|n\|^2}
\|x_1-x_2\| = \sqrt{ ({d_1-d_2 \over \|n\|})^2+ \|p_1-p_2\|^2 }
p_1=p_2
{ |d_1-d_2| \over \|n\|}
\vec{x}_1
1
\vec{x}_2
2
|Proj_{\vec{n}}(\vec{x}_2-\vec{x}_1)| = \dfrac{|(\vec{x}_2 - \vec{x}_1)\cdot\vec{n}|}{||\vec{n}||}
\vec{x}_1\cdot{\vec{n}} = d_1
\vec{x}_2\cdot{\vec{n}} = d_2
