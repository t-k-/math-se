 min_x 1/2 ||y-x||^2_2 + \lambda||x||_1 
 0 = - (y-x) + \lambda S 
 S_i = sign(X_i) \ if X_i = 0
 S_i \in [-1,1] \ if \  X_i = 0 
i^{th} 
 y -x = \lambda S_i \ \ i  = 1 .....r
 |y-x| < \lambda  
 X_i = 0
|y-x| = \lambda
 S_i = +- 1 
\lambda \ge 0
y \in \mathbb{R}
\phi_y: \mathbb{R} \to \mathbb{R}
\phi_y(x) = \frac{1}{2}(x-y)^2 + \lambda |x|
\min_x \sum_i \phi_{y_i}(x_i)
\min_x \phi_y(x)
x \in \mathbb{R}
\lim_{x \to \infty} \phi_y(x) = \infty
\alpha(x) = |x|
\partial \alpha(x) = \begin{cases} \{ \operatorname{sgn} x \}, & x \neq 0 \\ [-1,1], & x = 0\end{cases}
\hat{x}
0 \in \partial \phi_y(\hat{x})
0 \in \{\hat{x}-y\} + \lambda \partial \alpha(\hat{x})
y=\hat{x}+\lambda \xi
\xi \in \partial \alpha(\hat{x})
\hat{x} = 0
|y| \le \lambda
\hat{x} \neq 0
y = \hat{x} + \lambda \operatorname{sgn} \hat{x} = \operatorname{sgn} \hat{x} (|x|+\lambda)
|y| > \lambda
|y| \le \lambda
\hat{x} = 0
|y|>\lambda
\hat{x} = y-\lambda \operatorname{sgn} \hat{x}=y-\lambda \operatorname{sgn} y= (\operatorname{sgn}y)(|y|-\lambda)
\hat{x} =(\operatorname{sgn}y)\max(|y|-\lambda,0)
\hat{x}_i =(\operatorname{sgn}y_i)\max(|y_i|-\lambda,0)
