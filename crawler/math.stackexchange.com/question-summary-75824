 \begin{align} \left|\int_{\gamma_{\theta}} f(z) \, dz - \int_{\gamma_0} f(z) \, dz\right| & = \left|\int_0^1 (f(\gamma_{\theta}(t)) e^{i \theta} - f(\gamma_0(t)) ) \, dt  \right| \\ & \leq \int_0^1 |f(\gamma_{\theta}(t)) e^{i \theta} - f(\gamma_0(t)) | dt \\ & \leq \int_0^1 |f(\gamma_{\theta}(t)) e^{i \theta} - f(\gamma_0(t)) e^{i\theta} + f(\gamma_0(t)) e^{i\theta}  - f(\gamma_0(t)) | dt \\ & \leq \int_0^1 (|f(\gamma_{\theta}(t)) e^{i \theta} - f(\gamma_0(t)) e^{i\theta}| + |f(\gamma_0(t)) e^{i\theta}  - f(\gamma_0(t)) |) dt \\ & \leq \int_0^1 (|f(\gamma_{\theta}(t)) - f(\gamma_0(t))| + |f(\gamma_0(t))| |e^{i\theta} - 1|) dt. \end{align} 
