g_{1}(y_{0}+y_{1}+\ldots+y_{N})+g_{2}(y_{0}+\ldots+y_{N})+\ldots+g_{N}(y_{0}+\ldots +y_{N})
y_{0}(g_{1}+g_{2}+\ldots+g_{N})+y_{1}(g_{1}+\ldots+g_{N})+\ldots+y_{N}(g_{1}+\ldots+g_{N})
[g_{1}y_{N}]+[g_{2}y_{N}+g_{2}y_{N-1}]+\ldots+[g_{N}y_{N}+g_{N}y_{N-1}+\ldots g_{N}y_{1}]
y_{1}g_{N}+y_{2}(g_{N-1}+g_{N})+\ldots+y_{N}(g_{1}+g_{2}+\ldots+g_{N})
 \begin{align} \sum_{k=1}^N \sum_{n^\prime=0}^N g_k y_n & = \sum_{\substack{1\leq n\leq N\\ 1\leq k \leq N}} g_k y_n  \\ & = \sum_{(k,n)\in G} g_k y_n  \\ \end{align} 
G=\{ (k,n) \in\mathbb{N}\times\mathbb{N} : 1\leq n\leq N, 1\leq k \leq N\}
 \begin{align} G_1 &=\{ (k,n) \in\mathbb{N}\times\mathbb{N} : 1\leq n\leq k, 1\leq k \leq N, \} \\      &   \\ G_2 &= \{ (k,n) \in\mathbb{N}\times\mathbb{N} : k+1\leq n\leq N, 1\leq k \leq N\}.\\ \end{align} 
G=G_1\cup G_2
G_1\cap G_2=\emptyset
  \begin{align} \sum_{k=1}^N \sum_{n=0}^N g_k y_n  & = \sum_{(k,n)\in G} g_k y_n  \\ & = \sum_{(k,n)\in G_1} g_k y_n + \sum_{(k,n)\in G_2} g_k y_n  \\ & = \sum_{\substack{1\leq n\leq k\\ 1\leq k \leq N}} g_k y_n  + \sum_{\substack{k+1\leq n\leq N\\ 1\leq k \leq N}} g_k y_n  \\ & = \sum_{1\leq k \leq N}\;\;\sum_{1\leq n\leq k} g_k y_n  + \sum_{1\leq k \leq N}\;\;\sum_{k+1\leq n\leq N} g_k y_n  \\ & = \sum_{1\leq k \leq N}\;\;\sum_{1\leq n\leq k} g_k y_n  + \sum_{1\leq k \leq N}\;\;\sum_{1\leq n-k\leq N-k} g_k y_n  \\ \end{align} 
n=n^\prime+k
 \begin{align} \sum_{k=1}^N \sum_{n=0}^N g_k y_n  & = \sum_{1\leq k \leq N}\;\;\sum_{1\leq n\leq k} g_k y_n  + \sum_{1\leq k \leq N}\;\;\sum_{1\leq n^\prime \leq N-k} g_{k^\prime} y_{n^\prime+k}  \\ \end{align} 
n=n^\prime
 \begin{align} \sum_{k=1}^N \sum_{n^\prime=0}^N g_k y_n  & = \sum_{1\leq k \leq N}\;\;\sum_{1\leq n^\prime\leq k} g_k y_{n^\prime}  + \sum_{1\leq k \leq N}\;\;\sum_{1\leq n^\prime \leq N-k} g_{k^\prime} y_{n^\prime+k}  \\ \end{align} 
