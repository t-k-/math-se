 \begin{align} L(\mu,\sigma) & = \text{constant} \cdot\prod_{i=1}^n \left(\sigma^{-1} \exp\left(\frac{-1}{2}\left(\frac{x_i-\mu}{\sigma}\right)^2\right)\right) \\[8pt] & = c\sigma^{-n}\exp\left(\frac{-1}{2\sigma^2}\sum_{i=1}^n(x_i-\mu)^2\right) \\[8pt] & = c\sigma^{-n}\exp\left(\frac{-1}{2\sigma^2}\left(n(\bar x - \mu)^2+\sum_{i=1}^n(x_i-\bar x)^2 \right)\right) \\[8pt] & = c\sigma^{-n}\exp\left(\frac{-1}{2\sigma^2}\left(n(\bar x - \mu)^2+ns^2 \right)\right). \end{align} 
 L(\bar x, s) = cs^{-n}\exp\left(\frac{-1}{2s^2}ns^2\right) = cs^{-n}\exp\left(\frac{-n}{2}\right) . 
 L(\mu_0,s) = cs^{-n}\exp\left(\frac{-1}{2s^2} \left(n(\bar x - \mu_0)^2+ ns^2 \right)^2\right) = cs^{-n}\exp\left(\frac{-n}{2s^2} \left((\bar x - \mu_0)^2+ s^2 \right)\right) 
 \frac{L(\bar x, s)}{L(\mu_0,s)} = \exp\left(n\left(\frac{\bar x - \mu_0}{s}\right)^2\right) = \exp(t^2). 
