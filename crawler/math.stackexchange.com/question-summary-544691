\begin{align} 	u-x &= s	\tag{2a} \\	v-y &= t	\tag{2b} \end{align}
\begin{aligned} 	(2x+s)s = (2u-s)s &= 2y 	\qquad\therefore& 	x &= \frac{y}{s}-\frac{s}{2} 	&u &= \frac{y}{s}+\frac{s}{2} \\	(2y+t)t = (2v-t)t &= 2x 	\qquad\therefore& 	y &= \frac{x}{t}-\frac{t}{2} 	&v &= \frac{x}{t}+\frac{t}{2} \end{aligned}
\begin{pmatrix}s&-1\\-1&t\end{pmatrix}\begin{pmatrix}x\\y\end{pmatrix} = -\frac{1}{2}\begin{pmatrix}s^2\\t^2\end{pmatrix}\tag{3}
