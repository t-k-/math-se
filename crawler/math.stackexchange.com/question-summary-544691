\begin{align} 	x(s,t) &= \frac{t^2+s}{2(1-st)}-\frac{s}{2} = \frac{(s^2+t)t}{2(1-st)} &	y(s,t) &= \frac{s^2+t}{2(1-st)}-\frac{t}{2} = \frac{(t^2+s)s}{2(1-st)} \tag{4a} \\	u(s,t) &= \frac{t^2+s}{2(1-st)}+\frac{s}{2} &	v(s,t) &= \frac{s^2+t}{2(1-st)}+\frac{t}{2} \tag{4b} \end{align}
