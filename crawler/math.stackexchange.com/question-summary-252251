\rm\:\color{#C00}d\:
\rm\: \color{#C00}d\bar n = n,\:
\rm x\equiv c\,\ (mod\ \bar n)\iff x\,\equiv\, c,\,\ c\! + \bar n,\,\ c\! + 2\bar n,\,\ c\! + 3\bar n,\, \ldots,\, c\! + (\color{#C00}{d}\!-\!1)\bar n\ \ (mod\ {\color{#C00}d\bar n})
\rm\color{blue}{Division}
\rm\: c + \color{blue}{j}\,\bar n\, =\, c + (\color{blue}{r\! +\! qd})\,\bar n \,\equiv\, c + r\,\bar n\, \ (mod\ \color{#C00}d\bar n)\ 
\rm\: r\in [0,\color{#C00}{d}\!-\!1],\ 
