 \int_0^{1/2}tf'(t)\,\mathrm{d}t=\frac12f\left(\frac12\right)-\int_0^{1/2}f(t)\,\mathrm{d}t\tag{1} 
 \int_{1/2}^1(1-t)f'(t)\,\mathrm{d}t=-\frac12f\left(\frac12\right)+\int_{1/2}^1f(t)\,\mathrm{d}t\tag{2} 
 \begin{align} \int_{1/2}^1(1-t)f'(t)\,\mathrm{d}t+\int_0^{1/2}tf'(t)\,\mathrm{d}t &=\int_{1/2}^1f(t)\,\mathrm{d}t-\int_0^{1/2}f(t)\,\mathrm{d}t\\ &=\frac23\int_0^1f(t)\,\mathrm{d}t-\frac13\int_0^1f(t)\,\mathrm{d}t\\ &=\frac13\int_0^1f(t)\,\mathrm{d}t\tag{3} \end{align} 
 \begin{align} \frac13\left|\,\int_0^1f(t)\,\mathrm{d}t\,\right| &\le\left(\int_0^{1/2}t^2\,\mathrm{d}t+\int_{1/2}^1(1-t)^2\,\mathrm{d}t\right)^{1/2}\left(\int_0^1f'(t)^2\,\mathrm{d}t\right)^{1/2}\\ &=\frac1{\sqrt{12}}\left(\int_0^1f'(t)^2\,\mathrm{d}t\right)^{1/2}\\ 4\left(\int_0^1f(t)\,\mathrm{d}t\right)^2&\le3\int_0^1f'(t)^2\,\mathrm{d}t\tag{4} \end{align} 
