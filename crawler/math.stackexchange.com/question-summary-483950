V = \mathbb{R}^2
V_1 = \mathbb{R}\{(1,0)\}
V_2 = \mathbb{R}\{(0,1)\}
V_3 = \mathbb{R}\{(1,1)\}
V_4 = \mathbb{R}\{(1,2)\}
V = V_1 \oplus V_2
V = V_3 \oplus V_4
V_1 \cap V_3 = V_1 \cap V_4 = V_2 \cap V_3 = V_2 \cap V_4 =  \{(0,0)\}
