\displaystyle {{f(b)-f(a)}\over {b-a}}
f'\left({{a+b}\over 2}\right)
\displaystyle {{f(b)-f(a)}\over {b-a}} > f'\left({{a+b}\over 2}\right)
g(x) = f'(x)
f(b)-f(a) = \int_a^b g(x)\;dx 
m = \frac{a+b}{2}
d = \frac{b-a}{2}
\dfrac{f(b)-f(a)}{2d} = \dfrac{1}{b-a}\int_a^b g(x)\;dx 
\begin{align} D &=\dfrac{f(b)-f(a)}{b-a}-f'(m)\\ &= \dfrac{1}{2d}\int_a^b g(x)\;dx-g(m)\\ &= \dfrac{1}{2d}\int_a^b (g(x)-g(m))\;dx\\ \end{align} 
g(x) = x^k
\begin{align} D &= \dfrac{1}{2d}\int_a^b x^k\;dx-m^k\\ &= \dfrac{x^{k+1}}{2d(k+1)}\big|_a^b-m^k\\ &= \dfrac{b^{k+1}-a^{k+1}}{2d(k+1)}-m^k\\ &= \dfrac{b^{k+1}-a^{k+1}}{(b-a)(k+1)}-m^k\\ &= \dfrac{b^{k+1}-a^{k+1}}{(k+1)(b-a)}-\dfrac{(b+a)^k}{2^k}\\ \end{align} 
k=1
\begin{align} D &= \dfrac{2(b^2-a^2)-2(b-a)^2}{4(b-a)}\\ &= \dfrac{b^{2}-a^{2}}{(b-a)(2)}-\dfrac{b+a}{2}\\ &= \dfrac{b+a}{2}-\dfrac{b+a}{2}\\ &=0\\ \end{align} 
k=2
\begin{align} D &= \dfrac{b^{3}-a^{3}}{(b-a)(3)}-\left(\dfrac{b+a}{2}\right)^2\\ &= \dfrac{b^2+ba+a^2}{3}-\dfrac{(b+a)^2}{4}\\ &= \dfrac{4(b^2+ba+a^2)-3(b^2+2ab+a^2)}{12}\\ &= \dfrac{b^2-2ba+a^2)}{12}\\ &= \dfrac{(b-a)^2}{12}\\ >0\\ \end{align} 
