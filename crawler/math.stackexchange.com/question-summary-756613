(a,b,c)
(x-a)^2+(y-b)^2+(z-c)^2=1
x^2+y^2+z^2=1
\nabla f_1 = 2(x-a)i+2(y-b)j+2(z-c)k;
\nabla f_2 = 2xi+2yj+2zk.
(x,y,z)
\nabla f_1 \cdot \nabla f_2=0
x(x-a)+y(y-a)+z(z-a)=0.
(x,y,z)
x^2+y^2+z^2=1
(x,y,z)
(x-a)^2+(y-b)^2+(z-c)^2=1
x^2+y^2+z^2=1=ax+by+cz
x^2+y^2+z^2=1
(x-a)^2+(y-b)^2+(z-c)^2=1
(a,b,c)
x^2+y^2+z^2=2
\nabla f_1\cdot \nabla f_2=0 \Leftrightarrow x(x-a)+y(y-b)+z(z-c)=0 \\ \Leftrightarrow  x^2+y^2+z^2-(ax+by+cz)=0 \\ \Leftrightarrow ax+by+cz =1
x^2+y^2+z^2-2(ax+by+cz)+a^2+b^2+c^2=1
1-2(1)+a^2+b^2+c^2=1 \\ \text{i.e.}\;\; a^2+b^2+c^2=2
