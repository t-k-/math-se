 \begin{align} & \phantom{{}=} \Pr(\min\{n : S_n=3\} = t) \\[8pt] & = \Pr(\text{exactly 2 successes in }t-1\text{ trials and success on }t\text{th trial}) \\[8pt] & = \Pr(\text{exactly 2 successes in }t-1\text{ trials})\cdot\Pr(\text{success on }t\text{th trial}) \\[8pt] & = \left(\binom {t-1} 2 \left(\frac12\right)^{t-1}\right)\cdot\left(\frac12\right) \\[8pt] & = \binom{t-1}{2} \left(\frac12\right)^t. \end{align} 
 \begin{align} \mathbb E(T) & = \sum_{t=3}^\infty t\cdot \binom{t-1}{2} \left(\frac12\right)^t = \sum_{t=3}^\infty 3\binom t3 \left(\frac12\right)^t \\[8pt] & = \left.\sum_{t=3}^\infty 3\binom t3 p^t\right|_{p=1/2} \\[8pt] & = \sum_{t=3}^\infty \frac12 p^3 \frac{d^3}{dp^3} p^t \\[8pt] & = \frac12 p^3\frac{d^3}{dp^3}\sum_{t=3}^\infty p^t. \end{align} 
