 \qquad G \models p_1 + \dots + p_n \simeq  q_1 + \dots + q_m
 \qquad\qquad\qquad
 \qquad G \models p_1 \circ \dots\circ p_n = q_1 \circ \dots \circ q_m
\simeq
\circ
 \qquad |p|=|q|=1 \qquad\qquad\qquad\quad\ \ \Rightarrow \big(\exists\ r\ : |r| = 1 \wedge p + q \simeq r\big)
 \qquad |p|=|q|=1 \qquad\qquad\qquad\quad\ \ \Rightarrow \big( p \simeq q \Leftrightarrow p = q \big)
 \qquad |p|=|q|=|r|=1 \qquad\qquad\quad \Rightarrow \big( p \simeq q \Rightarrow p + r \simeq q + r \big)
 \qquad |p|=|q|=|r|=1 \qquad\qquad\quad \Rightarrow \big( p \simeq q \Rightarrow r + p \simeq r + q\big)
 \qquad |p|=|q|=|q'| = |r|= |r'|= 1 \Rightarrow \big( q + p \simeq r \wedge p + q' \simeq r' \Rightarrow q + r' \simeq r + q'\big)
