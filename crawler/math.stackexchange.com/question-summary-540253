\begin{align} 0 &\stackrel {(3)}= 0\cdot x+(-(0\cdot x))\\ &\stackrel {(2)}=(0+0)\cdot x +(-(0\cdot x))\\ &\stackrel{(1)}=(0\cdot x+0\cdot x)+(-(0\cdot x))\\ &\stackrel{(0)}=0\cdot x+(0\cdot x+(-(0\cdot x)))\\ &\stackrel{(3)}=0\cdot x+0\\ &\stackrel{(2)}=0\cdot x\\ \end{align}
\tag5 0\cdot x=0.
 \begin{align} (-1)\cdot x &\stackrel{(2)}=(-1)\cdot x+0\\ &\stackrel{(3)}=(-1)\cdot x+(x+(-x))\\ &\stackrel{(0)}=((-1)\cdot x+x)+(-x)\\ &\stackrel{(4)}=((-1)\cdot x+1\cdot x)+(-x)\\ &\stackrel{(1)}=((-1)+1)\cdot x+(-x)\\ &\stackrel{(3)}=0\cdot x+(-x)\\ &\stackrel{(5)}=0+(-x)\\ &\stackrel{(2)}=-x,\\ \end{align}
 -(-x) \stackrel{(2)}=-(-x)+0 \stackrel{(3)}=-(-x)+((-x)+x) \stackrel{(0)}=(-(-x)+(-x))+x \stackrel{(3)}=0+x \stackrel{(2)}=x
