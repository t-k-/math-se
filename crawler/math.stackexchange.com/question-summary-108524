y(k) = -\sum_{i=1}^n a_i y(k-i) + \sum_{i=1}^n b_i u(k-i)
\mathbf{x_k} = \left(\begin{array}{c} y(k-1) \\ y(k-2) \\ \vdots \\ y(k-n) \end{array}\right)
\mathbf{u_k} = \left(\begin{array}{c} u(k-1) \\ u(k-2) \\ \vdots \\ u(k-n) \end{array}\right)
\mathbf{x_{k+1}} = \mathbf{Ax_k}+\mathbf{Bu_k}
\mathbf{A} = \rm{diag}(-a_1,-a_2,\ldots,-a_n)
\mathbf{B} = \rm{diag}(b_1,b_2,\ldots,b_n)
y(k) = \left(1\ 1\ \cdots\ 1\right)\mathbf{x_k}
