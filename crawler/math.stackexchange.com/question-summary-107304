\begin{align*} (2) &= (2,1+\sqrt{-5})^2,& (3)&=(3,1+\sqrt{-5})(3,1-\sqrt{-5}),\\ (1+\sqrt{-5}) &= (2,1+\sqrt{-5})(3,1+\sqrt{-5}) & (1-\sqrt{-5})&=(2,1-\sqrt{-5})(3,1-\sqrt{-5}) \end{align*}
\begin{align*} (3)(1+\sqrt{-5}) &= (2,1+\sqrt{-5})(3,1+\sqrt{-5})^2(3,1-\sqrt{-5})\\ (3)(1-\sqrt{-5}) &= (2,1+\sqrt{-5})(3,1+\sqrt{-5})(3,1-\sqrt{-5})^2. \end{align*}
