 \begin{align*} f(n)=\sum_{i=1}^{n-1}i^2 &= 1^2+2^2+3^2+\ldots+(n-1)^2\\ f(2n)=\sum_{i=1}^{2n-1}i^2 &= 1^2+2^2+3^2+\ldots+(2n-1)^2 \\ \sum_{i=1}^{2n}i^2 &= 1^2+2^2+3^2+\ldots+(2n)^2 \\ \sum_{i=1}^{n}(2i-1)^2 &= 1^2+3^2+5^2+\ldots+(2n-1)^2 \\ \sum_{i=1}^{n}(2i)^2 &= 2^2+4^2+6^2+\ldots+(2n)^2 \\ \end{align*} 
