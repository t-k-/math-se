\begin{array}\\ X &= 1: (1, 1) \\ X &= 2: (1, 2), (2, 1), (2, 2) \\ X &= 3: (1, 3), (3, 1), (2, 3), (3, 2), (3, 3) \\ X &= 4: (1, 4), (4, 1), (2, 4), (4, 2), (3, 4), (4, 3), (4, 4) \\ X &= 5: [9 \; \text {possibilities}] \\ X &= 6: [11 \; \text {possibilities}] \end{array}
\begin{array}\\ P(X = 1) &= 1/36\\ P(X = 2) &= 3/36\\ P(X = 3) &= 5/36\\ P(X = 4) &= 7/36\\ P(X = 5) &= 9/36\\ P(X = 6) &= 11/36 \end{array}
