 \begin{align} \frac{\mathrm{d}}{\mathrm{d}x}a^x &=\lim_{h\to0}\frac{a^{x+h}-a^x}{h}\\ &=a^x\lim_{h\to0}\frac{a^h-1}{h}\\[6pt] &=c_a\,a^x \end{align} 
 \begin{align} \frac{\mathrm{d}}{\mathrm{d}x}e^x &=\frac{\mathrm{d}}{\mathrm{d}x}\lim_{n\to\infty}\left(1+\frac xn\right)^n\\ &=\lim_{n\to\infty}\frac nn\left(1+\frac xn\right)^{n-1}\\ &=e^x\lim_{n\to\infty}\left(1+\frac xn\right)^{-1}\\[6pt] &=e^x \end{align} 
 \begin{align} \frac{\mathrm{d}}{\mathrm{d}x}a^x &=\frac{\mathrm{d}}{\mathrm{d}x}e^{x\log(a)}\\ &=\log(a)\,e^{x\log(a)}\\[6pt] &=\log(a)\,a^x \end{align} 
