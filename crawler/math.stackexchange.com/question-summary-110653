\left\{\begin{array}{c} A_{11}x + A_{12}y = 0 \\ A_{21}x + A_{22}y = 0 \\ \vdots\,\,\,\,\,\,\,\,\,\,\,\,\,\,\,\,\,\,  \vdots\,\,\,\,\,\,\,\,\,\,\,\,\,\,\,\, \vdots\\  A_{n1}x + A_{n2}y  = 0 \end{array}\right.
\left\{\begin{array}{c} B_{11}x + B_{12}y = 0 \\ B_{21}x + B_{22}y = 0 \\ \vdots\,\,\,\,\,\,\,\,\,\,\,\,\,\,\,\,\,\,\,\,\,\,\,\,\,\,\, \vdots \,\,\,\,\,\,\,\,\,\,\vdots\\  B_{m1}x + B_{m2}y  = 0 \end{array}\right.
\left\{\begin{array}{c} c_{1}B_{11}+c_{2}B_{21}+\cdots+c_{m}B_{m1} = A_{11} \\ c_{1}B_{12}+c_{2}B_{22}+\cdots+c_{m}B_{m2} = A_{12} \end{array}\right.
c_{1},\dots,c_{m}
