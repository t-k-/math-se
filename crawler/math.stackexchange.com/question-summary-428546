(c_x,c_y)
(r_x,r_y)
(v_x,v_y)
(v_x',v_y')=(v_x+q(c_x-r_x), v_y+q(c_y-r_y))
v'^2=v^2
q
R
\begin{align}v_x^2+v_y^2&=(v_x+q(c_x-r_x))^2+(v_y+q(c_y-r_y))^2\\ \implies\quad0&=2q(v_x(c_x-r_x)+v_y(c_y-r_y))+q^2((c_x-r_x)^2+(c_y-r_y))^2\\ \implies \quad q&=-\frac{2(v_x(c_x-r_x)+v_y(c_y-r_y))}{R^2}  \end{align}
