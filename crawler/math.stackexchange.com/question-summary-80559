\dot{t}(s) = k(s) n(s)
\dot{n}(s) = -k(s) t(s) + \tau(s) b(s)
\dot{b}(s) = -\tau(s) n(s).
\dot{t^\ast}(s) = k^\ast(s) n^\ast(s),
\dot{n^\ast}(s) = -k^\ast(s) t^\ast(s) + \tau^\ast(s) b^\ast(s),
\dot{b^\ast}(s) = -\tau^\ast(s) b^\ast(s).
S = c-s,
s.
\dot{S} = -1.
\dot{t^\ast}(s) = -\dot{t}(S),
k^\ast(s) = k(S)
n^\ast(s) = -n(S).
b^\ast(s) = t^\ast(s) \times n^\ast(s) = -t(S) \times -n(S) = b(S).
\tau^\ast(s) = -\dot{b^\ast}(s) = -b^\ast(s) \cdot n^\ast(s) = b(S) \cdot n(S) = -\tau(S).
\dot{t^\ast}(s) = - k(S) n(S),
\dot{n^\ast}(s) = k(S) t(S) - \tau(S) b(S),
\dot{b^\ast}(s) = \tau(S) n(S).
