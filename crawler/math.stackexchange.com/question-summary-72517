\begin{align*} F &= (A\cup\overline{B}\cup C)\cap(A\cup C \cup \overline{D})\\ &= ((A\cup C)\cup\overline{B})\cap((A\cup C) \cup \overline{D})\\ &= (A \cup C) \cup (\overline{B}\cap\overline{D}) = G \cup H \end{align*}
 \begin{align*} P(F) &= P(G \cup H) = P(G) + P(H) - P(G\cap H)\\ &= P(A\cup C) + P(\overline{B}\cap\overline{D}) - P((A\cup C)\cap(\overline{B}\cap\overline{D})) \end{align*} 
