 \begin{align} a_{n+1}&=(r-2)a_n+(r-1)b_n\;,\\ b_{n+1}&=a_n\;, \end{align} 
 a_{n+1}=(r-2)a_n+(r-1)a_{n-1}\;. 
 \lambda^2-(r-2)\lambda-(r-1)=0\;, 
\lambda=-1
\lambda=r-1
 a_n=c_1(-1)^n+c_2(r-1)^n\;, 
a_1=0
a_2=r(r-1)
 -c_1+c_2(r-1)=0\;,\\ c_1+c_2(r-1)^2=r(r-1) 
c_1=r-1
c_2=1
 a_n=(-1)^n(r-1)+(r-1)^n\;. 
