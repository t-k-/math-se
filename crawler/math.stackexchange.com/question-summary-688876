X∼Bin(n,p_x)
Y∼Bin(m,p_y)
E[W]=4np_x+6mp_y
E[aX+bY]=aE[X]+bE[Y]
Var[W]=E[(4X+6Y)^2]-[E[W]]^2=E[16X^2+48XY+36Y^2]-[E[W]]^2
Var[W]=Var[4X+6Y]=4^2Var[X]+6^2Var[Y]+2Cov[X,Y]
=4^2Var[X]+6^2Var[Y]+2E[XY]−2E[X]E[Y]
=16E[X^2]+16[E[X]]^2+36E[Y^2]+36[E[Y]]^2+2E[XY]−2E[X]E[Y]
