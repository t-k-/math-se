\begin{align} (\star) &\geq -x^TAx +y^T(A+e A^2)y+(x-y)^T\left(\frac{1}{e}I + A \right)(x-y) \\ &=y^T(A+e A^2)y+(x-y)^T\frac{1}{e}I(x-y) + y^TAy - 2x^TAy\\ &=y^TA(I+e A)y+y^TAy + \frac{1}{e}y^Ty-2\frac{1}{e}x^Ty+\frac{1}{e}x^Tx-2x^TAy\\ &=y^TA(I+e A)y + y^T(\frac{1}{e}I+A)y -2x^T(\frac{1}{e}I+A)y + \frac{1}{e}x^Tx\\ &= \frac{1}{e}y^T(I+e A)^2y -2\frac{1}{e}x^T(I+eA)y + \frac{1}{e}x^Tx\\ &=\frac{1}{e}\|x-(I+eA)y\|^2\\ &\geq 0 \end{align} 
