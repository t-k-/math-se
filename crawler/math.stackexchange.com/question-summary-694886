\{ I_{\nu}(x) \}
I_{\nu}(x)
I_{\nu}(x) \in [0,1]
\lim_{x \rightarrow - \infty} I_{\nu}(x) = 0
\lim_{x \rightarrow + \infty} I_{\nu}(x) = 1
\forall \nu
I(x) \triangleq \begin{cases} 1, & \quad x \geq 0 \\ 0, & \quad x < 0 \end{cases}
\lim_{\nu \rightarrow +\infty} I_{\nu}(x) = I(x).
0 > \underline{x} > \overline{x}
\mathcal{X} \triangleq \big\{ x \in \mathbb{R}_{+}: I(x-\underline{x}) \underline{x} \leq x \leq I(x-\underline{x}) \overline{x} \big\}
\mathcal{X}_{\nu} \triangleq \big\{ x \in \mathbb{R}_{+}: I_{\nu}(x-\underline{x}) \underline{x} \leq x \leq I_{\nu}(x-\underline{x}) \overline{x} \big\}.
\mathcal{X} \subset \mathcal{X}_{\alpha}
\lim\inf_{\nu \rightarrow + \infty} \mathcal{X}_{\nu}
 \lim\sup_{\nu \rightarrow + \infty} \mathcal{X}_{\nu}
\lim\inf_{\nu \rightarrow + \infty} \mathcal{X}_{\nu} = \lim\sup_{\nu \rightarrow + \infty} \mathcal{X}_{\nu} = \lim_{\nu \rightarrow + \infty} \mathcal{X}_{\nu} = \mathcal{X}
