 \begin{eqnarray} \mathrm{corr}(X_1,X_2) &=& {\mathrm{cov}(X_1,X_2) \over {\sigma_{X_1} \sigma_{X_2}}} \\  q &=& {q \over {1 * 1}} \\  1 &=& 1 \end{eqnarray}
\mathrm{cov}(X_1,X_2) = q = \mathrm{Corr}(X_1,X_1) \Leftrightarrow \sigma_{X_1} = \sigma_{X_2} = 1
