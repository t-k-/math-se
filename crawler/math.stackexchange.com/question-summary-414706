\displaystyle \sum_{n=1}^{\infty}f_n(x)
I
S(x)
\lim\limits_{n\to\infty}f_n(x)=0
\forall N\in\mathbb N
f_N(x)=\sum\limits_{n=1}^{N}f_n(x)-\sum\limits_{n=1}^{N-1}f_n(x)
f_n(x),g_n(x)\to f(x),g(x)\text{ uniformly on }J\implies\\ f_n(x)+g_n(x)\to f(x)+g(x) \text{ uniformly on }J.
\begin{align*} \lim_{n\to\infty}\sup_{x\in J}|f_n(x)-f(x)+g_n(x)-g(x)|\leq&\quad\text{(triangle inequality) }\\ \limsup\limits_{x\in J}{|f_n(x)-f(x)|+|g_n(x)-g(x)|}=0+0=0. \end{align*}
\limsup\limits_{x\in J}{|f_n(x)+g_n(x)-f(x)-g(x)|}\geq 0
R_n(x) = \sum_{k=n}^\infty f_k(x)
 \lim_{n\to\infty} \sup_{x} |R_n(x)| = 0. 
f_n(x) = R_n(x) - R_{n+1}(x)
 \sup_x |f_n(x)| \leq \sup_x |R_n(x)| + \sup_x |R_{n+1}(x)| \xrightarrow[n\to\infty]{} 0. 
