(1a)
x+y \ge 2, x+y \leq 3, x+y\ge 4, x+y \leq  5
x,y,z \ge 0
a, b, c, d
\text{minimize} \;\;\; x+2y+3z
\text{subject to} \;\;\; x+y + a= 3
\;\;\;\;\;\;\;\;\;\;\;\;\;\;\;\;\;\; x+y - b= 2
\;\;\;\;\;\;\;\;\;\;\;\;\;\;\;\;\;\; x+y + c= 5
\;\;\;\;\;\;\;\;\;\;\;\;\;\;\;\;\;\; x+y - d= 4
\;\;\;\;\;\;\;\;\;\;\;\;\;\;\;\;\;\; x \ge 0, \;\; y \ge 0, \;\; z \ge 0, \;\; a \ge 0, \;\; b \ge 0, \;\; c \ge 0, \;\; d \ge 0 \;\;.
(1b)
a = x-1, b=y-2, c=z-1
a, b
c
\text{minimize} \;\;\; a+b+c+4
\text{subject to} \;\;\; a+2b + 3c= 2
\;\;\;\;\;\;\;\;\;\;\;\;\;\;\;\;\;\; a \ge 0, \;\; b \ge 0, \;\; c \ge 0, \;\;.
