\mathrm A = \begin{pmatrix}      1 & 1 & 0  \\      2 & 1 & 1  \\      1 & -1 & 2         \end{pmatrix}
\mathrm X
\mathrm{C(A)=\ker(X)}
\mathrm A
\left[    \begin{array}{c|c}      \mathrm A& \mathrm b     \end{array}   \right] = \left[     \begin{array}{ccc|c}        1 & 1 & 0 & b_1 \\        2 & 1 & 1  &b_2\\        1 & -1 & 2 &b_3        \end{array}    \right]
\left[    \begin{array}{c|c}      \mathrm A& \mathrm b     \end{array}   \right]_R = \left[     \begin{array}{ccc|c}        1 & 0 & 1  & \color{red}{-b_1+b_2} \\        0 & 1 & -1 & \color{red}{2b_1-b_2}\\        0 & 0 & 0  & \color{red}{-3b_1+b_2+b_3}        \end{array}    \right]
\ker(\mathrm A)
\begin{pmatrix}    1 & 0 & 1  \\    0 & 1 & -1 \\    0 & 0 & 0      \end{pmatrix}  \begin{pmatrix}  x_1 \\  x_2 \\  x_3  \end{pmatrix} = 0  \implies   \begin{cases}    x_1 + x_3 = 0 \implies x_1 = -x_3 \\    x_2 - x_3 = 0 \implies x_2 = x_3  \end{cases} 
x = (x_1,x_2,x_3)=(-x_3,x_3,x_3)=x_3(-1,1,1) \implies \ker(\mathrm A) = \mathrm{gen}[(-1,1,1)]
\mathrm C(A)
\mathrm{C(A)=gen}[(1,2,1),(1,1,-1),(0,1,2)] \iff \color{red}{-3b_1+x_2+x_3=0} \implies \mathrm{C(A)=\{x \in \Bbb R^n : -2x_1+x_2+x_3=0\}}
x=(-2,1,1), \mathrm{C(A)=\ker(X)}
