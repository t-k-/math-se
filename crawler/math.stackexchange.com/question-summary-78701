\begin{align*} f'(x) &= -(-1)x^{-2} = x^{-2} = \frac{1}{x^2}\\ f''(x) &= (-2)x^{-3} = -\frac{2}{x^3}. \end{align*}
\begin{align*} f'(x) &= \frac{x(x-1)' - (x-1)(x)'}{x^2} = \frac{x-(x-1)}{x^2} = \frac{1}{x^2},\\ f''(x) &= \frac{x^2(1)' - (1)(x^2)'}{(x^2)^2} = \frac{0 - 2x}{x^4} = \frac{-2x}{x^4} = -\frac{2}{x^3}. \end{align*}
