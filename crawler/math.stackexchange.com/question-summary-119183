X_i
\text{Cov}(X_i,Y_j)=0
 E[W] = 2E[X_1] - 3E[X_2] - 2E[X_4] = \left(2-3-2\right) \frac34 = -\frac94 
 \text{Var}(W)=(2^2+3^3+2^2)\text{Var}(X_i)=17\cdot\frac9{16}=\frac{153}{16}, 
 \eqalign{ &E[aX+bY] = a \, E[X] + b \, E[Y]\\ &\text{Var}(aX+bY) = a^2\text{Var}(X)+b^2\text{Var}(Y)+2ab \, \text{Cov}(X,Y)\\ } 
Y=\sum_{i=1}^4 X_i
