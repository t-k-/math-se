E\left(\sum_{i=1}^{k+1} a_i X_i|Y=y\right)\\=E\left(\sum_{i=1}^{k} a_i X_i+a_{k+1}X_{k+1}|Y=y\right)\\=\underbrace{\int_{-\infty}^{\infty}...\int_{-\infty}^{\infty}}_{k+1~ \text{integrals}}(a_1x_1+...+a_kx_k+a_{k+1}x_{k+1})~f_{X_1,...,X_k,X_{k+1}|Y}(x_1,...,x_{k+1}|y)~dx_1...dx_{k+1}\\=\underbrace{\int_{-\infty}^{\infty}...\int_{-\infty}^{\infty}}_{k+1~ \text{integrals}}(a_1x_1+...+a_kx_k)~f_{X_1,...,X_k,X_{k+1}|Y}(x_1,...,x_{k+1}|y)~dx_1...dx_{k+1}\\+\underbrace{\int_{-\infty}^{\infty}...\int_{-\infty}^{\infty}}_{k+1~ \text{integrals}}(a_{k+1}x_{k+1})~f_{X_1,...,X_k,X_{k+1}|Y}(x_1,...,x_{k+1}|y)~dx_1...dx_{k+1} 
 \begin{align*} &E\left(\sum_{i=1}^{k+1} a_i X_i \middle| Y=y\right)\\ &= E\left(\sum_{i=1}^{k} a_iX_i+a_{k+1}X_{k+1} \middle| Y=y\right)\\ &=\underbrace{\int_{-\infty}^{\infty}...\int_{-\infty}^{\infty}}_{k+1~ \text{integrals}}(a_1x_1+...+a_kx_k+a_{k+1}x_{k+1})~f_{X_1,...,X_k,X_{k+1}|Y}(x_1,...,x_{k+1}|y)~dx_1...dx_{k+1}\\ &=\underbrace{\int_{-\infty}^{\infty}...\int_{-\infty}^{\infty}}_{k+1~ \text{integrals}}(a_1x_1+...+a_kx_k)~f_{X_1,...,X_k,X_{k+1}|Y}(x_1,...,x_{k+1}|y)~dx_1...dx_{k+1}\\ &+\underbrace{\int_{-\infty}^{\infty}...\int_{-\infty}^{\infty}}_{k+1~ \text{integrals}}(a_{k+1}x_{k+1})~f_{X_1,...,X_k,X_{k+1}|Y}(x_1,...,x_{k+1}|y)~dx_1...dx_{k+1}\\ &=\underbrace{\int_{-\infty}^{\infty}...\int_{-\infty}^{\infty}}_{k~ \text{integrals}} (a_1x_1+...+a_kx_k)~dx_1...dx_{k}\int_{-\infty}^{\infty}~f_{X_1,...,X_k,X_{k+1}|Y}(x_1,...,x_{k+1}|y)~dx_{k+1}\\ &+a_{k+1}\int_{-\infty}^{\infty}x_{k+1}~dx_{k+1}\underbrace{\int_{-\infty}^{\infty}...\int_{-\infty}^{\infty}}_{k~ \text{integrals}}f_{X_1,...,X_k,X_{k+1}|Y}(x_1,...,x_{k+1}|y)~dx_1...dx_{k}\\ &=\underbrace{\int_{-\infty}^{\infty}...\int_{-\infty}^{\infty}}_{k~ \text{integrals}} (a_1x_1+...+a_kx_k)f_{X_1,...,X_k|Y}(x_1,...,x_{k}|y)~dx_1...dx_{k}\\ &+a_{k+1}\int_{-\infty}^{\infty}x_{k+1}f_{X_{k+1}|Y}(x_{k+1}|y)~dx_{k+1}\\ &= \left( \sum_{i=1}^k a_i~E(X_i \mid Y=y) \right) + a_{k+1}~E(X_{k+1} \mid Y=y) \\ &= \sum_{i=1}^{k+1} a_i~E(X_i \mid Y=y) \\ \end{align*} 
