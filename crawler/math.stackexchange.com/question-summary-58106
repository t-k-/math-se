 \begin{align} &(1+n) + 1+(n-1) + 1+(n-2) + 1+(n-3) + 1+(n-4) + \cdots + 1+(n-n)\\ =&(1+n) + [1+(n-1) + 1+(n-2) + 1+(n-3) + 1+(n-4) + \cdots + 1+(n-n)]\\ =&(n+1) + [n+(n-1)+\cdots+2+1]\\ =&\frac{(n+1)[1+(n+1)]}{2}\\ =&\frac{(n+1)(n+2)}{2}  \end{align} 
