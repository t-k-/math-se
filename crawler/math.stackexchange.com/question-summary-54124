\begin{eqnarray*} \det(A) &=& \sum_{j=1}^n (-1)^{i+j} A_{i,j} M_{i,j}  = \sum_{j=1}^n (-1)^{i+j} A'_{i,j} M_{i,j} + \sum_{j=1}^n (-1)^{i+j} A''_{i,j} M_{i,j} \\ &=& \det(A')+\det(A''), \end{eqnarray*}
