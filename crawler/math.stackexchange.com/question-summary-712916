\begin{eqnarray}{\rm mod}\,\ \color{#0a0}{x^2\!+\!x\!-\!3}\!:\ \ f &=& 2x\!-\!1 + (ax\!+\!b)\,(\overbrace{\color{#0a0}{x^2\!+\!x\!-\!3}}^{\large \equiv\ 0\ }\color{#c00}{+1})\\ &\equiv& 2x\!-\!1 + (ax\!+\!b)\,\color{#c00}{(1)}\\ &\equiv& 3x\!-\!3\\ \Rightarrow\ \ ax\!+\!b &\,\equiv\,& 3x\!-\!3 - (2x\!-\!1)\,\equiv\, x\!-\!2\\ \Rightarrow\ \ f &=& x^3\!-x^2\!-2x+3\quad\ {\bf QED} \end{eqnarray}\qquad\qquad
