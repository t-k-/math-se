 \begin{align} a^2 + b^2 &= (m^2 - n^2)^2 + (2mn)^2\\ &= m^4 - 2 m^2 n^2 + n^4 + 4 m^2 n^2\\ &= m^4 + 2 m^2 n^2 + n^4\\ &= (m^2 + n^2)^2\\ &= c^2\tag{9} \end{align} 
 \begin{align} \gcd(a,b) &= \gcd(m^2-n^2,2mn)\\ &\:\mid\:\gcd(m-n,2) \gcd(m-n,m) \gcd(m-n,n)\\ &\times\gcd(m+n,2) \gcd(m+n,m) \gcd(m+n,n)\\ &=\gcd(m+n,2)^2 \gcd(n,m)^4\\ &= 1\tag{10} \end{align}\\ 
