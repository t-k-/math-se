\frac { \sum_{i=0}^{a-1} (b+i) \binom{i+b-1}{b-1} p^b(1-p)^i}{ \sum_{i=0}^{a-1} \binom{i+b-1}{b-1} p^b(1-p)^i}
 \begin{split} \frac{\sum_{i=0}^{a-1} (b+i) \binom{i+b-1}{b-1} p^bq^i}      {\sum_{i=0}^{a-1} \binom{i+b-1}{b-1} p^bq^i} &= \frac{\sum_{i=0}^{a-1} b \binom{i+b-1}{b-1} p^bq^i       + \sum_{i=0}^{a-1} i \binom{i+b-1}{b-1} p^bq^i}      {\sum_{i=0}^{a-1} \binom{i+b-1}{b-1} p^bq^i} \\ &= b + \frac{\sum_{i=0}^{a-1} i \binom{i+b-1}{b-1} p^bq^i}      {\sum_{i=0}^{a-1} \binom{i+b-1}{b-1} p^bq^i} \end{split} 
f(q)
qf'(q)
