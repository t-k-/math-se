\begin{eqnarray}{} 1)\qquad\rm (m)\cap(n) = (k)\ &\iff&\rm\ [\ (m),(n)\supset (j) &\iff&\rm (k)\supset (j)\ ]\ \iff\ &\rm[\ m,n\ |\ j\ &\iff&\rm\ k\ |\ j\ ] \\   2)\qquad\rm (m)+(n) = (k)\ &\iff&\rm\ [\ (j)\supset (m),(n)\ &\iff&\rm (j)\supset (k)\ ]\ \iff\ \ &\rm[\ j\ |\ m,n\ &\iff&\rm\ j\ |\ k\ ]  \end{eqnarray}
