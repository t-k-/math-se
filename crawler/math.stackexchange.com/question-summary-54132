X_1, X_2, ...
0 < b_n \uparrow \infty
\frac{X_n}{b_n} \to 0
\frac{\max_{1 \le j \le n} |X_n|}{b_n} \to 0
n > k \ge 2
\frac{\max_{1 \le j \le n} |X_j|}{b_n} \le \frac{\max_{1 \le j \le k} |X_j|}{b_n} + \frac{\max_{k \le j \le n} |X_j|}{b_n} \le \frac{\max_{1 \le j \le k} |X_j|}{b_n} + \max_{k \le j \le n} \frac{ |X_j|}{b_j}
b_n \uparrow
n \to \infty
k \to \infty
\limsup_n\frac{\max_{1 \le j \le n} |X_j|}{b_n} \le \sup_{j \ge k} \frac{|X_j|}{b_j}
\limsup_n\frac{\max_{1 \le j \le n} |X_j|}{b_n} \le \limsup_n \frac{|X_n|}{b_n}
0
