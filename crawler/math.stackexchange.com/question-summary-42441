\begin{align*} \mathcal{U}_1 &= \cup_{i\in I}(U_{i1}\cap\cdots\cap U_{in_i})\\ \mathcal{U}_2 &= \cup_{j\in J}(U_{j1}\cap\cdots\cap U_{jn_j}), \end{align*}
\begin{align*} \mathcal{U}_1\cap\mathcal{U}_2 &= \left(\cup_{i\in I}(U_{i1}\cap\cdots\cap U_{in_i}\right) \cap \left(\cup_{j\in J}(U_{j1}\cap\cdots\cap U_{jn_j}\right)\\ &= \cup_{i\in I}\left( (U_{i1}\cap\cdots\cap U_{in_i})\cap\cup_{j\in J}(U_{j1}\cap\cdots\cap U_{jn_j})\right)\\ &= \cup_{i\in I}\cup_{j\in J}\left(U_{i1}\cap\cdots\cap U_{in_i}\cap U_{j1}\cap\cdots \cap U_{jn_j}\right). \end{align*}
