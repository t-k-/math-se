\;\dim\ker f=0\,,\,3\;
\;\dim\ker f=1\;
\;u\notin\ker f\;\implies \ker f=\langle f(u)\rangle\;
3=\dim\ker f+\dim\,\text{Im}\,\implies \dim\,\text{Im}\,f=2
\;f(u)\in\text{Im}\,f\;
\;f(v)\in\text{Im}\,f\;
