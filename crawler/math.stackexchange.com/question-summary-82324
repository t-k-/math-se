\begin{align*} ab+a'b'+bc&=ab+a'b'+(a+a')bc\\ &=ab+a'b'+abc+a'bc\\ &=(ab+abc)+a'b'+a'bc\\ &=ab+a'b'+a'bc\;. \end{align*}
