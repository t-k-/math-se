\begin{align*} ab+a'b'+a'c&=ab+a'b'+a'(b+b')c\\ &=ab+a'b'+a'bc+a'b'c\\ &=ab+(a'b'+a'b'c)+a'bc\\ &=ab+a'b'+a'bc\;. \end{align*}
ab+a'b'+bc=ab+a'b'+(a+a')bc=ab+a'b'+abc+a'bc=ab+a'b'+a'bc
ab+abc=ab
ab+a'b'+a'c=ab+a'b'+a'(b+b')c=ab+a'b'+a'bc+a'b'c=ab+a'b'+a'bc
a'b'+a'b'c=a'b'
