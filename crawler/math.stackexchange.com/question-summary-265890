\begin{align} \sin A_2 &= \cos(B_2+C_2) \\ \sin A_2 &= \cos B_2 \cos C_2 - \sin B_2 \sin C_2 \\ \frac{s^2-s_1^2}{s^2+s_1^2} &= \frac{4 s^2 s_2 s_3 - ( s^2 - s_2^2)( s^2 - s_3^2)}{(s^2+s_2^2)(s^2+s_3^2)} \end{align}
