a,b,c\ge 0
a+b+c=3
\dfrac{a}{\sqrt{b^2+b+1}}+\dfrac{b}{\sqrt{c^2+c+1}}+\dfrac{c}{\sqrt{a^2+a+1}}\ge\sqrt{3}
\left(\sum_{cyc}\dfrac{a}{\sqrt{b^2+b+1}}\right)\left(a\sqrt{b^2+b+1}\right)^2\ge (a+b+c)^3
\sum_{cyc}a(b^2+b+1)=\sum_{cyc}(ab^2+ab+a)\le 9
ab^2+bc^2+ca^2+ab+bc+ac\le 6
\begin{align} ab + bc + ca &\leqslant a^2 + b^2 + c^2, \\ 3(ab + bc + ca) &\leqslant (a + b + c)^2 = 9, \\ ab + bc + ca &\leqslant 3. \end{align}
 \begin{align} \frac{a}{\sqrt{b^2 + b + 1}} + \frac{b}{\sqrt{c^2 + c + 1}} + \frac{c}{\sqrt{a^2 + a + 1}} &\geqslant \frac{\sqrt{3}}{2}(a + b + c) - \frac{ab + bc + ca}{2\sqrt{3}} \\ &\geqslant \frac{3\sqrt{3}}{2} - \frac{\sqrt{3}}{2} = \sqrt{3} \end{align}
\displaystyle \frac{\sqrt{3}}{2} - \frac{x}{2\sqrt{3}} = \frac{1}{2\sqrt{3}}(3 - x) < 0
x > 3
x
0
x \in [0, 3]
x^2 - 3x - 3
x_1 = \frac{1}{2}(3 - \sqrt{21}) < 0
x_2 = \frac{1}{2}(3 + \sqrt{21}) > 3
x \in [0, 3]
x^2 - 3x - 3 < 0.
 \begin{align} \frac{1}{\sqrt{x^2 + x + 1}} \geqslant \frac{\sqrt{3}}{2} - \frac{x}{2\sqrt{3}} &\Longleftrightarrow 12 \geqslant (x^2 + x + 1)(3 - x)^2 \\ &\Longleftrightarrow x^4 - 5x^3 + 4x^2 +3x - 3 \leqslant 0 \\ &\Longleftrightarrow (x - 1)(x^3 - 4x^2 + 3) \leqslant 0 \\ &\Longleftrightarrow (x - 1)^2(x^2 - 3x - 3) \leqslant 0 \end{align}
