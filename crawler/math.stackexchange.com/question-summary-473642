\begin{align} |x+y|&\leq |x|+|y| \\ |x-y|&\geq ||x|-|y|| \end{align}
 \begin{align} |q_i-q_j| &= |P_i+P_j-P_i-P_j+q_i-q_j|\\  &=|(P_i+q_i)+(-P_j-q_j)+(P_j-P_i)|\\  &\le |P_i+q_i|+|-(P_j+q_j)|+|P_j-P_i|\\  &\le \epsilon +\epsilon+\delta \end{align} 
