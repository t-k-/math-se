\begin{align*} \tau(q(x)) &= \tau\left(\prod_{\sigma\in G} \left( \sigma(a_0) + \sigma(a_1)x+\cdots + \sigma(a_{n-1})x^{n-1} + x^n\right)\right)\\ &= \prod_{\sigma\in G} \left( \tau\sigma(a_0) +\tau\sigma(a_1)x+\cdots + \tau\sigma(a_{n-1})x^{n-1} + x^n\right)\\ &= \prod_{\sigma'\in G} \left( \sigma'(a_0) + \sigma'(a_1)x+\cdots + \sigma'(a_{n-1})x^{n-1} + x^n\right)\\ &= q(x). \end{align*}
