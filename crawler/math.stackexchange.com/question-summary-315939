 \begin{align} a_1b_2&\leqq a_2b_1\\ a_1(b_1+b_2)&\leqq b_1(a_1+a_2)\\ \frac{a_1}{b_1}&\leqq\frac{a_1+a_2}{b_1+b_2}\tag{1} \end{align} 
 \begin{align} a_1b_2&\leqq a_2b_1\\ (a_1+a_2)b_2&\leqq a_2(b_1+b_2)\\ \frac{a_1+a_2}{b_1+b_2}&\leqq\frac{a_2}{b_2}\tag{2} \end{align} 
 \frac{a_1}{b_1}\leqq\frac{a_1+a_2}{b_1+b_2}\leqq\frac{a_2}{b_2}\tag{3} 
