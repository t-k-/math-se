(f|g_t) = f(t)
t^j = \sum_k \frac{1}{1 + j + k}b_k.
A
A_{kj} = \frac{1}{1 + j + k}
 (b_0, b_1, b_2, b_3)A = (1, t, t^2, t^3) 
(b_0, b_1, b_2, b_3) = (1, t, t^2, t^3)A^{-1}.
A^{-1}
f_1, f_2, f_3, f_4
L_t(f) = f(t)
g_t = L_t(f_1)f_1 + L_t(f_2)f_2 + L_t(f_3)f_3 + L_t(f_4)f_4.
f = a_1f_1 + a_2f_2 + a_3f_3 + a_4f_4
 \begin{align*} (f| g_t) &= a_1L_t(f_1)(f_1| f_1) + a_2L_t(f_2)(f_2| f_2) + a_3L_t(f_3)(f_3| f_3) + a_4L_t(f_4)(f_4| f_4) \\ &= L_t(a_1f_1 + a_2f_2 + a_3f_3 + a_4f_4) = L_t(f) = f(t). \end{align*}
V
f\in V
f=\sum_{i=1}^n c_ie_i
\langle f,g_\ell\rangle = \left\langle \sum_{i=1}^n c_i e_i,\sum_{i=1}^n \ell(e_i)e_i\right\rangle= \sum_{i=1}^n c_i \ell(e_i)\langle e_i,e_i\rangle = \sum_{i=1}^n c_i \ell(e_i) = \ell\left(\sum_{i=1}^n c_ie_i\right) = \ell(f).
