 \begin{align} S^{k+1}T-TS^{k+1} &=SS^kT-TSS^k\\ &=S(kS^{k-1}(ST-TS)+TS^k)-TSS^k\\ &=kS^k(ST-TS)+STS^k-TSS^k\\ &=kS^k(ST-TS)+(ST-TS)S^k\\ &=kS^k(ST-TS)+S^k(ST-TS)\\ &=(k+1)S^k(ST-TS)\;.\\ \end{align} 
