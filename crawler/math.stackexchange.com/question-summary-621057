|x|+|y|+|z|=1
 \begin{align} 0\le s \le 1, 0 \le t \le 1-s &: x=s, y=t, z=1-s-t \\ 0\le s \le 1, 0 \le t \le 1-s &: x=s, y=t, z=s+t-1\\ 0\le s \le 1, 0 \le t \le 1-s &: x=-s, y=t, z=1-s-t \\ 0\le s \le 1, 0 \le t \le 1-s &: x=-s, y=t, z=s+t-1\\ 0\le s \le 1, 0 \le t \le 1-s &: x=s, y=-t, z=1-s-t \\ 0\le s \le 1, 0 \le t \le 1-s &: x=s, y=-t, z=s+t-1\\ 0\le s \le 1, 0 \le t \le 1-s &: x=-s, y=-t, z=1-s-t \\ 0\le s \le 1, 0 \le t \le 1-s &: x=-s, y=-t, z=s+t-1\\ \end{align}
