\rm\ \ x\sim y {\overset{\ def}{\color{#c00}\iff}} f(x) = f(y)\ 
\rm\:f(x) = \rm\,|x|.
\rm\ u\sim v\ \smash[t]{\overset{\ def}{\color{#c00}\iff}}\, f(u) \approx f(v)\ 
\rm\,f\,
\,\approx.\, \ 
\rm\color{#0a0}{properties\ (E)}\,
\,\approx\,
\,\sim\,
\rm\,f
\rm\quad\ \color{#0a0}{(E)}\Rightarrow f(v) \approx f(v)\:\color{#c00}\Rightarrow\:v\sim v
\rm\,\ u\sim v\:\color{#c00}\Rightarrow\ f(u) \approx f(v)\:\color{#0a0}{\overset{(E)}\Rightarrow}\:f(v)\approx f(u)\:\color{#c00}\Rightarrow\:v\sim u
\rm\ \ \ u\sim v,\, v\sim w\:\color{#c00}\Rightarrow\: f(u)\approx f(v),\,f(v)\approx f(w)\:\color{#0a0}{\overset{(E)}\Rightarrow}\:f(u)\approx f(w)\:\color{#c00}\Rightarrow u\sim w
