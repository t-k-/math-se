                  f(x) = a_{0} + \sum_{n=1}^{\infty} a_{n}\cos(2nx)+\sum_{n=1}^{\infty}b_{n}\cos(2nx), 
 \begin{align}  \int_{0}^{\pi}f(x)dx & = a_{0}\int_{0}^{\pi}dx =\pi a_{0}\\  \int_{0}^{\pi}f(x)\cos(2nx)dx & = a_{n}\int_{0}^{\pi}\cos^{2}(2nx)\,dx=a_{n}\frac{\pi}{2},\;\;\; n > 0,\\  \int_{0}^{\pi}f(x)\sin(2nx)dx & = b_{n}\int_{0}^{\pi}\sin^{2}(2nx)\,dx=b_{n}\frac{\pi}{2}. \end{align} 
 \begin{align}    f(x)  & \sim \frac{1}{\pi}\int_{0}^{\pi}f(x)\,dx + \\          & + \sum_{n=1}^{\infty}\left(\frac{2}{\pi}\int_{0}^{\pi}f(x)\cos(2nx)\,dx\right)\cos(2nx) \\          & +\sum_{n=1}^{\infty}\left(\frac{2}{\pi}\int_{0}^{\pi}f(x)\sin(2nx)\,dx\right)\sin(2nx). \end{align} 
