\frac{1}{2\pi}\int_{-\infty}^{\infty}dx_{1}dx_{2} e^{i k_{1}x_{1} +ik_{2}x_{2}} \theta(x_{1})\theta(x_{2}-x_{1})
\theta
\theta(x_{1})\theta(x_{2}-x_{1})
\frac{1}{\sqrt{2\pi}}\int_{-\infty}^{\infty}dx_{1} e^{ik_{1}x_{1}}  \theta(x_{1}) \Big( \frac{1}{\sqrt{2\pi}}\int_{-\infty}^{\infty}dx_{2} e^{ik_{2}x_{2}} \theta(x_{2}-x_{1}) \Big)
\frac{1}{\sqrt{2\pi}}\int_{-\infty}^{\infty}dx_{2} e^{ik_{2}x_{2}}  \Big( \frac{1}{\sqrt{2\pi}}\int_{-\infty}^{\infty}dx_{1} e^{ik_{1}x_{1}}  \theta(x_{1})\theta(x_{2}-x_{1}) \Big)
 \tag{3} I_1(k^{\prime}_1) ~:=~\int_{\mathbb{R}}\!\mathrm{d}x^1~ e^{i k^{\prime}_1x^1} ~\theta(x^1) ~=~\frac{i}{k^{\prime}_1+i0^+} ~=~P\frac{i}{k^{\prime}_1}+\pi\delta(k^{\prime}_1),
 \tag{4} I_2(k_2) ~:=~\int_{\mathbb{R}}\!\mathrm{d}x^{\prime 2}~ e^{i k_2 x^{\prime 2}} ~ \theta(x^{\prime 2}) ~=~\frac{i}{k_2+i0^+} ~=~P\frac{i}{k_2}+\pi\delta(k_2).
 \tag{5}I(k_1,k_2)~=~\frac{1}{2\pi}I_1(k^{\prime}_1)~I_2(k_2) ~=~\frac{-1}{2\pi} \frac{1}{k_1+k_2+i0^+}\frac{1}{k_2+i0^+}. 
