E[X+Y+Z]=0
\text{var}(X+Y+Z)=3
\text{cov}(X,X+Y+Z)=1
\begin{align*} E[X+Y+Z] &= \mu_X + \mu_Y + \mu_Z,\\ \text{var}(X+Y+Z) &= \sigma_X^2 + \sigma_Y^2+\sigma_Z^2 +2\text{cov}(X,Y)+2\text{cov}(X,Z)+2\text{cov}(Y,Z)\\ \text{cov}(X,X+Y+Z) &= \sigma_X^2 +  \text{cov}(X,Y)+\text{cov}(X,Z) \end{align*}
E[X\mid X+Y+Z=1] = \left.\left.\frac{1}{3}\right(1-0\right) = \frac{1}{3}, ~\text{var}(X\mid X+Y+Z=1) = \frac{1\times 3 - 1^2}{3} = \frac{2}{3}
