 \frac{v_y}{v_x}=\frac{-y}{b-x}\tag{1} 
 \begin{array}{} v_x=|v|\frac{b-x}{\sqrt{(b-x)^2+y^2}}&\text{and}&v_y=|v|\frac{-y}{\sqrt{(b-x)^2+y^2}} \end{array}\tag{2} 
 \begin{align} \frac{\mathrm{d}y}{\mathrm{d}x} &=\frac{v_y+u_y}{v_x+u_x}\\ &=\frac{v_y+|u|}{v_x}\\ &=\frac{|u|\sqrt{(b-x)^2+y^2}-|v|y}{|v|(b-x)}\tag{3} \end{align} 
 |v|((b-x)\;\mathrm{d}y-y\;\mathrm{d}(b-x))=-|u|\sqrt{(b-x)^2+y^2}\;\mathrm{d}(b-x)\tag{4} 
 0=|v|\;\mathrm{d}\frac{y}{b-x}+|u|\sqrt{1+\left(\frac{y}{b-x}\right)^2}\;\mathrm{d}\log\left(b-x\right)\tag{5} 
 |v|\;\mathrm{d}\operatorname{arcsinh}\left(\frac{y}{b-x}\right)+|u|\;\mathrm{d}\log(b-x)=0\tag{6} 
 |v|\operatorname{arcsinh}\left(\frac{y}{b-x}\right)+|u|\log(b-x)=C|v|\tag{7} 
 \begin{align} y &=(b-x)\sinh\left(C-\frac{|u|}{|v|}\log(b-x)\right)\\ &=(b-x)\sinh\left(\frac{|u|}{|v|}\log\left(\frac{b}{b-x}\right)\right)\\ &=\frac{b-x}{2}\left[\left(\frac{b}{b-x}\right)^{|u|/|v|}-\left(\frac{b-x}{b}\right)^{|u|/|v|}\right]\tag{8} \end{align} 
 \lim_{x\to b^-}y=\left\{\begin{array}{}0&\text{if }|u|<|v|\\b/2&\text{if }|u|=|v|\\\infty&\text{if }|u|>|v|\end{array}\right.\tag{9} 
