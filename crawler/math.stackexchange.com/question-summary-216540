0 \leq j \leq p-1,
\delta = 0,1,
t \geq 1,
\delta^2 = \delta,
2t \geq t + 1.
  (j p^t + \delta)^2 \equiv j p^t + \delta \pmod {p^{t+1}},  
 j^2 p^{2t} + 2 j \delta p^t + \delta^2 \equiv  j p^t + \delta \pmod {p^{t+1}}.   
    2 j \delta p^t      \equiv  j p^t  \pmod {p^{t+1}},       
  (2 \delta - 1) j p^t  \equiv  0 \pmod {p^{t+1}},   
  (2 \delta - 1) j  \equiv  0 \pmod {p},   
   j  \equiv  0 \pmod {p},   
  j = 0.  
