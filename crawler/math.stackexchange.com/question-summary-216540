j = 0,1,
\delta = 0,1,
t \geq 1,
\delta^2 = \delta,
2t \geq t + 1.
  (j 2^t + \delta)^2 \equiv j 2^t + \delta \pmod {2^{t+1}},  
 j^2 2^{2t} + 2 j \delta 2^t + \delta^2 \equiv  j 2^t + \delta \pmod {2^{t+1}}.   
    2 j \delta 2^t      \equiv  j 2^t  \pmod {2^{t+1}},       
     j \delta 2^{t+1}      \equiv  j 2^t  \pmod {2^{t+1}},       
     0      \equiv  j 2^t  \pmod {2^{t+1}},       
   0  \equiv  j \pmod {2},   
  j = 0.  
