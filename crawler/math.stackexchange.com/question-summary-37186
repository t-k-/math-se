\begin{array} \sigma_1^5 = (1+2\ldots n)^5 = \frac{n^5(n+1)^5}{2^5} \\ ~~~~  = \frac{1}{2^5}\{[n^5(n+1)^5 -(n-1)^5n^5] + [(n-1)^5n^5 -(n-2)^5(n-1)^5]   +\ldots +[2^53^5 - 1^52^5] + 1^5 2^5 \}\\ ~~~~  = \frac{1}{2^5}\{ n^5[(n+1)^5 -(n-1)^5] + ((n-1)^5[n^5 -(n-2)^5] +\ldots +2^5[3^5 - 1^5] + 1^5 2^5 \}\\ ~~~~ =  \frac{1}{2^5}\{ 2n^5[{5 \choose 1}n^4 + {5 \choose 3}n^2 + 1] +                         2(n-1)^5[{5 \choose 1}(n-1)^4 + {5 \choose 3}(n-3)^2 + 1]+\\ ~~~~~~        \ldots +  2^5[{5 \choose 1}2^4 + {5 \choose 3}2^2 + 1] +                          1^5[{5 \choose 1}1^4 + {5 \choose 3}1^2 + 1]   \}\\ ~~~~~~ = \frac{1}{2^4}\{ {5 \choose 1}[n^9 + (n-1)^9 + \ldots + 2^9 + 1^9] +                          {5 \choose 3}[n^7 + (n-1)^7 + \ldots + 2^7 + 1^7] +                                       [n^5 + (n-1)^5 + \ldots + 2^5 + 1^5] \}\\ ~~~~~ = \frac{1}{2^4}[ {5 \choose 1}\sigma_9 +                          {5 \choose 3}\sigma_7 +                                       \sigma_5 ]. \end{array} 
\sigma_1^k =    \frac{1}{2^{k-1}}    \cases{[ {k \choose 1}\sigma_{2k-1} + {k \choose 3}\sigma_{2k-3} +\ldots +\sigma_k ]    & for $k$ odd, \cr          [ {k \choose 1}\sigma_{2k-1} + \ldots + {k \choose 3}\sigma_{2k-3} ]    & for $k$ even.} 
