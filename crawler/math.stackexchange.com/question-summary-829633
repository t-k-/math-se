\left[ \begin {array}{cc} 0&1\\ 0&0\end {array}  \right] 
\left[ \begin {array}{cc} a&0\\ 0&a\end {array}  \right] 
n>1
\left[ \begin {array}{cc} 0&1\\ 0&0\end {array}  \right] 
0
n = 1
n
\begin{pmatrix}a & 1\\0 & a\end{pmatrix}^n = \begin{pmatrix}a^n & na^{n-1}\\ 0 & a^n\end{pmatrix}
n + 1
\begin{pmatrix}a & 1\\0 & a\end{pmatrix}^{n+1} = \begin{pmatrix}a^{n+1} & (n+1)a^n\\ 0 & a^{n+1}\end{pmatrix}
n = 1 
n +1 
\begin{pmatrix}a & 1\\0 & a\end{pmatrix}^{n+1} = \begin{pmatrix}a & 1\\0 & a\end{pmatrix} \begin{pmatrix}a^n & na^{n-1}\\0 & a^n\end{pmatrix}  = \begin{pmatrix}a^{n+1} & a^n + na^n\\0 & a^{n+1} \end{pmatrix} = \begin{pmatrix}a^{n+1} & (n+1)a^n\\0 & a^{n+1} \end{pmatrix}
