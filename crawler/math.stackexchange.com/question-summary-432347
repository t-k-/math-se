\left| {x_j^ +  - x_j^ - } \right| \le 1 \Leftrightarrow \left\{ {\begin{array}{*{20}{c}}{ - 1 \le x_j^ +  - x_j^ -  \le 1}&{,{\rm{if}}\;x_j^ +  \ge x_j^ - }\\{ - 1 \le  - x_j^ +  + x_j^ -  \le 1}&{,{\rm{if}}\;x_j^ +  < x_j^ - }\end{array}} \right.
Y:=(x_i^{+},x_i^{-})
X:=x_i^{+}-x_i^{-}
Y
X
|x|<1
|a|<1
a=a^{+}-a^{-}
a^{+}+a^{-}<1
a^{+}\geq0
a^{-}\geq0
