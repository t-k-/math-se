\begin{align*} W_1 &= \{(a_1, a_2, a_3) \in\mathbb{R}^3 \mid a_1 = 3  a_2\text{ and }a_3 = -a_2\}\\ W_2 &= \{(a_1, a_2, a_3) \in \mathbb{R}^3 \mid a_1 - 4 a_2 - a_3 = 0\} \end{align*}
W_1
\{ (a_1, a_2, a_3) \in \mathbb{R}^3 \mid a_1 = 3  a_2\text{ and }a_3 = -a_2\text{ and }a_1 - 4  a_2 - a_3 = 0 \}.
(a_1,a_2,a_3)\in W_1\cap W_2
a_1=3a_2
a_3=-a_2
W_1
a_1-4a_2-a_3=0
W_2
\begin{align*} a_1 -3a_2 &= 0\\ a_2 + a_3 &= 0\\ a_1 - 4a_2 - a_3 &= 0 \end{align*}
a_1 = 3a_2
a_2=-a_3
a_1-4a_2 - a_3 = 0
W_1\subseteq W_2
W_1\cap W_2 = W_1
