\textbf{m=n:}
\textbf{m>n:}
m=bn
b>1
S=\sum_{k=1}^n k\lfloor k\frac{bn}{n}\rfloor = \sum_{k=1}^n k\lfloor k b\rfloor = b\sum_{k=1}^n k^2 = \frac{b}{6}n(n+1)(2n+1).
\textbf{0<m<n:}
\text{gcd}(m,n)=1
n\in{\mathbb N}_{\geq1}
\omega:=e^{2\pi i/n}
j
\left\lfloor{j\over n}\right\rfloor={j\over n}-{n-1\over 2n}+{1\over n}\sum_{\ell=1}^{n-1}{\omega^{j\ell}\over 1-\omega^{-\ell}}\ .
