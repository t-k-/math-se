CF:FD = (1-p):p
BF:FE = (1-q):q
\vec{AB}
2\mathbf{b}
\vec{AC}
4\mathbf{c}
\vec{AD} = \mathbf{b}
\vec{AE} = 3\mathbf{c}
\begin{align} \vec{AF} =& p\vec{AC} + (1-p)\vec{AD} = 4p\mathbf{c}+(1-p)\mathbf{b}\\ \vec{AF} =& q\vec{AB} + (1-q)\vec{AE} = 2q\mathbf{b}+3(1-q)\mathbf{c}\\ \end{align}
\mathbf{b}
\mathbf{c}
\begin{align} &\begin{cases} 1-p = 2q\\ 4p = 3(1-q) \end{cases}\\ &\begin{cases} p + 2q = 1\\ 4p + 3q = 3 \end{cases}\\ &\begin{cases} p = \frac{3}{5}\\ q = \frac{1}{5} \end{cases}\\ \end{align}
CF:FD = 2:3
BF:FE = 4:1
