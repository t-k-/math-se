X = (x,y,z)
X_{u} = (-v Sin[u], v Cos[u], c)
X_{v} = (Cos[u], Sin[u], 0)
E = X_{u} • X_{u} = v^{2} + c^{2},
F = X_{u} • X_{v} = 0
G = X_{v} • X_{v} = 1
X_{uu} = (-v Cos[u], - v Sin[u], 0)
X_{uv} = (-Sin[u], Cos[u], 0)
X_{vv} = (0,0,0)
N = (\frac{1}{\sqrt{(EG-F^2)}}*(-c Sin[u], c Cos[u], -v).
e = <N, X_{uu}> = \frac{2c v Sin[u]Cos[u]}{\sqrt{EG-F^2}},
f = <N, X_{uv}> = \frac{c Sin[u]^2 - c Cos[u]^2}{\sqrt{EG-F^2}},
g = <N, X_{vv}> = 0.
e(u')^{2} - 2f u' v' + g (v')^{2} = 0.
k_1+k_2=0
