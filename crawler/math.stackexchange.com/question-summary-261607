U⊆ℝ^4
x_2+2x_3=0 \mbox{   and   }x_2+x_4=0
U^⊥
U^⊥
(0,1,2,0)^T,(0,1,0,1)^T
U^⊥
\begin{align}U &= \bigl\{(x_1,x_2,x_3,x_4)^T\in\Bbb R^4:x_2+2x_3=0,x_2+x_4=0\bigr\}\\ &= \bigl\{(x_1,x_2,x_3,x_4)^T\in\Bbb R^4:x_2=-2x_3,x_4=-x_2\bigr\}\\ &= \bigl\{(x_1,-2x_3,x_3,2x_3)^T:x_1,x_3\in\Bbb R\bigr\}\\ &= \bigl\{x_1(1,0,0,0)^T+x_3(0,-2,1,2)^T:x_1,x_3\in\Bbb R\bigr\}.\end{align}
x_3=0
x_1\neq 0
y_1=0
(y_1,y_2,y_3,y_4)^T\in U^\perp
y_3=2y_2-2y_4
(y_1,y_2,y_3,y_4)^T\in U^\perp
\begin{align}U^\perp &= \bigl\{(y_1,y_2,y_3,y_4)^T\in\Bbb R^4:y_1=0,y_3=2y_2-2y_4\bigr\}\\ &= \bigl\{(0,y_2,2y_2-2y_4,y_4)^T:y_2,y_4\in\Bbb R\bigr\}\\ &= \bigl\{y_2(0,1,2,0)^T+y_4(0,0,-2,1)^T:y_2,y_4\in\Bbb R\bigr\}.\end{align}
U^T
\bigl\{(0,1,2,0)^T,\,(0,0,-2,1)^T\bigr\}
