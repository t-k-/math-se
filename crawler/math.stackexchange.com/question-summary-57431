\eqalignno{ D &~=~ \mean{({\rm distance\;from\;point\;}i{\rm\;to\;}L)^2} \cr &~=~ \mean{(cx+sy-r)^2} \cr &~=~ \mean{c^2x^2+s^2y^2+r^2 + 2csxy-2crx-2sry} \cr &~=~ c^2\mean{x^2} +s^2\mean{y^2} +r^2+ 2sc\mean{xy} -2cr\mean{x} -2sr\mean{y}.\cr }
