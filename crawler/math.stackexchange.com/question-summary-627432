 \begin{align} &\frac{(n-j+1)!}{n!}\sum_{k=0}^{n-j}\frac{(k+j)!}{k!}\frac{2^{-k-j}}{n-j-k+1}\\ -&\frac{(n-j+1)!}{n!}\sum_{k=0}^{n-j}\frac{(k+j)!}{k!}\frac{2^{-k-j}}{n-j+1}\\ =&\frac{(n-j+1)!}{n!}\sum_{k=0}^{n-m}\frac{(k+j)!}{k!}\frac{k\,2^{-k-j}}{(n-j-k+1)(n-j+1)}\\ =&\frac{(n-(j+1)+1)!}{n!}\sum_{k=0}^{n-(j+1)}\frac{(k+(j+1))!}{k!}\frac{2^{-k-(j+1)}}{n-(j+1)-k+1}\tag{3} \end{align} 
 \begin{align} (n+1)\sum_{k=0}^n\frac{2^{-k}}{n-k+1} &=\sum_{j=0}^{m-1}\frac{(n-j)!}{n!}\sum_{k=0}^{n-j}\frac{(k+j)!}{k!}2^{-k-j}\\ &+\frac{(n-m+1)!}{n!}\sum_{k=0}^{n-m}\frac{(k+m)!}{k!}\frac{2^{-k-m}}{n-m-k+1}\\ &=\sum_{j=0}^{m-1}\frac{2}{\binom{n}{j}}+O\left(\frac1{n^m}\right)\tag{4} \end{align} 
 \begin{align} \sum_{k=0}^\infty\frac{(k+j)!}{k!}2^{-k-j} &=j!\sum_{k=0}^\infty\binom{k+j}{k}2^{-k-j}\\ &=j!2^{-j}\sum_{k=0}^\infty(-1)^k\binom{-j-1}{k}2^{-k}\\ &=j!2^{-j}\left(1-\frac12\right)^{-j-1}\\[12pt] &=2j!\tag{5} \end{align} 
 \sum_{m=0}^n\frac1{\binom{n}{m}}=\sum_{j=0}^{m-1}\frac{2}{\binom{n}{j}}+O\left(\frac1{n^m}\right)\tag{6} 
