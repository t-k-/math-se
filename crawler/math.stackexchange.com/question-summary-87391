\begin{align*} \xi &= \Re\left(\mathrm{arcosh}\left( {{x + iy} \over {f}}\right)\right)\\ \eta &= \Im\left(\mathrm{arcosh}\left( {{x + iy} \over {f}}\right)\right) \end{align*}
{\begin{pmatrix} \mathbf{\vec{e_x}} \\ \mathbf{\vec{e_y}} \end{pmatrix}} =  \frac1{\sqrt{D}} {\begin{pmatrix}  \sinh(\xi)\cos(\eta) & -\cosh(\xi)\sin(\eta) \\  \cosh(\xi)\sin(\eta) & \sinh(\xi)\sin(\eta)  \end{pmatrix}} {\begin{pmatrix} \mathbf{\vec{e_\xi}} \\ \mathbf{\vec{e_\eta}} \end{pmatrix}}, 
 D = { 1 \over 2 } (\cosh(2\xi) - \cos(2\eta)) 
 \begin{pmatrix}  \frac{\partial x}{\partial \xi} & \frac{\partial x}{\partial \eta} \\  \frac{\partial y}{\partial \xi} & \frac{\partial y}{\partial \eta}  \end{pmatrix} 
M
{\begin{pmatrix} \mathbf{\vec{e_\xi}} \\ \mathbf{\vec{e_\eta}} \end{pmatrix}} = M {\begin{pmatrix} \mathbf{\vec{e_x}} \\ \mathbf{\vec{e_y}} \end{pmatrix}} 
