 \begin{align} &S_1=\left(\frac{L}{3}\right)^{2}\\ &S_2=\left(\frac{L}{3}\right)^{2} + 9\left(\frac{L}{3^2}\right)^{2}\\ &S_3=\left(\frac{L}{3}\right)^{2} + 9\left(\frac{L}{3^2}\right)^{2} + 9^2\left(\frac{L}{3^3}\right)^{2}\\ &S_n=\sum_{k=1}^{n} 9^{k-1}\left(\frac{L}{3^k}\right)^{2}\\ \end{align} 
 \begin{align} &\sum_{k=1}^{\infty} 9^{k-1}\left(\frac{L}{3^k}\right)^{2} \leq  L^2\\ &\sum_{k=1}^{\infty} 9^{k-1}\left(\frac{1}{3^k}\right)^{2} \leq  1\\ \end{align} 
