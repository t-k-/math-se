\begin{align} A(1)&=1 & S(1)&=A(1)=1\\ A(2)&=1 & S(2)&=S(1)+A(2)=1+1=2\\ A(3)&=A(2)-A(1)=1-1=0 & S(3)&=S(2)+A(3)=2+0=2\\ A(4)&=A(3)-A(2)=0-1=-1 & S(4)&=S(3)+A(4)=2-1=1\\ A(5)&=A(4)-A(3)=-1-0=-1 & S(5)&=S(4)+A(5)=1-1=0\\ A(6)&=A(5)-A(4)=-1-(-1)=0 & S(6)&=S(5)+A(6)=0+0=0\\ A(7)&=A(6)-A(5)=0-(-1)=1 & S(7)&=S(6)+A(7)=0+1=1\\ A(8)&=A(7)-A(6)=1-0=1 & S(8)&=S(7)+A(8)=1+1=2\\ \end{align}
