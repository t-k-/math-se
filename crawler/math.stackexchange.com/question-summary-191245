 \begin{align*} f(n) & = f(1) + \sum_{i=1}^{n-1} g(i) \\ & = f(1) + \sum_{i=1}^{(n-1)/2}g(2i) + \sum_{i=1}^{(n-1)/2} g(2i - 1) \\ & = 2 + \sum_{i=1}^{(n-1)/2}2^i + \sum_{i=1}^{(n-1)/2}2^i \\ & = 2 + 2\sum_{i=1}^{(n-1)/2}2^i. \end{align*} 
