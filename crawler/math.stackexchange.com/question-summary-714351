f(z) = \sum_{n=0}^\infty \frac{(-1)^n}{n!(z+n)} - \frac{1}{e} \sum_{n=0}^\infty \frac{1}{z(z+1)\cdots(z+n)}
 \begin{eqnarray} zf(z) &=& \sum_{n=0}^\infty \frac{z (-1)^n}{n!(z+n)} - \frac{1}{e} - \frac{1}{e}\sum_{n=0}^\infty \frac{1}{(z+1)(z+2)\cdots(z+n)}\\ &=&\sum_{n=0}^\infty (\frac{(-1)^n z}{n!(z+n)} - \frac{(-1)^n}{n!}) - \frac{1}{e}\sum_{n=0}^\infty \frac{1}{(z+1)(z+2)\cdots(z+n)}\\ &=&\sum_{n=0}^\infty \frac{(-1)^{n+1} n}{n!(z+n)} - \frac{1}{e}\sum_{n=0}^\infty \frac{1}{(z+1)(z+2)\cdots(z+n)}\\ &=& f(z+1) \end{eqnarray} 
f(1)=0
