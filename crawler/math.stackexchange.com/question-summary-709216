A \in K^{nxn}
Cofac(A)
cofac(AB) = cofac(B)*cofac(A)
^t(cofac A) = cofac (^t A) = adj(A).
adj(AB) = adj(B)*adj(A)
adj(AB)= cofac(^t AB) = ^t(cofac AB) = ^t(cofac B) * ^t(cofac A)
\DeclareMathOperator{\adj}{adj}\DeclareMathOperator{\cofac}{cofac}
\adj(AB) = \adj(B) \adj(A)
\adj(A) = \cofac(^tA)
\cofac(AB) = \adj(^t(AB)) = \adj(^tB ^tA) = \adj(^tA) \adj(^tB) = \cofac(A) \cofac(B)
\cofac(A) = \det(A) ^t(A^{-1})
