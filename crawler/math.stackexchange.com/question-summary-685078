q = 1+2w
\begin{align} r &= 3+5w - (2-w)q\\ &= 3+5w - (2-w)(1+2w)\\ &= 3+5w - (2 + 3w - 2w^2)\\ &= 3+5w - (2+3w +2(w+1))\\ &= 3+5w - (4+5w)\\ &= -1. \end{align}
