 \begin{align} \int_a^b(b-x)^{(n-1)/2}\,(x-a)^{-1/2}\,\mathrm{d}x &=(b-a)^{n/2}\int_0^1(1-t)^{(n-1)/2}\,t^{-1/2}\,\mathrm{d}t\\ &=2(b-a)^{n/2}\int_0^{\pi/2}\cos^{n}(\theta)\,\mathrm{d}\theta\tag{1} \end{align} 
 \int_0^{\pi/2}\cos^n(\theta)\,\mathrm{d}\theta=\frac{n-1}{n}\int_0^{\pi/2}\cos^{n-2}(\theta)\,\mathrm{d}\theta\tag{2} 
 \begin{align} \int_0^{\pi/2}\cos^n(\theta)\,\mathrm{d}\theta&=\frac{\pi}{2^{n+1}}\binom{n}{n/2}\\ \int_a^b(b-x)^{(n-1)/2}\,(x-a)^{-1/2}\,\mathrm{d}x&=(b-a)^{n/2}\frac{\pi}{2^n}\binom{n}{n/2}\tag{3} \end{align} 
 \begin{align} \int_0^{\pi/2}\cos^n(\theta)\,\mathrm{d}\theta&=\frac{2^{n-1}}{n\binom{n-1}{(n-1)/2}}\\ \int_a^b(b-x)^{(n-1)/2}\,(x-a)^{-1/2}\,\mathrm{d}x&=(b-a)^{n/2}\frac{2^n}{n\binom{n-1}{(n-1)/2}}\tag{4} \end{align} 
