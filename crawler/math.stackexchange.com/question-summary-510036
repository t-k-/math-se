|z_1 |^2+ |z_2 |^2+ |z_3 |^2+ |z_4 |^2=1
z_1+z_2+z_3+z_4=0
|z_1-z_2 |^2+ |z_2-z_3 |^2+ |z_3-z_4 |^2+ |z_4-z_1 |^2
 q=|z_1-z_2|^2+|z_2-z_3|^2+|z_3-z_4|^2+|z_4-z_1|^2- 2(|z_1|^2+|z_2|^2+|z_3|^2+|z_4|^2) 
z_k=x_k+iy_k
x_k,y_k
 \begin{array}{lcl} q &=& \sum_{k} (x_k-x_{k+1})^2+(y_k-y_{k+1})^2-2(\sum_{k} x_k^2+y_k^2) \\ &=& -2 (\sum_{k}x_kx_{k+1} +y_ky_{k+1}) \end{array} 
 \sum_{k}x_kx_{k+1}= x_1x_2+x_2x_3+(x_1+x_3)x_4= x_1x_2+x_2x_3+(x_1+x_3)(-x_1-x_2-x_3)=-(x_1+x_3)^2 
 q=2((x_1+x_3)^2+(y_1+y_3)^2) 
