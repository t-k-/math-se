\begin{align} L_n u_1 &= n(a+b) u_1 & L_n u_2 &= n(a-b) u_2 \end{align}
\begin{align} \lambda_1 &= n(a+b) & \lambda_2 &= n(a-b) & \lambda_3 = \lambda_4 = \ldots = \lambda_{2n} = 0 \end{align}
\begin{align} \mu_1 &= n(a+b)+(x-a) & \mu_2 &= n(a-b)+(x-a) & \mu_3 = \mu_4 = \ldots = \mu_{2n} = (x-a) \end{align}
