\begin{align*} f'(x) &= \Bigl( e^{2x} + e^{-x}\Bigr)\\  &= \Bigl(e^{2x}\Bigr)' + \Bigl(e^{-x}\Bigr)'\\ &=e^{2x}(2x)' + e^{-x}(-x)'\\ &=e^{2x}(2) + e^{-x}(-1)\\ &=2e^{2x} - e^{-x}\\ &= 2e^{2x} - \frac{1}{e^x}\\ &= \frac{2e^{2x}e^x}{e^x} - \frac{1}{e^x}\\ &= \frac{2e^{3x} - 1}{e^x}\\ &= \frac{1}{e^x}(2e^{3x}-1). \end{align*}
