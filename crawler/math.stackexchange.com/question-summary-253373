(a, b)
c\in(a, b)
\underline{D}f(c) \leq 0 \leq \overline{D}f(c)
\delta > 0
f(c) < f(c-h)
0<h<\delta
\frac{f(c)-f(c-h)}{h} <0
0<h<\delta
\underline{D}f(c) = \underline{lim}_{h\rightarrow0}\frac{f(c)-f(c-h)}{h} \leq0
\underline{D}f(c) = \underline{lim}_{h\rightarrow0}\frac{f(c-h)-f(c)}{h} \geq0
\delta' > 0
f(c) < f(c+h)
0<h<\delta'
\frac{f(c+h)-f(c)}{h} >0
0<h<\delta'
\overline{D}f(c) = \overline{lim}_{h\rightarrow0}\frac{f(c+h)-f(c)}{h} \geq0
\underline{D}f(c) \leq 0 \leq \overline{D}f(c)
