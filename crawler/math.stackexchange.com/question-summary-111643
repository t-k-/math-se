 \begin{eqnarray*} \frac{M!}{\left(1+1/n \right)^{(M)}}&=&\frac{\Gamma(M+1)\Gamma(1+1/n)}{\Gamma(M+1+1/n)} \\ &=&\frac{2}{n} \int_0^1 x^{\frac{2}{n}-1} (1-x^2)^{M} \,dx\\ &=&\int_0^1 (1-u^n)^M \,du \,\,(\text{ substitute } x = u^{n/2})\\ &=&\sum_{k=0}^M(-1)^k \frac{ M!}{k!(M-k)!(nk+1)}\\ \end{eqnarray*} 
