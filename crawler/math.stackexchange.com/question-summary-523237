a,b,c
a+b+c=0,a^2+b^2+c^2=1
\overrightarrow{r}=(x_{i},y_{i},z_{i})(i=1,2,3,4,5,6)
\{x_{i},y_{i},z_{i}\}=\{a,b,c\}
\overrightarrow{r_{i}}\neq\overrightarrow{r_{j}}
\overrightarrow{r_{i}}\cdot\overrightarrow{r_{j}}\ge\dfrac{1}{2}
a+b+c=0,\Longrightarrow c=-a-b
a^2+b^2+c^2=1\Longrightarrow a^2+b^2+(a+b)^2=1\Longrightarrow a^2+b^2+ab=\dfrac{1}{2}
a=x+y,b=x-y\Longrightarrow (x+y)^2+(x-y)^2+x^2-y^2=\dfrac{1}{2}
\Longrightarrow 3x^2+y^2=\dfrac{1}{2}
r_i
x+y+z=0
x^2 + y^2 + z^2 = 1
r_i
r_j
\vec{r_i} \cdot \vec{r_j} \ge \cos 60^\circ = \tfrac12
