\operatorname{grade}(I,\operatorname{Hom}_R(M,N))\ge\min(2,\operatorname{grade}(I,N))
\DeclareMathOperator{grade}{grade}
\newcommand{Hom}{\operatorname{Hom}}
\newcommand{Ext}{\operatorname{Ext}}
\newcommand{coker}{\operatorname{coker}}
\grade(I, \_) \ge 1 \iff \Hom_R(R/I, \_) = 0
\Hom_R(R/I, \Hom_R(M,N)) \cong \Hom_R(R/I \otimes_R M, N) \cong \Hom_R(M, \Hom(R/I, N))
\grade(I, N) = 0
\grade(I,N) \ge 1
\grade(I,N) = 1
