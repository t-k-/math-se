i\ge0
P[X_1=i]= {\lambda_1^i\over i!} e^{-\lambda_1}\quad\text{and}\quad P[X_2=i]= {\lambda_2^i\over i!} e^{-\lambda_2}.
k\ge0
X_1
X_2
   \eqalign{       p_Y(k)       &=\sum_{i=0}^kP[X_1=i,X_2=k-i]\cr       &=\sum_{i=0}^kP[X_1=i]\cdot P[ X_2=k-i]\cr       &=\sum_{i=0}^k{\lambda_1^i\over i!}e^{-\lambda_1}\cdot{\lambda_2^{k-i}\over(k-i)!}e^{-\lambda_2}\cr       &=\sum_{i=0}^k{\lambda_1^i\lambda_2^{k-i}\over i!\,(k-i)!}e^{-(\lambda_1+\lambda_2)}\cr       &= e^{-(\lambda_1+\lambda_2)}\cdot\sum_{i=0}^k{\lambda_1^i\lambda_2^{k-i}\over i!\,(k-i)!}\cr       &={1\over k!}\cdot e^{-(\lambda_1+\lambda_2)}\cdot\sum_{i=0}^k{k!\over i!\,(k-i)!}\,\lambda_1^i\lambda_2^{k-i}\cr      % &={1\over k!}\cdot e^{-(\lambda_1+\lambda_2)}\cdot\sum_{i=1}^k{k!\over i!\,(k-i)!}\,\lambda_1^i\lambda_2^{k-i}\cr         &={(\lambda_1+\lambda_2)^k\over k!}\cdot e^{-(\lambda_1+\lambda_2)},\cr   } 
