\ds{\color{#c00000}{\int_{0}^{\pi}{x^{2} \over \sqrt 5 - 2\cos\pars{x}}\,\dd x}      ={\pi^{3} \over 15} + 2\pi\,\ln^{2}\pars{1 + \sqrt 5 \over 2}:\ {\large ?}}
\ds{z_{\pm}}
\ds{z^{2} - \pars{2\varphi - 1}z + 1 = 0}
 z_{+} = \varphi > 1\,;\qquad\qquad z_{-} = {1 \over \varphi}\,,\quad 0 < z_{-} < 1 
\pars{2}
\ds{2\,{1 \over \varphi} - \pars{2\varphi - 1} = -1}
\pars{3}
\ds{x^{2} + \pars{2\varphi - 1}x + 1 = 0}
\ds{-\varphi}
\ds{-\,{1 \over \varphi}}
\pars{4}
 \color{#00f}{\large\int_{0}^{\pi}{x^{2} \over \sqrt 5 - 2\cos\pars{x}}\,\dd x} ={\pi^{3} \over 15} + 2\pi^{2}\ln\pars{\varphi} =\color{#00f}{\large{\pi^{3} \over 15} + 2\pi\ln^{2}\pars{\root{5} + 1 \over 2}} 
