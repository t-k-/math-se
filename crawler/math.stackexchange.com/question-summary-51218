(k,s)
Y
(k+p-X,t)
t=s/(1-s) \, (\in (0,1))
{\rm P}(X + Y = p) \leq 1
 \sum\limits_{i = 0}^p {{k \choose i}{k + p - i \choose p - i}}  \le \frac{1}{{(1 - 2s)^k }}\bigg(\frac{{1 - s}}{s}\bigg)^p. 
 {\rm P}(X + Y = p) = \sum\limits_{i = 0}^p {{\rm P}(X + Y = p|X = i){\rm P}(X = i)}  = \sum\limits_{i = 0}^p {{\rm P}(Y = p - i|X = i){\rm P}(X = i)}. 
 {\rm P}(X = i) = {k \choose i}s^i (1-s)^{k-i} 
 {\rm P}(Y = p - i|X = i) = {k + p - i \choose p - i}t^{p - i} (1 - t)^k , 
 \frac{s}{{(1 - s)t}} = 1,  
 {\rm P}(X + Y = p) = (1 - s)^k (1 - t)^k t^p \sum\limits_{i = 0}^p {{k \choose i}{k + p - i \choose p - i}} . 
 (1 - s)^k (1 - t)^k t^p = (1 - 2s)^{k} \bigg(\frac{s}{{1 - s}}\bigg)^p , 
 \sum\limits_{i = 0}^p {{k \choose i}{k + p - i \choose p - i}}  \le \frac{1}{{(1 - 2s)^k }}\bigg(\frac{{1 - s}}{s}\bigg)^p. 
