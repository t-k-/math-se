z=x^2+y^2
z=4
\vec A=x^2\vec i+y^2\vec j+z^2\vec k
\iint\left(\vec A.\vec n\right) dS
S
z=x^2+y^2
z=x^2+y^2=4
\mathbf{r}(x,y)=(x,y,x^2+y^2)
x^2+y^2\le4
(r,\theta)
x=r\cos\theta
y=r\sin\theta
z=x^2+y^2=r^2(\cos^2\theta+\sin^2\theta)=r^2
\mathbf{u}(r,\theta)=\mathbf{r}(r\cos\theta,r\sin\theta)=(r\cos\theta,r\sin\theta,r^2)
r \in [0,2]
\theta \in [0,2\pi)
D
r\theta
\mathbf{A}
\mathbf{A}(x,y,z)=(x^2,y^2,z^2).
\mathbf{A}(\mathbf{u}(r,\theta))=(r^2\cos^2\theta,r^2\sin^2\theta,r^4)
\frac{\partial \mathbf{u}(r,\theta)}{\partial r}=(\cos\theta,\sin\theta,2r)
\frac{\partial \mathbf{u}(r,\theta)}{\partial \theta}=(-r\sin\theta,r\cos\theta,0)
\begin{align*} \frac{\partial \mathbf{u}(r,\theta)}{\partial r} \times \frac{\partial \mathbf{u}(r,\theta)}{\partial \theta}&=\left\lvert\matrix{  \mathbf{i}  & \mathbf{j} & \mathbf{k} \\  \cos\theta  & \sin\theta & 2r \\  -r\sin\theta  & r\cos\theta & 0   }\right\rvert\\&=(-2r^2\cos\theta,-2r^2\sin\theta,r(\cos^2\theta+\sin^2\theta))\\&=(-2r^2\cos\theta,-2r^2\sin\theta,r)\text{,} \end{align*}
\begin{align*} \iint_S \mathbf{A} \cdot {\boldsymbol{\hat{\textbf{n}}}} \,dS &= -\iint_D \mathbf{A}(\mathbf{u}(r,\theta)) \cdot \frac{\partial \mathbf{u}(r,\theta)}{\partial r} \times \frac{\partial \mathbf{u}(r,\theta)}{\partial \theta} \,dr \,d\theta \\&= -\int_{\theta=0}^{2\pi} \int_{r=0}^{2} (-2r^4\cos^3\theta-2r^4\sin^3\theta+r^5) \,dr \,d\theta \\&= -\left(0+0+\left[\theta\right]_{\theta=0}^{2\pi} \cdot \left[\frac{r^6}{6}\right]_{r=0}^{2}\right) = -\frac{64\pi}{3} \end{align*}
