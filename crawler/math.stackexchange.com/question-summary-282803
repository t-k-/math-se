t.(g,h) = (t+g)h
t.(g_1,h_1)(g_2,h_2)
t.((g_1,h_1)(g_2,h_2)) = t.(g_1+h_1g_2, h_1h_2) = (t+g_1+h_1g_2)h_1h_2 = th_1h_2 + g_1h_1h_2 + h_1^2h_2g_2
