2(x^2+y^2+z^2)^2 \geq 3(x^2y^2+y^2z^2+z^2x^2)+3(x^3y+y^3z+z^3x).
x,y,z>0
\operatorname{LHS}
2x^4+2y^4+2z^4+4x^2y^2+4y^2z^2+4z^2x^2\geq 3(x^2y^2+y^2z^2+z^2x^2)+3(x^3y+y^3z+z^3x).
2x^4+2y^4+2z^4+x^2y^2+y^2z^2+z^2x^2\geq 3(x^3y+y^3z+z^3x).
\begin{split}x^4+x^2y^2&\geq 2x^3y,\\y^4+y^2z^2&\geq 2y^3z,\\z^4+z^2x^2&\geq 2z^3x,\end{split}
x^4+y^4+z^4\geq x^3y+y^3z+z^3x.
\begin{split}&\frac{x^4}{4}+\frac{x^4}{4}+\frac{x^4}{4}+\frac{y^4}{4}\geq x^3y\\&\frac{y^4}{4}+\frac{y^4}{4}+\frac{y^4}{4}+\frac{z^4}{4}\geq y^3z\\\\&\frac{z^4}{4}+\frac{z^4}{4}+\frac{z^4}{4}+\frac{x^4}{4}\geq z^3x.\end{split}
x^3y \leq 1/2(x^4 + x^2y^2)
y^3z \leq 1/2(y^4 + y^2z^2)
z^3x \leq 1/2(z^4 + z^2x^2)
(x^2 - y^2)^2 + (y^2 - z^2)^2 + (x^2 - z^2)^2 \geq 0
2x^4 + 2y^4 + 2z^4 + 4(x^2y^2+y^2z^2+z^2x^2) \geq 3(x^2y^2+y^2z^2+z^2x^2)+3(x^3y+y^3z+z^3x)
2x^4 + 2y^4 + 2z^4 +x^2y^2+y^2z^2+z^2x^2 \geq 3(x^3y+y^3z+z^3x)
2x^4 + 2y^4 + 2z^4 +x^2y^2+y^2z^2+z^2x^2 \geq {3 \over 2}x^4 + {3 \over 2}y^4 + {3 \over 2}z^4 +{3 \over 2}x^2y^2+{3 \over 2}y^2z^2+{3 \over 2}z^2x^2
x^4 + y^4 + z^4 \geq x^2y^2+y^2z^2+z^2x^2
