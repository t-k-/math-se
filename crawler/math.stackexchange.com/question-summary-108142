B=(B_x,B_y,B_z)
G=(G_x,G_y,G_z)
\|\overrightarrow{BG}\|=\sqrt{(G_x-B_x)^2+(G_y-B_y)^2+(G_z-B_z)^2}
\overrightarrow{BG}=G-B=\langle G_x-B_x,G_y-B_y,G_z-B_z\rangle
\vec{n}=\frac{\overrightarrow{BG}}{\|\overrightarrow{BG}\|}=\left\langle\frac{G_x-B_x}{\|\overrightarrow{BG}\|},\frac{G_y-B_y}{\|\overrightarrow{BG}\|},\frac{G_z-B_z}{\|\overrightarrow{BG}\|}\right\rangle
d
d\vec{n}
d
d\vec{n}
G
\begin{align} G+d\vec{n} &=(G_x,G_y,G_z)+d\left\langle\frac{G_x-B_x}{\|\overrightarrow{BG}\|},\frac{G_y-B_y}{\|\overrightarrow{BG}\|},\frac{G_z-B_z}{\|\overrightarrow{BG}\|}\right\rangle \\ &=\left\langle G_x+d\cdot\frac{G_x-B_x}{\|\overrightarrow{BG}\|},G_y+d\cdot\frac{G_y-B_y}{\|\overrightarrow{BG}\|},G_z+d\cdot\frac{G_z-B_z}{\|\overrightarrow{BG}\|}\right\rangle. \end{align}
