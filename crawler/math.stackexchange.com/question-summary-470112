dx:=camera_x-point_x
dy:=camera_y-point_y
dz:=camera_z-point_z
pitch:=atan2(\sqrt{dz*dz+dx*dx},dy))
(dy>0)
pitch:=-pitch
dx:=camera_x-point_x
dy:=camera_y-point_y
dz:=camera_z-point_z
pitch:=-atan2(dy, \sqrt{dx*dx+dz*dz})
yaw:=atan2(dz,dx)-90^\circ
(0,0,0)
