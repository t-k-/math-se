\mathbf{t}
y = \frac{y_1-y_0}{x_1-x_0}x + y_0 -\frac{y_1-y_0}{x_1-x_0}x_0
y = -\frac{x_1^2-x_0^2}{2(y_1-y_0)}x +\frac{(y_1^2 - y_0^2) + (x_1^2 - x_0^2)}{2(y_1-y_0)}\tag{*}
y = -\frac{x'}{y'}x + y_0 -\frac{x'}{y'}x_0\tag{**}
x = \frac{-y'(y_1^2 - y_0^2 + x_1^2 - x_0^2) - 2(y_1-y_0)(x'x_0-y'y_0)}{2(y_1-y_0)x' -y'(x_1^2 - x_0^2)}
r = \sqrt{(x-x_0)^2 + (y-y_0)^2}
\frac{d\theta}{ds} = \frac{1}{r}
x'(y_1-y_2) - y'(x_1-x_2) > 0
