\lim_{n\to\infty} (a_n+b_n)=X + Y
\lim_{n\to\infty} a_n = X
\lim_{n\to\infty} b_n = Y
\frac{\epsilon}{2}>0
\exists N_a,N_b:
|a_n - X| < \frac{\epsilon}{2}
n> N_a
|b_n - Y| < \frac{\epsilon}{2}
n> N_b
|a_n - X| + |b_n-Y| < \epsilon \implies |a_n + b_n - (X + Y)| \leq |a_n - X| + |b_n-Y| < \epsilon \iff |a_n + b_n - (X + Y)| < \epsilon
N=max\left \{ N_a,N_b \right \}
\epsilon>0
