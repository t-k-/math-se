\begin{align*} |a_n-c_n|&>d\,'(\alpha,\beta)+d\,'(\beta,\gamma)\\ &=\sup_{k\in P}|a_k-b_k|+\sup_{k\in P}|b_k-c_k|\\ &\ge\sup_{k\in P}\big(|a_k-b_k|+|b_k-c_k|\big)\\ &\ge\sup_{k\in P}|a_k-c_k|\;, \end{align*}\tag{1}
