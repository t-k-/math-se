 \begin{align} \int_{-\infty}^\infty(\operatorname{erf}(a+x)+\operatorname{erf}(a-x))\;\mathrm{d}x &=\lim_{L\to\infty}\;\int_{-L}^L(\operatorname{erf}(x+a)-\operatorname{erf}(x-a))\;\mathrm{d}x\\ &=\lim_{L\to\infty}\;\int_{-L+a}^{L+a}\operatorname{erf}(x)\;\mathrm{d}x-\lim_{L\to\infty}\;\int_{-L-a}^{L-a}\operatorname{erf}(x)\;\mathrm{d}x\\ &=\lim_{L\to\infty}\;\int_{L-a}^{L+a}\operatorname{erf}(x)\;\mathrm{d}x-\lim_{L\to\infty}\;\int_{-L-a}^{-L+a}\operatorname{erf}(x)\;\mathrm{d}x\\ &=4a\tag{1} \end{align} 
