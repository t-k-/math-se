\begin{eqnarray*} &&\sin(\gamma+\alpha+\theta)\cos(\gamma+\alpha-\theta)- \sin(\gamma+\alpha-\theta) \cos(\gamma+\alpha+\theta)  \\ &=& \sec{\gamma} \; \left( \sin(\gamma+\alpha+\theta) -\sin(\gamma+\alpha-\theta) \right) \\ \sin 2\theta &=& 2 \sec{\gamma} \; \sin \theta \cos\left(\gamma+\alpha\right) \\ 2 \sin\theta \cos\theta &=& 2 \sec{\gamma} \; \sin \theta \cos\left(\gamma+\alpha\right) \end{eqnarray*}
\begin{eqnarray*} \cos\theta &=& \frac{\cos\left(\gamma+\alpha\right)}{\cos\gamma} = \frac{\cos\frac{\pi+\alpha-\beta}{2}}{\cos\frac{\pi-(\alpha+\beta)}{2}}= \frac{\sin\frac{\beta-\alpha}{2}}{\sin\frac{\alpha+\beta}{2}} \\ \end{eqnarray*}
\frac{|OF|}{|OE|}=\frac{|OH| \sin\angle FHO}{|OH|\sin\angle EHO}=\frac{ \sin\frac{\alpha-\beta}{2}}{\sin\frac{\alpha+\beta}{2}}=\cos\left(\pi-\theta\right)
