a_n = 5a_{n-1} - 6a_{n-2} + 2
\mathbf {Prove}
\mathbf {S(n)}
a_n = 1 + 2^{n-1} + 3^{n-1}
n\in\mathbb N
\mathbf {Base}
\mathbf {Case}
5a_{n-1} - 6a_{n-2} + 2 = 1 + 2^{n-1} + 3^{n-1}
5a_{3-1} - 6a_{3-2} + 2 = 1 + 2^{3-1} + 3^{3-1}
5a_{2} - 6a_{1} + 2 = 1 + 2^{2} + 3^{2}
5(6) - 6(3) + 2 = 1 + 2^{2} + 3^{2}
14 = 14
\mathbf {Induction}
\mathbf {Hypothesis}
S(k) = a_k = 1 + 2^{k-1} + 3^{k-1}
5a_{k-1} - 6a_{k-2} + 2 = 1 + 2^{k-1} + 3^{k-1}
\mathbf {Inductive}
\mathbf {Step}
S(k+1) = a_{k+1} = 1 + 2^{k} + 3^{k}
5a_{k} - 6a_{k-1} + 2 = 1 + 2^{k} + 3^{k}
S(k+1)=1+2^{k-1}+3^{k+1}
