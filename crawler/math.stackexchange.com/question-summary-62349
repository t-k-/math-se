 \begin{eqnarray}   \cos(p-q) \cos(r-s) &=& \frac{1}{2}( \cos(p+s-q-r) + \cos(p+r - s-q)) \\   \cos(p+q) \cos(r-s) &=& \frac{1}{2}( \cos(p+s+q-r) + \cos(p+r - s+q)) \\   \cos(p-q) \cos(r+s) &=& \frac{1}{2}( \cos(p-s-q-r) + \cos(p+r +s-q)) \\   \cos(p+q) \cos(r+s) &=& \frac{1}{2}( \cos(p-s+q-r) + \cos(p+r +s + q)) \end{eqnarray}  
