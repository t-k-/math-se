 \begin{align} \sum_{k=1}^ne^{i2\theta k} &=e^{i2\theta}\frac{e^{i2\theta n}-1}{e^{i2\theta}-1}\\ &=e^{i(n+1)\theta}\frac{e^{i\theta n}-e^{-i\theta n}}{e^{i\theta}-e^{-i\theta}}\\ &=e^{i(n+1)\theta}\frac{\sin(n\theta)}{\sin(\theta)}\tag{1} \end{align} 
 \begin{align} \sum_{k=1}^n\cos(2\theta k) &=\frac{\cos((n+1)\theta)\sin(n\theta)}{\sin(\theta)}\\ &=\frac{\sin((2n+1)\theta)-\sin(\theta)}{2\sin(\theta)}\tag{2} \end{align} 
 1+2\sum_{k=1}^n\cos(2\theta k)=\frac{\sin((2n+1)\theta)}{\sin(\theta)}\tag{3} 
\begin{align*}\sum_{k=1}^n\cos(2\theta k)&=\operatorname{Re}\sum_{k=1}^n(e^{2i\theta})^k=\operatorname{Re}\left(\frac{e^{2i\theta(n+1)}-1}{e^{2i\theta}-1}-1\right)=\operatorname{Re}\frac{e^{2i\theta(n+1)}-e^{2i\theta}}{e^{i\theta}(e^{i\theta}-e^{-i\theta})}\\ &=\operatorname{Re}\frac{e^{2in\theta}-e^{i\theta}}{2i\sin\theta}=\operatorname{Re}\frac{\cos2n\theta+i\sin2n\theta-\cos\theta-i\sin\theta}{2i\sin\theta}\\ &=\operatorname{Re}\left(\frac{\sin2n\theta-\sin\theta}{2\sin\theta}+i\frac{\cos\theta-\cos2n\theta}{2\sin\theta}\right)=\frac{\sin2n\theta-\sin\theta}{2\sin\theta} \end{align*}
1+2\sum _{ k=1 }^{ n }{\cos{(2k\theta )} }=1+2\frac{\sin2n\theta-\sin\theta}{2\sin\theta}=\frac{\sin2n\theta}{\sin\theta}
