 \begin{align} (M-I)A &=(I-M+M^*)^{-1}(M-I)(J-F)\\\\ &=(I-M+M^*)^{-1}(M-M^*-I)(J-F)\\\\ &=F-J. \end{align} 
 H = (I-M+M^*)^{-1}(J-F)+{\bf 1}v^{\rm T} 
 v_i=\left((1-M+M^*)^{-1}(F-J)\right)_{ii}. 
 H\pi = (v^{\rm T}\pi){\bf 1} 
 \begin{align} v^{\rm T}\pi &= \sum_i\left((I-M+M^*)^{-1}(F-J)\right)_{ii}\pi_i\\\\ &= {\rm Tr}\left[(I-M+M^*)^{-1}(F-J)F^{-1}\right]\\\\ &= {\rm Tr}\left[(I-M+M^*)^{-1}(I-M^*)\right]. \end{align} 
 (H\pi)_i=\sum_{j=2}^n\frac{1}{1-\lambda_j}. 
