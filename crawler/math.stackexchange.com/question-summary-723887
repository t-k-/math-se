i=m
Lp_i \neq 0
 a_kx_n+a_{k-1}x_{n-1}+\cdots+a_0x_{n-k}=h[b_kf_n+b_{k-1}f_{n-1}+\cdots+b_0f_{n-k}] 
x_{n-k}=x(t_n-kh), f_{n-k}=f(t_n-kh)=x'(t_n-kh)
 
Lp_i=0 , 0\leq i \leq m
Lp_{m+1} \neq 0, 0 \leq i \leq m
p_i(t)=t^i
Lx=\sum_{i=0}^{k}{[a_ix(ih)-hb_ix'(ih)]}
Lx=\sum_{i=0}^{k}{[a_ip_i(ih)-hb_ip_i'(ih)]}
p_i(ih)=\sum_{j=0}^{\infty}{\frac{(ih)^j}{j!}p_i^{(j)}(0)}
=\sum_{i=0}^{k}{[a_i\sum_{j=0}^{\infty}{\frac{(ih)^j}{j!}\frac{i!}{(i-j)!}t^{i-j}|_{t=0}}-hb_i\sum_{j=0}^{\infty}{\frac{(ih)^j}{j!}\frac{i!}{(i-(j+1))!}t^{i-(j+1)}|_{t=0}}]}
=\sum_{i=0}^{k}{[a_it^i|_{t=0}+ih(a_ii-b_i)t^{i-1}|_{t=0}+\frac{i!}{(i-2)!}(a_i\frac{(ih)^2}{2!}-b_i\frac{(ih)^1}{1!})t^{i-2}|_{t=0}+\cdots}
\cdots+\frac{i!}{(i-m)!}(a_i\frac{(ih)^m}{m}-b_i\frac{(ih)^{m-1}}{(m-1)!})t^{i-m}|_{t=0}+\frac{i!}{(i-(m+1))!}(a_i\frac{(ih)^{m+1}}{m+1}-b_i\frac{(ih)^{m}}{(m)!})t^{i-(m+1)}|_{t=0}+\cdots
