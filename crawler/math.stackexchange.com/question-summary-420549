\displaystyle\binom{2n}{n}\sim\frac{4^n}{\sqrt{\pi n}}
\displaystyle\frac{c}{4^n}\binom{2n}{n}\sqrt{\pi n}\sim c
 \int_0^\infty xe^{-x^2/2}\,\mathrm{d}x=1\tag{1} 
 \int_{\mathbb{R_+^n}}x_1x_2\dots x_n\,e^{|x|^2/2}\,\mathrm{d}x=1\tag{2} 
 \int_{S_+^{n-1}}x_1x_2\dots x_n\,\mathrm{d}\sigma(x)=\Lambda_{n-1}\tag{3} 
 \begin{align} \int_{\mathbb{R_+^n}}x_1x_2\dots x_n\,e^{|x|^2/2}\,\mathrm{d}x &=\int_0^\infty\Lambda_{n-1}r^{2n-1}e^{-r^2/2}\,\mathrm{d}r\\ &=2^{n-1}\Lambda_{n-1}\Gamma(n)\tag{4} \end{align} 
 \Lambda_{n-1}=\frac1{2^{n-1}\Gamma(n)}\tag{5} 
 \begin{align} \frac{c^{2n}}{\sqrt{2n}}\int_{\mathbb{R_+^n}}|x|\,x_1x_2\dots x_n\,e^{|x|^2/(2c^2)}\,\mathrm{d}x &=\frac{c}{\sqrt{2n}}\int_{\mathbb{R_+^n}}|x|\,x_1x_2\dots x_n\,e^{|x|^2/2}\,\mathrm{d}x\\ &=\frac{c}{\sqrt{2n}}\int_0^\infty\Lambda_{n-1}r^{2n}e^{-r^2/2}\,\mathrm{d}r\\ &=\frac{c}{\sqrt{2n}}\frac{2^{n-1/2}\Gamma(n+1/2)}{2^{n-1}\Gamma(n)}\\ &=\frac{c}{4^n}\binom{2n}{n}\sqrt{\pi n}\tag{6} \end{align} 
