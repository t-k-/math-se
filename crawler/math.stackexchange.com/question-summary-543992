\def\i{\mathbf i}\i,-\i
v_1=\binom 1{-\i}
v_2=\binom1\i
\exp(tA)\cdot v_1=e^{t\i}v_1
\exp(tA)\cdot v_2=e^{-t\i}v_2
e_1,e_2
e_1=\frac12(v_1+v_2)
e_2=\frac\i2(v_1-v_2)
  \begin{align}  \exp(tA)\cdot e_1=\frac12(e^{t\i}v_1+e^{-t\i}v_2)  &=\frac{e^{t\i}+e^{-t\i}}2e_1+\frac{-\i e^{t\i}+\i e^{-t\i}}2e_2  \\&=\cos(t)e_1+\sin(t)e_2 \end{align} 
  \begin{align}  \exp(tA)\cdot e_2=\frac\i 2(e^{t\i}v_1-e^{-t\i}v_2)  &=\frac{\i e^{t\i}-\i e^{-t\i}}2e_1+\frac{ e^{t\i}+ e^{-t\i}}2e_2  \\&=-\sin(t)e_1+\cos(t)e_2. \end{align} 
 \exp(tA)=\begin{pmatrix}\cos(t)&-\sin(t)\\\sin(t)&\cos(t)\end{pmatrix}. 
