x(t) \in \mathbb{R}^2
t
\|x(t)\| = R = 40
t \ge 0
 \langle {\dot{x}(t) \over \|\dot{x}(t) \| }, \ddot{x}(t) \rangle = 1.8
t > 0
s(t) = \|\dot{x}(t)\|
\dot{s}(t) = \langle {\dot{x}(t) \over \|\dot{x}(t) \| }, \ddot{x}(t) \rangle  = 1.8
s(t) = 1.8t
\|x(t)\|^2
\langle x(t), \dot{x}(t) \rangle = 0 
\langle {x}(t), \ddot{x}(t) \rangle + \|\dot{x}(t)\|^2 = 0
\langle { {x}(t) \over \|x(t)\| }, \ddot{x}(t) \rangle= - { \|\dot{x}(t)\|^2 \over \|x(t)\| } = - { s(t)^2 \over R }
{ {x}(t) \over \|x(t)\| }
{\dot{x}(t) \over \|\dot{x}(t) \| }
\mathbb{R}^2
\|\ddot{x}(t)\| = \sqrt{(\langle { {x}(t) \over \|x(t)\| }, \ddot{x}(t) \rangle)^2 + ( \langle {\dot{x}(t) \over \|\dot{x}(t) \| }, \ddot{x}(t) \rangle  )^2}
\|\ddot{x}(t)\| = \sqrt{ (1.8)^2 + ({ s(t)^2 \over R } )^2 } 
s(t) = 1.8t
