v \neq 0
 \begin{align} \lVert x_2 - y \rVert &\leq R\\ \implies \lVert x_2 - y \rVert^2 &= ((x - y) - v) \cdot ((x - y) - v)\\                                  &= R^2 + \lVert v \rVert^2 - 2v \cdot (x - y)\\                                  &\leq R^2 \end{align} 
2v \cdot (x - y) \geq \lVert v \rVert^2 \geq 0
R^2 + \lVert v \rVert^2 + 2v \cdot (x - y) \geq R^2
\ast
 \begin{align} \lVert x_1 - y \rVert &\leq R\\ \implies \lVert x_1 - y \rVert^2 &= ((x - y) + v) \cdot ((x - y) + v)\\                                  &= R^2 + \lVert v \rVert^2 + 2v \cdot (x - y)\\                                  &\leq R^2 \end{align} 
\ast
R^2 + \lVert v \rVert^2 + 2v \cdot (x - y) = R^2
\lVert x_2 - y \rVert = \lVert x_2 - y \rVert = R
