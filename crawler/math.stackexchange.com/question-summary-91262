 \begin{align*} -u + v &= y_1\\ u + v &= y_2 \\ 2u + v &= y_3 \end{align*} 
 \begin{align*} u = y_3 - y_2 \\ v = 2y_2 - y_3 \\ y_1 -3y_2 + 2y_3 = 0  \end{align*} 
y_1, y_2, y_3
\left[ \begin{array}{ccc} 1 & -3 & 2 \\  \end{array} \right] * \left[ \begin{array}{ccc} y_1 \\ y_2 \\ y_3   \end{array} \right] = 0
