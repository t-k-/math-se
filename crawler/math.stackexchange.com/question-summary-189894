 \begin{align} s_u^2 &=\mathrm{E}\left[(cx+dy)^2\right]\\ &=c^2s_x^2+2cdR\,s_xs_y+d^2s_y^2\tag{1} \end{align} 
 \begin{align} s_v^2 &=\mathrm{E}\left[(cx-dy)^2\right]\\ &=c^2s_x^2-2cdR\,s_xs_y+d^2s_y^2\tag{2} \end{align} 
 s_u^2-s_v^2=4cdR\,s_xs_y\tag{3} 
 s_u^2+s_v^2=2c^2s_x^2+2d^2s_y^2\tag{4} 
 \begin{align}4s_u^2s_v^2 &=(2c^2s_x^2+2d^2s_y^2)^2-(4cd\,s_xs_y\,R)^2\\ &=(2c^2s_x^2-2d^2s_y^2)^2+(4cd\,s_xs_y)^2(1-R^2)\tag{5} \end{align} 
 \begin{align} 0 &=\mathrm{E}[uv]\\ &=c^2s_x^2-d^2s_y^2\tag{6} \end{align} 
 s_us_v=2cd\,s_xs_y\sqrt{1-R^2}\tag{7} 
\textrm{Cov}\left[u,v\right]=\textrm{E}\left[uv\right]=c^2s_x^2-d^2s_y^2=0
