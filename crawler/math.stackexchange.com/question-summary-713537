P(z) = (z-z_1)(z-z_2)...(z-z_n)
P'(z)/P(z) = 1/(z-z_1) + 1/(z-z_2) + ... + 1/(z-z_n)
P(z)
n=1
P(z) = (z-z_1)
P'(z) = 1
P'(z)/P(z) = 1/(z-z_1)
Q(z) = P(z)*(z-z_(K+1))
Q'(z) = (P'z)(z-z_(k+1))+P(z)(1)
Q'(z)/Q(z) = P'(z)/P(z)+1/(z-z_(k+1))
 P(z)=(z-z_1)(z-z_2)\dots(z-z_n)(z-z_{n+1}) 
 Q(z)=(z-z_1)(z-z_2)\dots(z-z_n) 
 P(z)=Q(z)\cdot(z-z_{n+1}). 
 P'(z)=Q'(z)\cdot(z-z_{n+1})+Q(z) 
 Q'(z)=Q(z)\left(\frac{1}{z-z_1} + \frac{1}{z-z_2} + \dots + \frac{1}{z-z_n}\right). 
 \frac{P'(z)}{P(z)} = \frac{Q(z)}{P(z)}\left(\frac{1}{z-z_1} + \frac{1}{z-z_2} + \dots + \frac{1}{z-z_n}\right)(z-z_{n+1})+\frac{Q(z)}{P(z)} 
 \frac{Q(z)}{P(z)}=\frac{1}{z-z_{n+1}} 
P(z) = \prod_{r=1}^n z - z_r
\begin{align} \exp(P'(z)/P(z)) &= \sqrt[dz]{dP} \\ &=  \sqrt[dz]{ \prod_{r=1}^n z - z_r}\\ &=  \prod_{r=1}^n \sqrt[dz]{ z - z_r } \\ &=  \prod_{r=1}^n\exp \frac{1}{ z - z_r} \\ \end{align}
\downarrow
\begin{align} P'(z)/P(z) &= \log\left(\prod_{r=1}^n \exp\frac{1}{ z - z_r}\right) \\ &= \sum_{r=1}^n \frac{1}{ z - z_r} \\ \end{align}
(\forall r)\,z_r
