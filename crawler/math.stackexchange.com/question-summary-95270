\begin{align*} 56A + 226B + 92C &= 10000\\ A + B + C &= 100 \end{align*}
\begin{align*} \left(\begin{array}{rrr|r} 56 & 226 & 92 & 10000\\ 1 & 1 & 1 & 100 \end{array}\right) &\to \left(\begin{array}{rrr|r} 1 & 1 & 1 & 100\\ 28 & 113 & 46 & 5000 \end{array}\right) &&\to \left(\begin{array}{rrr|r} 1 & 1 & 1 & 100\\ 0 & 85 & 18 & 2200 \end{array}\right)\\ &\to \left(\begin{array}{rrr|r} 1 & 1 & 1 & 100\\ 0 & 1 & \frac{18}{85} & \frac{440}{17} \end{array}\right) &&\to \left(\begin{array}{rrr|r} 1 & 0 & \frac{67}{85} & \frac{1260}{17}\\ 0 & 1 & \frac{18}{85} & \frac{440}{17} \end{array}\right). \end{align*}
