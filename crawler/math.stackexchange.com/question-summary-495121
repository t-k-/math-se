\forall x\in N:x^2=xx
\forall x,y\in N:x^{y+1}=x^y x
\forall x\in N:(x\ne 0 \implies x^1=x)
\forall x\in N:(x\ne 0 \implies x^0=1)
\forall x,y,z\in N:(x^{y+z}=x^y x^z) \implies 0^1=0 \land (0^0=0 \lor 0^0=1)
