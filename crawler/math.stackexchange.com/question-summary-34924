n \ge 0
u_n = p u_{n+1} + q u_{-1}
n \le 0
u_n = p u_1 + q u_{n-1}
u_n - u_{-1} = p (u_{n+1} - u_{-1})
n \ge 0
u_0 - u_{-1} = p^N (u_N - u_{-1}) = p^N (1 - u_{-1})
u_1 - u_{-1} = p^{N-1} (1 - u_{-1})
u_n - u_1 = q (u_{n-1} - u_1)
n \le 0
u_0 - u_1 = q^k (u_k - u_1) = - q^k u_1
u_{-1} - u_1 = - q^{k-1} u_1
u_{0} = \frac{p^N q (1 - q^k)}{p q^k + p^N q - p^N q^k}
