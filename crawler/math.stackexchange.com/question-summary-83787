\begin{align*} L(1) &= \frac{\partial}{\partial x}1 + \frac{\partial}{\partial y}1= 0 + 0\\ &=0\cdot 1 + 0 x + 0x^2 + 0y + 0xy + 0 y^2,\\ L(x) &= =\frac{\partial}{\partial x}x + \frac{\partial}{\partial y}0 = 1 + 0\\ &=1\cdot 1 + 0 x + 0x^2 + 0y + 0xy + 0 y^2,\\ L(x^2) &= \frac{\partial}{\partial x}x^2 + \frac{\partial}{\partial y}x^2 = 2x + 0\\ &= 0\cdot 1 +2x + 0x^2 + 0y + 0xy + 0y^2,\\ L(y) &= \frac{\partial}{\partial x}y + \frac{\partial}{\partial y}y = 0+1\\ &= 1\cdot 1 + 0x + 0x^2 + 0y + 0xy + 0y^2,\\ L(xy) &= \frac{\partial}{\partial x}xy + \frac{\partial}{\partial y}xy= y+x\\ &= 0\cdot 1 + 1 x + 0x^2 + 1y + 0xy + 0y^2,\\ L(y^2) &= \frac{\partial}{\partial x}y^2 + \frac{\partial}{\partial y}y^2 = 0 + 2y\\ &= 0\cdot 1 + 0x + 0x^2 + 2y + 0xy + 0y^2. \end{align*}
