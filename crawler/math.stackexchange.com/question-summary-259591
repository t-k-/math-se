 \begin{align} \mathbb{E}[W] &= \mathbb{E}[\max(T,V)|V \leq T]\mathbb{P}[V \leq T] &+& \mathbb{E}[\max(T,V)|T \leq V]\mathbb{P}[T \leq V] \\  &= \mathbb{E}[\max(T,V)|V \leq T]\frac{\mu}{\lambda+\mu} &+& \mathbb{E}[\max(T,V)| T \leq V]\frac{\lambda}{\lambda+\mu} \end{align} 
 \begin{align} \mathbb{E}[W] &= \mathbb{E}[T|\text{An arrival from }\min(T,V)\text{ has occured}]\frac{\mu}{\lambda+\mu} + \mathbb{E}[V|\text{An arrival from }\min(T,V) \text{ has occured}]\frac{\lambda}{\lambda+\mu} \\  &= (\mathbb{E}[T]+\mathbb{E}[\min(T,V)])\frac{\mu}{\lambda+\mu} + (\mathbb{E}[V]+\mathbb{E}[\min(T,V)])\frac{\lambda}{\lambda+\mu} \\ &=(\frac{1}{\lambda}+\frac{1}{\lambda+\mu})\frac{\mu}{\lambda+\mu} + (\frac{1}{\mu}+\frac{1}{\lambda+\mu})\frac{\lambda}{\lambda+\mu} \end{align} 
