X_i = \sum_{j=1}^i \frac{1}{j}
i>1
\sum_{j=1}^{i-1} X_j = iX_i - i
i
i=2
\sum_{j=1}^{2-1}X_j = 2X_2-2
\sum_{j=1}^{2-1}X_j = X_1 = 1
2X_2-2 = 2(1+1/2)-2=1
\sum_{j=1}^{i-1}X_j = iX_i-i
\sum_{j=1}^{(i+1)-1}X_j = (i+1)X_{i+1}-(i+1)
\sum_{j=1}^iX_j=(i+1)X_{i+1}-i-1.\tag{1}
(1)
\begin{align*} \sum_{j=1}^iX_j &= \sum_{j=1}^{i-1}X_j + X_i\\ &= iX_i - i + X_i\tag{by the induction hypothesis}\\ &= (i+1)X_i - i.\tag{2} \end{align*}
(2)
