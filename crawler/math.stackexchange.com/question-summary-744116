h_n(x) = \left\{ 	\begin{array}{ll} 		-K_n(-x+\frac{3}{2^{n+1}})^{\frac{2^n}{3}}+\frac{5}{2^{2n+1}}  & \mbox{if } \frac{1}{2^n} \leq x \leq \frac{3}{2^{n+1}} \\ 		K_n(x-\frac{3}{2^{n+1}})^{\frac{2^n}{3}} & \mbox{if } \frac{3}{2^{n+1}} \leq x \leq \frac{1}{2^{n-1}} 	\end{array} \right.
K_n=3.2^{\frac{2^n}{3}(n+1)-2n-1}
h(x)= \left\{ 	\begin{array}{lll} 		0  & \mbox{if } x =0 \\ 		h_n(x) & \mbox{if } \frac{1}{2^n} \leq x \leq \frac{1}{2^{n-1}}, n=2,3,\cdots \\                 x-\frac{1}{4} &\mbox{if } x\geq \frac{1}{2}	 \end{array} \right.
h'(0)
h'(0)= \lim_{x \to 0}\frac{h(x)}{x}
h(x)
h_n
