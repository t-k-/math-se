G\sqcup_0 H
i:G\sqcup_0 H\rightarrow G\sqcup H
\phi:G\sqcup H\rightarrow G\sqcup_0 H
\phi_1=\phi\circ i_1
\phi_2=\phi\circ i_2
i_1=i\circ \phi_1
i_2=i\circ \phi_2
\phi\circ i=id_{G\sqcup H}
i\circ \phi=id_{G\sqcup_0 H}
\phi\circ i=1_{G\sqcup H}
i\circ\phi=1_{G\sqcup_O H}
G\sqcup H
f:G\sqcup_O H\to G\sqcup_O H
f\circ \phi_1=\phi_1
f\circ \phi_2=\phi_2
\small \hom(G \sqcup H,K) = \hom(G,K) \times \hom(H,K) = \hom(G,K) \times_{\hom(0,K)} \hom(H,K) = \hom(G \sqcup_0 H,K)
