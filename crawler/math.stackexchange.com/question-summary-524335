a+b+c=0;a^2+b^2+c^2=1
a^4+b^4+c^4
a^4+b^4+c^4 = 2(a^2b^2 + 1)
a+b+c = 0
(a^2+b^2+c^2) = 1
(a^2+b^2+c^2)^2 = 1^2 = 1
(a^4+b^4+c^4)+2(a^2b^2+b^2c^2+c^2a^2) = 1.................(1)
(a+b+c)^2 = 0
\displaystyle 1+2(ab+bc+ca) = 0\Rightarrow (ab+bc+ca) = -\frac{1}{2}
\displaystyle (ab+bc+ca)^2  = \frac{1}{4}
\displaystyle (a^2b^2+b^2c^2+c^2a^2)+2abc(a+b+c) = \frac{1}{4}\Rightarrow (a^2b^2+b^2c^2+c^2a^2) = \frac{1}{4}
(1)
\displaystyle (a^4+b^4+c^4)+2\cdot \frac{1}{4} = 1\Rightarrow (a^4+b^4+c^4) = \frac{1}{2}
a+b+c=0\Rightarrow c=-(a+b)
1=a^2+b^2+(a+b)^2=2a^2+2ab+2b^2=2(a^2+ab+b^2)\Rightarrow a^2+ab+b^2=\frac12
\begin{align*} a^4+b^4+c^4 &= a^4+b^4+(a^4+4a^3b+6a^2b^2+4ab^3+b^4)\\ &= 2(a^4+2a^3b+3a^2b^2+2ab^3+b^4)\\ &= 2(a^2(a^2+ab+b^2)+b^2(a^2+ab+b^2)+ab(a^2+ab+b^2))\\ &= a^2+ab+b^2=\frac12 \end{align*}
