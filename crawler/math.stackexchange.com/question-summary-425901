 \begin{eqnarray} (k+1)^3 & + & 0^3 & + & (2k+1)^3 & = & (3k+1)^2 (k+1) & + & (3k+1)0 & + & (2k+1) \\ k^3 & + & 0^3 & + & (2k+1)^3 & = & (3k+2)^2k & + & (3k+2)0 & + & (2k+1) \\ (5k+1)^3 & + & (4k+2)^3 & + & (6k+2)^3 & = & (9k+3)^2(5k+1) & + & (9k+3)(4k+2) & + & (6k+2) \\ (7k+5)^3 & + & (2k+1)^3 & + & (6k+4)^3 & = & (9k+6)^2(7k+5) & + & (9k+6)(2k+1) & + & (6k+4)\\ \end{eqnarray} 
