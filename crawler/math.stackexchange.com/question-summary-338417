 \begin{align*} a_{n + 1} &= a_n + b_n + c_n + d_n \\ b_{n + 1} &= a_n + c_n + d_n \\ c_{n + 1} &= a_n + b_n + d_n \\ d_{n + 1} &= a_n + b_n + c_n + d_n  \end{align*} 
