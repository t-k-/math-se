 \begin{align*} A(z) &= \sum_{n \ge 0} a_n z^n \\ B(z) &= \sum_{n \ge 0} b_n z^n \\ C(z) &= \sum_{n \ge 0} c_n z^n \\ D(z) &= \sum_{n \ge 0} d_n z^n \end{align*} 
 \begin{align*} \frac{A(z) - 1}{z} &= A(z) + B(z) + C(z) + D(z) \\ \frac{B(z) - 1}{z} &= A(z) + C(z) + D(z) \\ \frac{C(z) - 1}{z} &= A(z) + B(z) + D(z) \\ \frac{D(z) - 1}{z} &= A(z) + B(z) + C(z) + D(z) \end{align*} 
