\begin{align*} (1-x)^n+(1+x)^n &= \sum_{k=0}^n\binom{n}k (-1)^kx^k + \sum_{k=0}^n \binom{n}k x^k\\ &= \sum_{k=0}^n\binom{n}k \left((-1)^k+1\right)x^k\\ &= 2\sum_{k=0}^{\lfloor n/2\rfloor}\binom{n}{2k}x^{2k}\\ &< 2\sum_{k=0}^{\lfloor n/2\rfloor}\binom{n}{2k}\tag{1}\\ &= 2\cdot 2^{n-1}\tag{2}\\ &= 2^n, \end{align*}
