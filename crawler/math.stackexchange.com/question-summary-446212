r>0
B(x_0, r) \subset R^n
u \in C^{\infty}_{0}(B(x_0, 2r))
u = 1 \text{ on } \overline{B(x_0, r)} 
 |\nabla u| \leq \frac{2}{r}
h \in C^\infty_0(B(x_0, 2r)) 
h(x) = 1
x \in B(x_0, r)
h(x) = 0
B(x_0, 2r) 
 x_0 =0 
 f(t)=e^{1+\frac{3}{t}} 
 g(t)= f(t-4) 
 g(t)=1 \;\; 0 \leq t \leq 1 
 g(t)=0 \;\; t>4 
 |g'(t)| \leq \frac{1}{2} 
 \eta(x) = g(\frac{|x|^2}{r^2}) 
 \eta \in C^{\infty}(R^n) 
 \eta(x)= 1 \; \; on \; B(0,r) 
 \eta(x) =0 \; \; on \; R^n- B(0,2r) 
 |\nabla \eta(x) | \leq \frac{2}{r} 
