1
\cos(\theta) = \dfrac{\left( x_t - x_c, y_t - y_c\right) \cdot \left( x_a - x_c, y_a - y_c\right)}{\sqrt{\left( x_t - x_c, y_t - y_c\right) \cdot \left( x_t - x_c, y_t - y_c\right)}}
\cos(\theta) = \dfrac{\left( x_t - x_c \right) \left( x_a - x_c \right)+ \left( y_t - y_c \right) \left( y_a - y_c \right)}{\sqrt{\left( x_t - x_c \right)^2 + \left( y_t - y_c\right)^2}}
\cos(\theta) = \dfrac{\left( x_t - x_c, y_t - y_c\right) \cdot \left( x_a - x_c, y_a - y_c\right)}{\sqrt{\left( x_t - x_c \right)^2 + \left( y_t - y_c\right)^2}\sqrt{\left( x_a - x_c \right)^2 + \left( y_a - y_c \right)^2}}
