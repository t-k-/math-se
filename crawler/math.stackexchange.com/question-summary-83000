 \begin{eqnarray*}   p_M(N) &=& p_M(N) - p_M(M) \\   &=& \sum_{i=0}^n c_iN^i - \sum_{i=0}^n c_iM^i\\   &=& \sum_{i=1}^n c_i(N^i- M^i)\\ \end{eqnarray*} 
 \begin{eqnarray*}   p_M(N) &=& \sum_{i=1}^n c_iQ_i(N-M) \\   &=& \left[\sum_{i=1}^n c_iQ_i\right](N-M)  \end{eqnarray*} 
