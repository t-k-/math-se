 {\Bbb P}(S=k+1|O)=\frac{{\Bbb P}(S=k+1\ \hbox{and}\ O)}{{\Bbb P}(O)}
 =\frac{{\Bbb P}(O|S=k+1){\Bbb P}(S=k+1)}{{\Bbb P}(O|S=k+1){\Bbb P}(S=k+1)+{\Bbb P}(O|S=k){\Bbb P}(S=k)}. 
 {\Bbb P}(S=k+1|O)=\frac{P(O|S=k+1)}{P(O|S=k+1)+P(O|S=k)}.\qquad(1) 
 {\Bbb P}(O|S=k)=\frac{n+1-k}{n+1},\qquad(2) 
 {\Bbb P}(O|S=k+1)=\frac{k+1}{n+1}.\qquad(3) 
 {\Bbb P}(S=k+1|O)=\frac{k+1}{n+2}. 
