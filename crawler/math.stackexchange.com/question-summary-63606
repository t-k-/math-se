\begin{align} \frac{\sqrt{x} - 1}{x-1} & = \frac{\sqrt{x} - 1}{x-1}\frac{\sqrt{x} + 1}{\sqrt{x} + 1} \\ & = \frac{(\sqrt{x} - 1)(\sqrt{x} + 1)}{(x-1)(\sqrt{x} + 1)} \\ & = \frac{x - 1}{(x-1)(\sqrt{x} + 1)} \\ & = \frac{1}{\sqrt{x} + 1}. \end{align}
