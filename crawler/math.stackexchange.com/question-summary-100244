\begin{align*} S_n &= \sum_{i=0}^{2^n-1}f(y_i)\Delta x = \sum_{i=0}^{2^{n-1}-1}f(y_i)\Delta x + \sum_{i=2^{n-1}}^{2^n-1}f(y_i)\Delta x\\ &= \frac{2a}{n}\sum_{i=0}^{2^{n-1}-1}f(y_i) + \frac{2a}{n}\sum_{i=2^{n-1}}^{2^n-1}f(y_i)\\ &=\frac{2a}{n}\left( \sum_{i=0}^{2^{n-1}-1}f(-y_{2^n-i-1}) + \sum_{i=2^{n-1}}^{2^n-1}f(y_i)\right)\\ &= \frac{2a}{n}\left( -\sum_{i=0}^{2^{n-1}-1}f(y_{2^n-i-1}) + \sum_{i=2^{n-1}}^{2^n-1}f(y_i)\right) \end{align*}
