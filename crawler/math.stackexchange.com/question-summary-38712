 \begin{eqnarray} (AB)_{ik} &=& \sum_ja_{ij}b_{jk}\\ &=& \sum_j\alpha_{i-j}\beta_{j-k} \end{eqnarray} 
 \begin{eqnarray} (BA)_{ik} &=& \sum_jb_{ij}a_{jk}\\ &=& \sum_j\beta_{i-j}\alpha_{j-k} \;. \end{eqnarray} 
