\begin{array}{ll} \chi_{{\rm Ind}W}(C) & =\frac{1}{|C|}\sum_{c\in C}\chi_{{\rm Ind}W}(c) \\ & = \frac{1}{|C|}\sum_{c\in C}\sum_{t\in T}\chi_W(t^{-1}ct) \\ & =\frac{1}{|C|}\sum_{c\in C}\frac{1}{|H|}\sum_{\ell=1}^{|H|}\sum_{t\in T_{\Large\ell}}\chi_W(t^{-1}ct) \\ & = \frac{1}{|C||H|}\sum_{c\in C}\sum_{g\in G}\chi_W(g^{-1}cg) \\ & =\frac{1}{|H||C|}\sum_{i=1}^r\chi_W(D_i)\cdot\#\{(c,g,x)\in C\times G\times D_i:g^{-1}cg=x\} \\ & =\frac{1}{|H||C|}\sum_{i=1}^r\chi_W(D_i)\sum_{\substack{g\in G \\ x\in D_{\large i}}}\underbrace{\#\{c\in C:c=gxg^{-1}\}}_{=1} \\ & =\frac{|G|}{|H|}\sum_{i=1}^r\frac{|D_i|}{|C|}\chi_W(D_i).\end{array}
