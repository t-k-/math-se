y'' - 2zy' +\lambda y = 0
y(z) = \sum_{n = 0}^{\infty}a_nz^n
\sum_{n = 0}^{\infty}(n(n-1) - 2z^2n+\lambda z^2)a_nz^n=0
\therefore n(n-1)a_n - 2(n-2)a_{n-2}+\lambda a_{n-2} = 0
y = \sum_{n = 0}^{\infty}a_nz^n = \sum_{n = 2}^{\infty}a_{n-2}z^{n-2}
y' = \sum_{n = 1}^{\infty}na_nz^{n-1} = \sum_{n = 2}^{\infty}(n-1)a_{n-1}z^{n-2}
y'' = \sum_{n = 2}^{\infty}n(n-1)a_nz^{n-2}
\sum_{n = 2}^{\infty}[n(n-1)a_n-2(n-1)a_{n-1}z + \lambda a_{n-2}]z^n = 0
\implies n(n-1)a_n-2(n-1)a_{n-1}z + \lambda a_{n-2} = 0
a_{n-1} = 0
a_n = \frac{2(n-2) -\lambda}{n(n-1)}a_{n-2}
n >=2
 \eqalign{y &= \sum_{n=0}^\infty a_n z^n = a_0 + a_1 z + a_2 z^2 + \ldots \cr             y' &= \sum_{n=1}^\infty n a_n z^{n-1} = a_1 + 2 a_2 z + 3 a_3 z^2 + \ldots \cr                        z y' &= \sum_{n=1}^\infty n a_n z^n = a_1 z + 2 a_2 z^2 + \ldots \cr             y'' &= \sum_{n=2}^\infty n (n-1) a_n z^{n-2} = 2 a_2 + 6 a_3 z + 12 a_4 z^2 + \ldots \cr                 &= \sum_{n=0}^\infty (n+2)(n+1) a_{n+2} z^n\cr     y'' - 2 z y' + \lambda y &= \sum_{n=0}^\infty \left( (n+2)(n+1) a_{n+2} - 2 n a_n + \lambda a_n\right) z^n \cr    &= (2 a_2 + \lambda a_0) + (6 a_3 + (-2+\lambda) a_1) z + (12 a_4 + (-4 + \lambda) a_2) z^2 + \ldots \cr}
\sum_{n = 2}^{\infty}[n(n-1)a_n-2(n-2)a_{n-2} + \lambda a_{n-2}]z^{n-2} = 0
\implies n(n-1)a_n-2(n-2)a_{n-2} + \lambda a_{n-2} = 0
