\begin{align} \sum_{k = 0}^n10^k &= 1 + \sum_{i = 1}^Q10^{(i - 1)(p - 1)}(10^1 + 10^2 + \dotsb + 10^{p - 1}) + 10^{Q(p - 1)}(10^1 + 10^2 + \dotsb + 10^R)\\ &\equiv 1 + \sum_{i = 1}^Q\frac{p(p - 1)}{2} + (10^1 + 10^2 + \dotsb + 10^R)\\ &\equiv \sum_{k = 0}^R10^k \pmod{p}. \end{align}
