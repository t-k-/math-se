x_u = ( -r\sin(u)\cos(v), -r\sin(u)\sin(v), r\cos(u)),
x_v = ( -(R + r\cos(u))\sin(v), (R + r\cos(u))\cos(v), 0),
x_{uu} = ( -r\cos(u)\cos(v), -r\cos(u)\sin(v), -r\sin(u)),
x_{uv} = ( r\sin(u))\sin(v), -r\sin(u))\cos(v), 0),
x_{vv} = ( -(R + r\cos(u))\cos(v), -(R + r\cos(u))\sin(v), 0).
E=x_u\cdot x_u=r^2, F=x_u\cdot x_v=0, G=x_v\cdot x_v=(R + r\cos(u))^2,
n=\frac{u\times v}{\|u\times v\|}=( -\cos(u)\cos(v), -\cos(u)\sin(v), -\sin(u)).
e=x_{uu}\cdot n=r, f=x_{uv}\cdot n=0, g=x_{vv}\cdot n=(R + r\cos(u))\cos(u).
K=\frac{eg-f^2}{EG-F^2}=\frac{\cos(u)}{r(R + r\cos(u))}, H=\frac{eG+Eg-2fF}{EG-F^2}=\frac{R + 2r\cos(u)}{r(R + r\cos(u))}.
