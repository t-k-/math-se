z = x^2 + y^2
\frac{\partial z}{\partial x}
y=c
f(x, y)
\frac{\partial z}{\partial y}
x=c
f(x, y)
\frac{\partial z}{\partial x}
\frac{\partial z}{\partial y}
 z_x = \left(1, 0, \frac{\partial z}{\partial x} \right) 
 z_y = \left(0, 1, \frac{\partial z}{\partial y} \right) 
z_x \times z_y
\mathbf{S} = \mathbf{S}(u,v)
z=f(x,y)
u=x
v=y
\mathbf{S}(x,y) = (x, y, z(x,y))
 \mathbf{N} = \frac{\partial \mathbf{S}}{\partial u} \times              \frac{\partial \mathbf{S}}{\partial v} 
