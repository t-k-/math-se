 P(A|C)={P(C\cap A)\over P(C)}={P(A\cap C)\over P(C)}={P(A)P(C| A)\over P(C)}. 
\eqalign{P(t1^+\cup t2^+|C^+)&={P(( t1^+\cup t2^+)\cap C+)\over P(C^+)}\cr & ={P( ( t1^+\cap C^+)\cup  (t2^+\cap C^+))\over P(C^+)}\cr &={P(  t1^+\cap C^+)+P (t2^+\cap C^+)- P (t2^+\cap t1^+\cap C^+)     \over P(C^+) }\cr &={P(  t1^+\cap C^+)  \over P(C^+) } +{P (t2^+\cap C^+)  \over P(C^+) } -{ P (t2^+\cap t1^+\cap C^+)     \over P(C^+) }\cr  &={P(  t1^+| C^+)+P (t2^+| C^+)- P (t2^+\cap t1^+| C^+) .      }  }
