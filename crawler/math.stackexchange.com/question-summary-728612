\begin{align} \mathrm{Hom}_{\mathcal{C}}(X, Z^{A+B}) & \cong \mathrm{Hom}_{\mathcal{C}}((A+B) \times X, Z) \\  & \cong \mathrm{Hom}_{\mathcal{C}}(X \times (A+B), Z) \\  & \cong \mathrm{Hom}_{\mathcal{C}}(A+B, Z^X) \\  & \cong \mathrm{Hom}_{\mathcal{C}}(A, Z^X) \times \mathrm{Hom}_{\mathcal{C}}(B, Z^X) \\  & \cong \mathrm{Hom}_{\mathcal{C}}(X \times A, Z) \times \mathrm{Hom}_{\mathcal{C}}(X \times B, Z) \\  & \cong \mathrm{Hom}_{\mathcal{C}}(A \times X, Z) \times \mathrm{Hom}_{\mathcal{C}}(B \times X, Z) \\  & \cong \mathrm{Hom}_{\mathcal{C}}(X, Z^A) \times \mathrm{Hom}_{\mathcal{C}}(X, Z^B) \\  & \cong \mathrm{Hom}_{\mathcal{C}}(X, Z^A \times Z^B) \end{align}
