\begin{align*} E(X) & = \sum_{a\in\mathscr{A}} a\cdot \text{Pr}[X=a]\\  & = \sum_{a\in\mathscr{A}} ~~a\left(\sum_{\omega\in[X=a]} \text{Pr}[\omega]\right)\\  & = \sum_{a\in\mathscr{A}} ~~~~\sum_{\omega\in[X=a]} a\cdot \text{Pr}[\omega]\\  & = \sum_{a\in\mathscr{A}}~~~~~ \sum_{\omega\in[X=a]} X(\omega)\text{Pr}[a]\\ & = \sum_{\omega\in\Omega} X(\omega)\text{Pr}[\omega] \end{align*}   
