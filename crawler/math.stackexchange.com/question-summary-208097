x_3=x_4
d(x_1,x_4)\le d(x_1,x_2)+d(x_2,x_3)+d(x_3,x_4)
\begin{align*} d(x_1,x_4)&\le d(x_1,x_2)+d(x_2,x_3)+d(x_3,x_4)\\ &=\le d(x_1,x_2)+d(x_2,x_3)+d(x_3,x_3)\\ &=\le d(x_1,x_2)+d(x_2,x_3)+0\\ &=\le d(x_1,x_2)+d(x_2,x_3)\;, \end{align*}
