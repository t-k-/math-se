\mathcal A
\sigma
n \in \mathcal N, A_n \in \mathcal A,
\liminf_{n\to\infty}A_n\in\mathcal A
\limsup_{n\to\infty}A_n\in\mathcal A
\mathcal A
\sigma
\displaystyle Q_n=\cap_{m\geq n}A_{m}\in \mathcal A\forall n
\displaystyle \liminf_{n\to\infty} A_n = \cup_{n=1}^{\infty}Q_n\Rightarrow\liminf_{n\to\infty}A_n\in\mathcal A
\mathcal A
\displaystyle \limsup_{n\to\infty}A_n=\left(\liminf_{n\to\infty}A^{c}_n\right)^{c}\Rightarrow \limsup_{n\to\infty}A_n\in\mathcal A
\blacksquare
