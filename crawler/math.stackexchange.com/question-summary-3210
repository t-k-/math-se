1 = \sqrt{1} = \sqrt{(-1)(-1)} = \sqrt{\sqrt{-1}^2\sqrt{-1}^2} = \sqrt{(\sqrt{-1}\sqrt{-1})^2} = \sqrt{-1}\sqrt{-1} = \sqrt{-1}^2 = -1
i = \sqrt{-1}
i^2 = -1
\sqrt{-9} = \sqrt{9 * (-1)} = \sqrt{\sqrt{9}^2 \sqrt{-1}^2} = \sqrt{(\sqrt{9} \sqrt{-1})^2} = \sqrt{9} \sqrt{-1} = 3i
{(xi)}^2 = x^2i^2 = -x^2 = -9
x^2 = 9
x = +- 3
-1 = {\sqrt{-1}}^2
-1 = (+-\sqrt{-1})^2
\sqrt{i^4} = i^2
\sqrt{i^4} = \sqrt{i} = +-(1/\sqrt{2})(1 + i)
