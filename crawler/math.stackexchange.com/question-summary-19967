 \begin{eqnarray} \varphi(x)   &=& \frac{1}{x} \sum_{n=1}^{\infty} \frac{n^{n-1}}{n!}\left(xe^{-x}\right)^{n} \\   &=& -\frac{1}{x} \sum_{n=1}^{\infty} \frac{(-n)^{n-1}}{n!}\left(-xe^{-x}\right)^{n} \\   &=& -\frac{1}{x} W_0\left(-xe^{-x}\right), \end{eqnarray} 
 \begin{eqnarray} \varphi(t)   &=& -\frac{1}{t}W_0\left(-te^{-t}\right) \\   &=& -\frac{1}{t}(-t) \\   &=& 1. \end{eqnarray} 
 -(1+t)e^{-(1+t)} = \frac{-(1+t)}{1+t+\frac{1}{2}t^2+O(t^3)} = -1 + \frac{1}{2}t^2+O(t^3) = -(1-t)e^{-(1-t)}, 
 \begin{eqnarray} \varphi(1+t) &=& -\frac{1}{1+t}W_0(-(1+t)e^{-(1+t)}) \\ &\approx& -\frac{1}{1+t}W_0(-(1-t)e^{-(1-t)}) \\ &=& \frac{1-t}{1+t} \\ &=& 1 - 2t + O(t^2). \end{eqnarray} 
 \lim_{t\rightarrow 0}\frac{\varphi(1+t) - \varphi(t)}{t} = \lim_{t\rightarrow 0}\frac{(1-2t) - 1}{t} = -2. 
