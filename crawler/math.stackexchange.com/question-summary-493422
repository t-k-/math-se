 \begin{aligned} \mathbb{E} [X] &= \sum_{x=0}^\infty x f(x) \\ &= \sum_{x=0}^\infty \frac{x \pi \lambda_1^x e^{-\lambda_1}}{x!} + \frac{x (1-\pi) \lambda_2^x e^{-\lambda_2}}{x!} \\ &= \sum_{x=0}^\infty \frac{\pi \lambda_1^x e^{-\lambda_1}}{(x-1)!} + \frac{(1-\pi) \lambda_2^x e^{-\lambda_2}}{(x-1)!} \\ &= \pi e^{-\lambda_1} \sum_{x=0}^\infty \frac{\lambda_1^x}{(x-1)!} + (1-\pi) e^{-\lambda_2} \sum_{x=0}^\infty \frac{\lambda_2^x}{(x-1)!} \\ &= \pi e^{-\lambda_1} \lambda_1 e^{\lambda_1} + (1-\pi) e^{-\lambda_2} \lambda_2 e^{\lambda_2} \\ &= \pi \lambda_1 + (1 - \pi) \lambda_2 \end{aligned} 
 \begin{aligned} M(t) &= \sum_{x=0}^\infty e^{xt} f(x) \\ &= \sum_{x=0}^\infty e^{xt}  \left(  \frac{\pi \lambda_1^x e^{-\lambda_1}}{x!} + \frac{(1-\pi) \lambda_2^x e^{-\lambda_2}}{x!}  \right) \\ &= \pi e^{-\lambda_1} \sum_{x=0}^\infty \frac{e^{xt} \lambda_1^x}{x!} + (1-\pi) e^{-\lambda_2} \sum_{x=0}^\infty \frac{e^{xt} \lambda_2^x}{x!} \\ &= \pi e^{-\lambda_1} \sum_{x=0}^\infty \frac{(\lambda_1 e^t)^x}{x!} + (1-\pi) e^{-\lambda_2} \sum_{x=0}^\infty \frac{(\lambda_2 e^t)^x}{x!} \\ &= \pi e^{-\lambda_1} e^{\lambda_1 e^t} + (1-\pi) e^{-\lambda_2} e^{\lambda_2 e^t} \\ &= \pi e^{\lambda_1 e^t -\lambda_1} + (1-\pi) e^{\lambda_2 e^t -\lambda_2}\\ \\ \mathbb{E}[X] &= M'(0) \\ &= \frac{d}{dt} \pi e^{\lambda_1 e^t -\lambda_1} + (1-\pi) e^{\lambda_2 e^t -\lambda_2} \\ &= \pi e^{\lambda_1 e^t -\lambda_1} (\lambda_1 e^t + \lambda_1) + (1-\pi) e^{\lambda_2 e^t -\lambda_2} (\lambda_2 e^t + \lambda_2)\\ & ... \text{since } t = 0 \\ &= \pi (\lambda_1\color{red}{ + 1}) + (1-\pi) (\lambda_2\color{red}{ + 1}) \end{aligned}  
