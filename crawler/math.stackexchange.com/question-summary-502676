 \begin{align} \frac4{\sin^2(2x)}-\frac1{\sin^2(x)} &=\frac{4-4\cos^2(x)}{4\sin^2(x)\cos^2(x)}\\ &=\frac{4\sin^2(x)}{4\sin^2(x)\cos^2(x)}\\ &=\frac1{\cos^2(x)}\tag{2} \end{align} 
 \begin{align} \sum_{k=1}^n\frac{4^{-k}}{\cos^2(2^{-k}x)} &=\sum_{k=1}^n\left(\frac{4^{-k+1}}{\sin^2(2^{-k+1}x)}-\frac{4^{-k}}{\sin^2(2^{-k}x)}\right)\\ &=\frac1{\sin^2(x)}-\frac{4^{-n}}{\sin^2(2^{-n}x)}\\ &\to\frac1{\sin^2(x)}-\frac1{x^2}\tag{3} \end{align} 
 \lim_{n\to\infty}\frac{4^{-n}}{\sin^2(2^{-n}x)}=\frac1{x^2}\tag{4} 
\prod_{k\geq 1} \cos\left(\frac{x}{2^k}\right)=\frac{\sin x}{x}\Rightarrow \prod_{k\geq 1} \sec\left(\frac{x}{2^k}\right)=\frac{x}{\sin x}\Rightarrow\sum_{k\geq 1} \ln \sec\left(\frac{x}{2^k}\right)=\ln x-\ln \sin x
