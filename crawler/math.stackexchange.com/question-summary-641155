 \require{cancel} \begin{align} 1-S &= 1-(1-1+1-1...) \\ S &= 1-S \\ &= 1-1-S \\ &= 1-1-1-S \\ &= \cancel{-\infty} \text{A very big negative number} - S \\ \text{let N be the very big negative number:} \\ -N-S &= S \\ -N &= 2S \\ S &= -N \end{align} 
