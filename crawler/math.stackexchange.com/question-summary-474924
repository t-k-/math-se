\bbox[5px,border:2px solid grey]{\text{Inner Product or Row 
 Column :}}
\mathbf{AB} = \left[\begin{matrix}  \vec{A_1} \\ \vdots \\ \vec{A_i} \\ \vdots \\ \vec{A_m} \end{matrix}\right]_{m \times n} \left[\vec{B_1} \cdots \vec{B_i} \cdots \vec{B_p}\right]_{n \times p}
= \left[\begin{matrix} \vec{A_1}\cdot\vec{B_1} & \cdots & \vec{A_1}\cdot\vec{B_j} & \cdots & \vec{A_1} \cdot \vec{B_p} \\ \vdots & \cdots & \vdots &  \cdots & \vdots \\ \vec{A_i}\cdot\vec{B_1} & \cdots & \vec{A_i}\cdot\vec{B_j} & \cdots & \vec{A_i}\cdot \vec{B_p} \\ \vdots & \cdots & \vdots &  \cdots & \vdots \\ \vec{A_m}\cdot\vec{B_1} & \cdots & \vec{A_m}\cdot\vec{B_j} & \cdots & \vec{A_m} \cdot\vec{B_p} \\ \end{matrix}\right]
\quad \color{Green}{\text{(I)}}
