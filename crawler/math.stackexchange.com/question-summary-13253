 \begin{align} \max(a,b,c) &=\frac{a}{2}\left(\frac{|c-a|+|a-b|}{|a-b|+|b-c|+|c-a|}\right)\\ &+\frac{b}{2}\left(\frac{|a-b|+|b-c|}{|a-b|+|b-c|+|c-a|}\right)\\ &+\frac{c}{2}\left(\frac{|b-c|+|c-a|}{|a-b|+|b-c|+|c-a|}\right)\\ &+\frac{|a-b|+|b-c|+|c-a|}{4}\tag{7} \end{align} 
 \begin{align} \min(a,b,c) &=\frac{a}{2}\left(\frac{|c-a|+|a-b|}{|a-b|+|b-c|+|c-a|}\right)\\ &+\frac{b}{2}\left(\frac{|a-b|+|b-c|}{|a-b|+|b-c|+|c-a|}\right)\\ &+\frac{c}{2}\left(\frac{|b-c|+|c-a|}{|a-b|+|b-c|+|c-a|}\right)\\ &-\frac{|a-b|+|b-c|+|c-a|}{4}\tag{8} \end{align} 
