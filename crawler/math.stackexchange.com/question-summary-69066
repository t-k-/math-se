\begin{align*} X_p\langle Y_p, Z_p \rangle_g & = X^*_p\langle Y^*_p, Z^*_p \rangle_{\overline{g}} \\ & = \overline{\nabla}_{X^*}\langle Y^*, Z^* \rangle_{\overline{g}}(p) \\ & = \langle (\overline{\nabla}_{X^*}Y^*)(p), Z^*_p\rangle_{\overline{g}} + \langle Y^*_p, (\overline{\nabla}_{X^*}Z^*)(p)\rangle_{\overline{g}} \\ & = \langle (\overline{\nabla}_{X^*}Y^*)(p)^\top + (\overline{\nabla}_{X^*}Y^*)(p)^\perp, Z_p \rangle_{\overline{g}} + \langle Y_p, (\overline{\nabla}_{X^*}Z^*)(p)^\top + (\overline{\nabla}_{X^*}Z^*)(p)^\perp \rangle_{\overline{g}} \\ & = \langle (\nabla_XY)(p), Z_p \rangle_g  + \langle Y_p, (\nabla_XZ)(p)\rangle_g, \end{align*}
