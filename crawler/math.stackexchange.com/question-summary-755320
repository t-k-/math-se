\langle (u_1,v_1),(u_2,v_2)\rangle=\langle u_1,u_2\rangle+\langle v_1,v_2\rangle+i\langle v_1,u_2\rangle-i\langle u_1,v_2\rangle
\bf{\text{real inner product}}
V
\langle\cdot, \cdot\rangle:V\times V\to \mathbb{C}
\langle u, u\rangle \geq 0
u\in V
u = 0
\langle u, v\rangle = \langle v, u\rangle
u,v\in V
\langle k u,v\rangle = k \langle u,v\rangle
k\in\mathbb{R}, u,v\in V
\bf{\text{complex inner product}}
W
\langle\cdot, \cdot\rangle:W\times W\to \mathbb{C}
\langle x, x\rangle \geq 0
x\in W
x = 0
\langle x, y\rangle = \overline{\langle y, x\rangle}
x,y\in W
\langle \alpha x,y\rangle = \alpha \langle x,y\rangle
\alpha\in\mathbb{C}, x,y\in W
