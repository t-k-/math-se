 \begin{eqnarray*} V &=&\int_{0}^{\pi }\left( \int_{0}^{2a\sin \theta }\left( 2a-r\right) \,r\,dr\right) \,d\theta \tag{4}  \\ &=&\int_{0}^{\pi }\left. ar^{2}-\frac{1}{3}r^{3}\right\vert _{0}^{2a\sin \theta }\,d\theta  \\ &=&a\int_{0}^{\pi }\left( 2a\sin \theta \right) ^{2}\,d\theta -\frac{1}{3} \int_{0}^{\pi }\left( 2a\sin \theta \right) ^{3}\,d\theta  \\ &=&2a^{3}\pi -\frac{32}{9}a^{3}=\left( 2\pi -\frac{32}{9}\right) a^{3}, \end{eqnarray*} 
 \begin{eqnarray*} \int_{0}^{\pi }\sin ^{2}\theta \,d\theta  &=&\int_{0}^{\pi }\frac{1-\cos 2\theta }{2}\,d\theta =\frac{\pi }{2},\tag{4a} \\ \int_{0}^{\pi }\sin ^{3}\theta \,d\theta  &=&\int_{0}^{\pi }\frac{3\sin \theta -\sin 3\theta }{4}\,d\theta =\frac{4}{3}.\tag{4b} \end{eqnarray*} 
