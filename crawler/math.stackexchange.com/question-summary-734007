\begin{align}(a^2-b^2)+(c^2-d^2)&\ge((a-b)+(c-d))^2\\ (a-b)(a+b)+(c-d)(c+d)&\ge(a-b)^2+(c-d)^2+2(a-b)(c-d)\\ (a-b)(a+b-(a-b))+(c-d)(c+d-(c-d)&\ge2(a-b)(c-d)\\ (a-b)b+(c-d)d&\ge(a-b)(c-d)\\ (a-b)(b-c+d)+(c-d)d&\ge0\end{align}
