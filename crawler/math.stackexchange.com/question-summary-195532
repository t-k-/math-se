 \begin{align} \frac{\sqrt{6-x}-2}{\sqrt{3-x}-1} &=\frac{\color{#C00000}{\sqrt{6-x}-2}}{\color{#00A000}{\sqrt{3-x}-1}} \frac{\color{#C00000}{\sqrt{6-x}+2}}{\color{#C00000}{\sqrt{6-x}+2}} \frac{\color{#00A000}{\sqrt{3-x}+1}}{\color{#00A000}{\sqrt{3-x}+1}}\\ &=\color{#C00000}{\frac{(6-x)-4}{\sqrt{6-x}+2}} \color{#00A000}{\frac{\sqrt{3-x}+1}{(3-x)-1}}\\ &=\frac{\color{#00A000}{\sqrt{3-x}+1}}{\color{#C00000}{\sqrt{6-x}+2}} \frac{\color{#C00000}{2-x}}{\color{#00A000}{2-x}}\\ &=\frac{\sqrt{3-x}+1}{\sqrt{6-x}+2}\tag{1} \end{align} 
 \begin{align} \lim_{x\to2}\frac{\sqrt{6-x}-2}{\sqrt{3-x}-1} &=\lim_{x\to2}\frac{\sqrt{3-x}+1}{\sqrt{6-x}+2}\\ &=\frac12\tag{2} \end{align} 
