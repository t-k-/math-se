 \text{slope}=\frac{n\sum _{i=1}^n x_iy_i-\sum _{i=1}^n x_i \sum_{i=1}^n y_i}{\sum_{i=1}^n x_i^2-\left(\sum_{i=1}^n x_i\right){}^2} 
 \text{intercept}=\frac{\sum _{i=1}^n y_i \sum _{i=1}^n x_i^2-\sum_{i=1}^n x_i\sum _{i=1}^n x_iy_i}{n\sum _{i=1}^n x_i^2-\left(\sum_{i=1}^n x_i\right){}^2} 
 \text{correlation coefficient} =\frac{\left(n\sum_{i=1}^n x_iy_i-\sum _{i=1}^n x_i \sum _{i=1}^n y_i\right){}^2}{\left(n\sum_{i=1}^n x_i^2-\left(\sum _{i=1}^n x_i\right){}^2\right)\left(n\sum_{i=1}^n y_i^2-\left(\sum _{i=1}^n y_i\right){}^2\right)} 
