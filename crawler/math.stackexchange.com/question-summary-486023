A_1, A_2, A_3
A_1\cup A_2
A_3
|A_1\cup A_2|
A_1\cap A_3
A_2\cap A_3
 |A_1\cup A_2| = |A_1|+|A_2|-|A_1\cap A_2| 
 |A_1\cup A_2\cup A_3|=|(A_1\cup A_2)\cup A_3| 
 |(A_1\cup A_2)\cup A_3|=|A_1\cup A_2| + |A_3|-|(A_1\cup A_2)\cap A_3| 
\begin{align} |A_1\cup A_2\cup A_3|&=|A_1\cup A_2| + |A_3|-|(A_1\cup A_2)\cap A_3|\\  &=|A_1|+|A_2|-|A_1\cap A_2|+ |A_3|-|(A_1\cup A_2)\cap A_3|\\  &=|A_1|+|A_2|+ |A_3|-|A_1\cap A_2|-|(A_1\cup A_2)\cap A_3| \end{align}
 |A_1\cup A_2\cup A_3|=|A_1|+|A_2|+ |A_3|-|A_1\cap A_2|-|(A_1\cap A_3)\cup (A_2\cap A_3)| 
\begin{align} |(A_1\cap A_3)\cup (A_2\cap A_3)|&=|A_1\cap A_3|+|A_2\cap A_3|-|(A_1\cap A_3)\cap (A_2\cap A_3)|\\ &=|A_1\cap A_3|+|A_2\cap A_3|-|A_1\cap A_2\cap A_3| \end{align}
\begin{align} |A_1\cup A_2\cup A_3|=&\phantom{-}|A_1|+|A_2|+ |A_3|\\ &-|A_1\cap A_2|-|A_1\cap A_3|-|A_2\cap A_3|\\ &+|A_1\cap A_2\cap A_3| \end{align}
 |A_1\cup A_2\cup A_3| = \sum_{1\le i\le 3}|A_i|-\sum_{1\le i < j\le 3}|A_i\cap A_j|+\sum_{1\le i < j < k\le 3}|A_i\cap A_j\cap A_k| 
n
n=2
 \text{Let }J_{n, k}=\sum_{1\le i_1<i_2<\cdots<i_k\le n}|A_{i_1}\cap A_{i_2}\cap\dots\cap A_{i_k}| 
 |A_1\cup A_2\cup\dots\cup A_n|=\sum_{k=1}^n(-1)^{k+1}J_{n, k} 
 |A_1\cup A_2\cup\dots\cup A_n\cup A_{n+1}|=\sum_{k=1}^{n+1}(-1)^{k+1}J_{n+1, k} 
