k = \lbrace k_{i_1 \dots i_s, j_1 \dots j_r} \rbrace \in \mathbb R^{n^{r+s}},
g_{ab} : U_a \cap U_b \rightarrow GL(n^{r+s})
T_{r,s} := \bigsqcup_{p \in M} (T_p M)_{r,s} = \bigsqcup_{p \in M} \big( \underbrace{T_p M \otimes \dots \otimes T_p M}_r \otimes \underbrace{T^*_p M \otimes \dots \otimes T^*_p M}_s \big).
 \left\lbrace \dfrac{\p}{\p x^{i_1}_a} \otimes \dots \otimes \dfrac{\p}{\p x^{i_s}_a} \otimes dx^{j_1}_a \otimes \dots \otimes dx^{j_r}_a \right\rbrace_{i_1 \dots i_s \in \lbrace 1 \dots n \rbrace \atop j_1 \dots j_r \in \lbrace 1 \dots n \rbrace} .
 \chi_a \left(\sum k_{i_1 \dots i_s, j_1 \dots j_r} \dfrac{\p}{\p x^{i_1}_a} \otimes \dots \otimes \dfrac{\p}{\p x^{i_s}_a} \otimes dx^{j_1}_a \otimes \dots \otimes dx^{j_r}_a \right) :=  \left( p , k \right),
\chi_a \circ \chi_b^{-1} (p,k) = (p,g_{ab} k),
