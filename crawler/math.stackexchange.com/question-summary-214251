(w,x,y,z)
  w^2 + x^2 + y^2 + z^2 = 1. 
 w^2 + x^2 = y^2 + z^2 = \frac{1}{2}.   
 w^2 + x^2 \leq \frac{1}{2}, \; y^2 + z^2 = 1 - w^2 - x^2. 
 y^2 + z^2 \leq \frac{1}{2}, \; w^2 + x^2 = 1 - y^2 - z^2. 
 w^2 + x^2 \leq \frac{1}{2}, \; y^2 + z^2 \geq \frac{1}{2}  
 w^2 + x^2 \geq \frac{1}{2}, \; y^2 + z^2 \leq \frac{1}{2}.  
