\begin{eqnarray*} H_n(x) &=& \frac{n!}{2\pi i} \oint_\gamma d t\, \frac{e^{2tx -t^2}}{t^{n+1}} \\ &=& \frac{n!}{2\pi i} \sum_{k=0}^\infty \frac{(2x)^k}{k!}  \sum_{l=0}^\infty \frac{(-)^l}{l!} \oint_\gamma d t\, t^{2l+k-n-1}. \end{eqnarray*}
H_n(x) = n! \sum_{k=0 \atop n-k\ \mathrm{even}}^\infty (-)^{\frac{n-k}{2}} \frac{(2x)^k}{k!(\frac{n-k}{2})!}.
\begin{equation} H_n(x) = n! \sum_{l=0}^{\lfloor \frac{n}{2}\rfloor} (-)^l \frac{(2x)^{n-2l}}{l!(n-2l)!},\tag{1} \end{equation}
