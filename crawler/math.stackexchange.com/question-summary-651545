\begin{align}3^x - 5^y &\equiv (-1)^{x} - 1 \mod 4\\ z^2 &\equiv  (-1)^x - 1 \mod{4}\\ &\equiv \begin{cases} 0 & \text{$x$ even,}\\ 2 & \text{$x$ odd}\end{cases} \end{align}
