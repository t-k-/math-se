\DeclareMathOperator{\Spec}{Spec}
X = \Spec R
U \subset X
g\colon \Spec A_j \to X
(\Spec A_j, \mathscr{O}_{\Spec A_j}) \to (U, \mathscr{O}_X|_U)
f \in R
D(f) \subset U
g
\varphi\colon R \to A_j
g(\mathfrak{p}) = \varphi^{-1}(\mathfrak{p})
g^{-1}(D(f)) = D(\varphi(f)) = D(f_j)
g
(D(f_j), \mathscr{O}_{\Spec A_j}|_{D(f_j)}) \to (D(f), \mathscr{O}_X|_{D(f)})
\Spec (A_j)_{f_j} \to \Spec R_f
