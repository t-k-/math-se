x_1 = (2/3)x_1'  + (1/3)x_2'
x_2 = (1/3)x_1' - (1/3)x_2'
\langle x,y\rangle   = x_1'y_1' + x_2'y_2' = x'^ty'
y_1 = (2/3)y_1' + (1/3)y_2'
y_2 = (1/3)y_2' - (1/3)y_2'
