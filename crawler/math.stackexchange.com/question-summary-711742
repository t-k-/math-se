 \begin{align} 1+\frac{2x}{k}&\le e^{\large\frac{2x}{k}}\tag{2}\\ \left(1+\frac{2x}{k}\right)^{\large\frac k2}&\le e^{x}\tag{3}\\ \left(1+\frac{2x^2}{k}\right)^{\large\frac k2}&\le e^{x^2}\tag{4}\\ |x|^ke^{-x^2}&\le\left(\frac k2\right)^{\large\frac k2}\tag{5} \end{align} 
 \begin{align} |x|^{k+2}e^{-x^2}&\le\left(\frac k2+1\right)^{\large\frac k2+1}\tag{6}\\ |x|^ke^{-x^2}&\le\frac1{x^2}\left(\frac k2+1\right)^{\large\frac k2+1}\tag{7} \end{align} 
 \begin{align} \int_{-\infty}^\infty|x|^ke^{-x^2}\,\mathrm{d}x &=2\int_0^\infty|x|^ke^{-x^2}\,\mathrm{d}x\tag{8}\\ &=2\int_0^1|x|^ke^{-x^2}\,\mathrm{d}x +2\int_1^\infty|x|^ke^{-x^2}\,\mathrm{d}x\tag{9}\\ &\le2\int_0^1\left(\frac k2\right)^{\large\frac k2}\,\mathrm{d}x +2\int_1^\infty\frac1{x^2}\left(\frac k2+1\right)^{\large\frac k2+1}\,\mathrm{d}x\tag{10}\\ &\le2\left(\frac k2\right)^{\large\frac k2}+2\left(\frac k2+1\right)^{\large\frac k2+1}\tag{11}\\[9pt] &\lt\infty\tag{12} \end{align} 
