\bm{P}
\newcommand{\bm}[1]{\mathbf{#1}} \bm{P} \bm{A} = \bm{L} \bm{U} 
 \bm{P} = \left( \begin{matrix} 1 & 0 & 0 \\ 0 & 0 & 1 \\ 0 & 1 & 0 \end{matrix} \right) . 
\bm{A}
\bm{P} = \bm{P}^{-1}
 \bm{A} = \bm{P}^{-1} \bm{L} \bm{U} = \bm{P L U} 
